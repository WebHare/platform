<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.deploy.diffs" library="diffs.whlib">

  <screen name="peerchangeswarning" gid=".deploymodule">
    <actions>
      <action name="reviewchanges" onexecute="doreviewchanges" />
    </actions>

    <body>
      <text valuetid=".modulehaspeerchanges" />
      <panel height="1pr" />
    </body>

    <footer>
      <line layout="right">
        <button action="reviewchanges" />
        <button tid="~yes" tolliumresult="yes" />
        <button tid="~no" tolliumresult="no" />
      </line>
    </footer>
  </screen>

  <screen name="reviewremotetolocaldiff" width="80x" height="20x" allowresize="true" footerbuttons="close" gid=".reviewdiffs">
    <actions>
      <action name="showdiff">
        <enableon source="files" min="1" onexecute="doshowdiff" />
      </action>
      <action name="showfulldiff" onexecute="doshowfulldiff" />
    </actions>

    <body>
      <grid height="1pr">
        <col width="1pr" />
        <col />
        <row height="1pr">
          <cell>
            <list name="files" height="1pr" emptytid=".nodifferences" openaction="showdiff" selectmode="single">
              <column name="path" type="text" />
              <column name="status" type="text" />
            </list>
          </cell>
          <cell>
            <button width="1pr" action="showdiff" />
            <button width="1pr" action="showfulldiff" />
          </cell>
        </row>
      </grid>
    </body>
  </screen>

  <screen name="reviewmodulepeerchanges" width="80x" height="20x" allowresize="true" footerbuttons="close" gid=".reviewdiffs">
    <actions>
      <action name="showdiff">
        <enableon source="files" min="1" onexecute="doshowdiff" />
      </action>
      <action name="showfulldiff" onexecute="doshowfulldiff" />
    </actions>

    <body>
      <grid height="1pr">
        <col width="1pr" />
        <col />
        <row height="1pr">
          <cell>
            <list name="files" height="1pr" openaction="showdiff" selectmode="single">
              <column name="path" type="text" />
              <column name="status" type="text" />
            </list>
          </cell>
          <cell>
            <button width="1pr" action="showdiff" />
            <button width="1pr" action="showfulldiff" />
          </cell>
        </row>
      </grid>
    </body>
  </screen>

  <screen name="modulefilediff" width="120x" height="30x" allowresize="true" gid=".modulefilediff" title="">
    <body spacers="none">
      <codeedit name="diff" height="1pr" />
    </body>

    <footer>
      <grid>
        <cell width="1pr">
          <checkbox name="ignorewhitespace" labeltid=".ignorewhitespace" onchange="gotchange" title="" />
        </cell>
        <cell>
          <defaultformbuttons buttons="close" />
        </cell>
      </grid>
    </footer>
  </screen>

  <screen name="reviewincomingcommits"
          width="80x"
          height="20x"
          allowresize="true"
          footerbuttons="close"
          gid=".reviewincomingcommits"
          savestate="size">
    <compositions>
      <record name="commit" />
    </compositions>

    <body>
      <split type="vertical">
        <part height="2pr">
          <list name="commits" height="1pr" borders="top left right" onselect="onselect" selectmode="single" sortable="false">
            <column name="date" type="datetime" width="15x" precision="minutes" />
            <column name="id" type="text" width="15x" />
            <column name="author" type="text" width="1pr" />
            <column name="message" type="text" width="3pr" />
          </list>
        </part>
        <part height="1pr">
          <text composition="commit" cellname="author" />
          <textedit composition="commit" cellname="id" width="1pr" enabled="false" />
          <datetime composition="commit" cellname="date" type="datetime" precision="minutes" readonly="true" />
          <panel height="1pr" layout="left">
            <textarea composition="commit" cellname="message" height="1pr" enabled="false" title="" />
          </panel>
        </part>
      </split>
    </body>
  </screen>

</screens>
