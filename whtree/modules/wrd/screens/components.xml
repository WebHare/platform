<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:wrd="http://www.webhare.net/xmlns/wrd/components"
         gid="components">

  <fragment name="quickfilter" gid=".quickfilter" lib="components/quickfilter.whlib">
    <actions>
      <action name="searchfree" frameflags="can_search_free" onexecute="dosearchfree" />
    </actions>
    <contents>
      <line>
        <select name="freeattr" type="pulldown" defaultbutton="btn_searchfree" onchange="onselectfreeattr" />
        <textedit name="freevalue" width="30x" defaultbutton="btn_searchfree" />
        <button name="btn_searchfree" action="searchfree" hinttid=".searchhint" tid="~search" />
      </line>
    </contents>
  </fragment>

  <fragment name="gender" lib="components/gender.whlib">
    <contents>
      <select name="gender" type="pulldown" rowkeytype="integer">
        <option rowkey="0" invalidselection="true" title="" />
        <option rowkey="1" tid="wrd:common.gender.male" />
        <option rowkey="2" tid="wrd:common.gender.female" />
        <option rowkey="3" tid="wrd:common.gender.other" />
      </select>
    </contents>
  </fragment>

  <fragment name="domaintagedit" lib="components/domaintagedit.whlib">
    <contents>
      <tagedit name="tagedit" width="1pr" title="">
        <autosuggest name="autosuggest" suggestobjectname="mod::wrd/lib/components/domaintagedit.whlib#domaintagsautosuggest" />
      </tagedit>
    </contents>
  </fragment>

  <fragment name="entitiesedit" gid=".entitylist" lib="components/entitylist.whlib">
    <actions>
      <forward name="add" action="entities->add" tid="~add" />
      <forward name="edit" action="entities->edit" tid="~edit" />
      <forward name="delete" action="entities->delete" tid="~delete" />
    </actions>
    <contents>
      <listedit name="entities" ongetchildren="dogetchildren" onrowedit="dorowedit" rowkeytype="entityid" />
    </contents>
  </fragment>

  <fragment name="entitylist" gid=".entitylist" lib="components/entitylist.whlib">
    <contents>
      <list name="entities" ongetchildren="dogetchildren" rowkeytype="entityid" />
    </contents>
  </fragment>

  <fragment name="arraybox" gid=".arraybox" lib="components/arraybox.whlib">
    <contents>
      <box name="mybox" height="1pr" title="">
        <arrayedit name="listobj" height="1pr" onrowedit="editrow" />
      </box>
    </contents>
  </fragment>

  <fragment name="tolliumwrdaddressfield" lib="components/addressfield.whlib">
    <actions>
      <action name="changeaction" onexecute="changeaddress" title="" />
    </actions>
    <contents>
      <inlineblock name="block" height="3gr" tid=".addressfield">
        <grid height="1pr">
          <cell width="1pr">
            <textarea name="addressfield"
                      width="1pr"
                      height="1pr"
                      minwidth="30x"
                      defaultbutton="changebutton"
                      enabled="false"
                      hiderequiredifdisabled="false"
                      title="" />
          </cell>
          <cell>
            <button name="changebutton" action="changeaction" tid="~edit" />
          </cell>
        </grid>
      </inlineblock>
    </contents>
  </fragment>

  <fragment name="addressvalidation" gid=".addressvalidation" lib="components/addressvalidation.whlib">
    <contents>
      <select name="validationtype" type="pulldown" onchange="ontypeselected">
        <option rowkey="" tid=".validationtype-default" />
        <option rowkey="-none-" tid=".validationtype-none" />
        <divider />
      </select>
      <tabs name="validationsettings" type="server">
        <tab name="nosettings" title="" />
      </tabs>
    </contents>
  </fragment>

  <tabsextension name="pdoksettings"
                 gid=".addressvalidation.pdok"
                 implementation="lib"
                 lib="internal/addressverification/pdok.whlib">
    <actions>
      <windowopenaction name="showmoreinfo" onwindowopen="doshowmoreinfo" title="" />
    </actions>
    <newtab>
      <panel layout="left">
        <text valuetid=".description" wordwrap="true" />
        <text action="showmoreinfo" valuetid="components.addressvalidation.moreinfo" wordwrap="true" />
      </panel>
    </newtab>
  </tabsextension>

  <tabsextension name="fallbacksettings"
                 gid=".addressvalidation.fallback"
                 implementation="lib"
                 lib="internal/addressverification/fallback.whlib">
    <newtab>
      <panel layout="left">
        <text valuetid=".description" wordwrap="true" />
      </panel>
    </newtab>
  </tabsextension>

  <tabsextension name="postcodeapisettings"
                 gid=".addressvalidation.postcodeapi"
                 implementation="lib"
                 lib="internal/addressverification/postcodeapi.whlib">
    <actions>
      <windowopenaction name="showmoreinfo" onwindowopen="doshowmoreinfo" title="" />
    </actions>
    <newtab>
      <panel layout="left">
        <text valuetid=".description" wordwrap="true" />
        <text action="showmoreinfo" valuetid="components.addressvalidation.moreinfo" wordwrap="true" />
      </panel>
      <textedit name="apikey" required="true" />
    </newtab>
  </tabsextension>

  <tabsextension name="webservicessettings"
                 gid=".addressvalidation.webservices"
                 implementation="lib"
                 lib="internal/addressverification/webservices_nl.whlib">
    <actions>
      <windowopenaction name="showmoreinfo" onwindowopen="doshowmoreinfo" title="" />
    </actions>
    <newtab>
      <panel layout="left">
        <text valuetid=".description" wordwrap="true" />
        <text action="showmoreinfo" valuetid="components.addressvalidation.moreinfo" wordwrap="true" />
      </panel>
      <textedit name="login" required="true" />
      <textedit name="password" password="true" required="true" />
    </newtab>
  </tabsextension>

  <tabsextension name="postcodenlsettings"
                 gid=".addressvalidation.postcodenl"
                 implementation="lib"
                 lib="internal/addressverification/postcode_nl.whlib">
    <actions>
      <windowopenaction name="showmoreinfo" onwindowopen="doshowmoreinfo" title="" />
    </actions>
    <newtab>
      <panel layout="left">
        <text valuetid=".description" wordwrap="true" />
        <text action="showmoreinfo" valuetid="components.addressvalidation.moreinfo" wordwrap="true" />
      </panel>
      <textedit name="apikey" width="1pr" required="true" />
      <textedit name="secret" width="1pr" password="true" required="true" />
      <line layout="left">
        <checkbox name="fullsubscription" labeltid=".fullsubscription" title="" />
      </line>
    </newtab>
  </tabsextension>

</screens>
