<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:wrd="http://www.webhare.net/xmlns/wrd/components"
         library="sisow.whlib"
         gid="tolliumapps.payments.sisow">

  <tabsextension name="configsisow" implementation="lib">
    <actions>
      <action name="connect" onexecute="doconnect" />
    </actions>
    <compositions>
      <record name="methodsettings" />
    </compositions>
    <insert position="providertab" where="atend">
      <textedit composition="methodsettings" name="merchantid" cellname="merchantid" required="true" />
      <textedit composition="methodsettings" name="merchantsecret" cellname="merchantsecret" required="true"/>
      <button action="connect" />
      <checkbox composition="methodsettings" cellname="testmode" title="" labeltid="tolliumapps.payments.common.testmode" name="testmode" />
      <select composition="methodsettings" cellname="methods" type="checkbox" height="1pr" name="methods" gid="tolliumapps.payments.common" rowkeytype="string" />
    </insert>
  </tabsextension>

  <screen name="payinfo" title="">
    <body>
      <text name="transactionid" />
<!--       <text name="orderid" selectable="true" />
      <text name="paymentid" selectable="true" />
      <text name="paymentmethod" />
      <text name="brand" />
      <text name="status" />
      <text name="ncerror" />
 -->    </body>
  </screen>

</screens>
