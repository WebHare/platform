<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:wrd="http://www.webhare.net/xmlns/wrd/components"
         library="mollie.whlib"
         gid="tolliumapps.payments.mollie">

  <tabsextension name="configmollie" implementation="lib">
    <actions>
      <action name="connect" onexecute="doconnect" />
    </actions>
    <compositions>
      <record name="methodsettings" />
    </compositions>
    <insert position="providertab" where="atend">
      <textedit composition="methodsettings" cellname="apikey" required="true" name="apikey" />
      <line layout="left">
        <checkbox composition="methodsettings" cellname="webhooks" name="webhooks" />
      </line>
      <button action="connect" />
      <select type="checkbox" height="1pr" name="methods" gid="tolliumapps.payments.common" rowkeytype="string" />
    </insert>
  </tabsextension>

  <screen name="payinfo" title="">
    <body>
      <textedit name="paymentid" enabled="false" />
      <textedit name="status" enabled="false" />
    </body>
  </screen>

</screens>
