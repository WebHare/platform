<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="tolliumapps.payments.multisafepay"
         library="multisafepay.whlib">

  <tabsextension name="configmultisafepay" implementation="lib">
    <actions>
      <action name="connect" onexecute="doconnect" tid="tolliumapps.payments.common.connect" />
    </actions>
    <compositions>
      <record name="methodsettings" />
    </compositions>
    <insert position="providertab" where="atend">
      <textedit composition="methodsettings" cellname="apikey" name="apikey" required="true" />
      <button action="connect" />
      <select composition="methodsettings" cellname="testmode" name="testmode" type="radio">
        <option rowkey="test" />
        <option rowkey="live" />
      </select>
      <select name="methods" type="checkbox" height="1pr" gid="tolliumapps.payments.common" rowkeytype="string" />
    </insert>
  </tabsextension>

  <screen name="payinfo" title="">
    <body>
      <text name="rawstatus" />
    </body>
  </screen>

</screens>
