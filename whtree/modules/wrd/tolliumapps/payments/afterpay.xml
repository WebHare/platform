<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.payments.afterpay" library="afterpay.whlib">

  <tabsextension name="configafterpay" implementation="lib">
    <compositions>
      <record name="methodsettings" />
    </compositions>
    <insert position="providertab" where="atend">
      <textedit composition="methodsettings" cellname="methodtitle" name="methodtitle" tid="~title" />
      <textedit composition="methodsettings" cellname="merchantid" name="merchantid" required="true" />
      <textedit composition="methodsettings"
                cellname="portfolioid"
                name="portefeuilleid"
                required="true"
                tid=".portefeuilleid"
                valuetype="integer" />
      <textedit composition="methodsettings" cellname="password" name="password" required="true" tid="~password" />
      <select composition="methodsettings" cellname="afterpaytype" name="afterpaytype" type="radio">
        <option rowkey="" title="B2C invoice NL" />
        <option rowkey="BE" title="B2C invoice BE" />
      </select>
      <checkbox composition="methodsettings"
                cellname="testmode"
                name="testmode"
                labeltid="tolliumapps.payments.common.testmode"
                title="" />
    </insert>
  </tabsextension>

  <screen name="payinfo" title="">
    <body>
    </body>
  </screen>

</screens>
