<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:wrd="http://www.webhare.net/xmlns/wrd/components"
         gid="tolliumapps.payments.commondialogs"
         library="commondialogs.whlib">

  <screen name="paymentproviders" width="120x" height="15x" allowresize="true" footerbuttons="close" savestate="size">
    <actions>
      <action name="addprovider" onexecute="doadd" tid="~add" />
      <action name="editprovider" onexecute="doedit" tid="~edit">
        <enableon source="providers" min="1" max="1" />
      </action>
      <action name="changetype" onexecute="dochangetype">
        <enableon source="providers" min="1" max="1" />
      </action>
      <action name="deleteprovider" onexecute="dodelete" tid="~delete">
        <enableon source="providers" min="1" max="1" />
      </action>
    </actions>

    <menus>
      <menu name="selectcontextmenu">
        <item action="editprovider" />
        <divider />
        <item action="deleteprovider" />
      </menu>
    </menus>

    <body>
      <grid height="1pr">
        <col width="1pr" />
        <col />
        <row height="1pr">
          <cell>
            <list name="providers"
                  width="1pr"
                  height="1pr"
                  minheight="8x"
                  ongetrows="GetProviders"
                  openaction="editprovider"
                  selectcontextmenu="selectcontextmenu"
                  selectmode="single"
                  rowkeytype="entityid">
              <column name="title" type="text" tid="~title" />
              <column name="type" type="text" />
              <column name="tag" type="text" />
            </list>
          </cell>
          <cell>
            <button width="1pr" action="addprovider" />
            <button width="1pr" action="editprovider" />
            <button width="1pr" action="deleteprovider" />
            <spacer height="1gr" />
            <button width="1pr" action="changetype" />
          </cell>
        </row>
      </grid>
    </body>
  </screen>

  <screen name="selectpaymentprovider" footerbuttons="ok cancel">
    <body>
      <select name="methods" type="pulldown" />
    </body>
  </screen>

  <screen name="paymentprovider">
    <actions>
      <helpaction name="helpaction" title="" />
    </actions>

    <compositions>
      <wrd:entity name="provider" />
    </compositions>

    <body spacers="none">
      <tabs name="providertabs" type="regular" height="1pr">
        <tab name="providertab" tid=".generic">
          <textedit composition="provider" cellname="wrd_tag" width="1pr" tid="~tag" />
        </tab>
      </tabs>
    </body>

    <footer>
      <grid>
        <cell width="1pr">
          <button name="helpbutton" action="helpaction" tid="~help" />
        </cell>
        <cell>
          <defaultformbuttons buttons="ok cancel" />
        </cell>
      </grid>
    </footer>
  </screen>

  <screen name="paymentinfo" flags="canmanagepayments ispending" footerbuttons="close">
    <actions>
      <action name="recheckpayment" frameflags="canmanagepayments" onexecute="dorecheckpayment" />
      <action name="cancelpayment" frameflags="canmanagepayments ispending" onexecute="docancelpayment" />
    </actions>

    <body>
      <grid height="1pr">
        <cell width="1pr">
          <text name="amountpayable" />
          <text name="paymentstatus" />
          <text name="paymentreference" />
          <text name="paymentdate" />
          <text name="paymentprovider" />
          <heading name="paymentdetails" />
          <panel name="paymentinfo" />
        </cell>
        <cell>
          <button width="1pr" action="recheckpayment" />
          <button width="1pr" action="cancelpayment" />
        </cell>
      </grid>
    </body>
  </screen>

  <screen name="pendingpayments" width="70x" height="14x" allowresize="true" footerbuttons="close" savestate="size">
    <actions>
      <action name="openpaymententity" onexecute="doopenpaymententity">
        <enableon source="pendingpayments" min="1" />
      </action>
    </actions>

    <body>
      <grid height="1pr">
        <cell width="1pr">
          <list name="pendingpayments" height="1pr" ongetrows="ongetpendingpayments" selectmode="single">
            <column name="creationdate" type="datetime" width="22x" precision="seconds" storeutc="true" tid=".paymentdate" />
            <column name="paymententity" type="integer" width="12x" />
            <column name="paymentref" type="text" tid=".paymentreference" />
            <column name="paymentoptiontag" type="text" />
            <column name="amountpayable" type="money" width="10x" align="right" decimals="2" />
            <column name="status" type="text" />
          </list>
        </cell>
        <cell>
          <button width="1pr" action="openpaymententity" />
        </cell>
      </grid>
    </body>
  </screen>

</screens>
