<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.payments.ideal" library="ideal.whlib">

  <tabsextension name="configideal" implementation="lib">
    <compositions>
      <record name="methodsettings" />
    </compositions>
    <insert position="providertab" where="atend">
      <select composition="methodsettings" cellname="acquirer" name="acquirer" type="pulldown" />
      <textedit composition="methodsettings" cellname="merchantid" name="merchantid" required="true" valuetype="integer" />
      <textedit composition="methodsettings" cellname="merchantsubid" valuetype="integer" />
      <select composition="methodsettings" cellname="keypair" name="keypair" type="pulldown" required="true" />
      <checkbox composition="methodsettings"
                cellname="testmode"
                name="testmode"
                labeltid="tolliumapps.payments.common.testmode"
                title=""
                value="true" />
      <textedit composition="methodsettings" cellname="privatekeypassword" name="privatekeypassword" password="true" />
    </insert>
  </tabsextension>

  <screen name="payinfo" title="">
    <body>
      <text name="transactionid" selectable="true" />
    </body>
  </screen>

</screens>
