<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.payments.dashboard" library="dashboard.whlib">

  <screen name="paymentsdashboard">
    <actions>
      <action name="openinwrd" onexecute="doopeninwrd">
        <enableon source="payments" min="1" max="1" />
      </action>
      <action name="properties" onexecute="doproperties" tid="~properties">
        <enableon source="payments" min="1" max="1" />
      </action>
    </actions>

    <body spacers="none">
      <grid height="1pr">
        <cell width="1pr">
          <list name="payments" borders="right" ongetrows="OnGetPayments" openaction="properties" selectmode="single">
            <column name="rowkey" type="integer" width="10x" align="right" tid="~id" />
            <column name="paymentdate" type="datetime" width="20x" storeutc="true" />
            <column name="nextcheck" type="datetime" width="20x" storeutc="true" />
            <column name="wrdschema" type="text" width="25x" tid="tolliumapps.common.schema" />
            <column name="wrdtype" type="text" width="25x" tid="tolliumapps.common.type" />
            <column name="paymententity" type="integer" width="10x" align="right" tid="tolliumapps.common.entity" />
            <column name="error" type="text" width="1pr" />
          </list>
        </cell>
        <cell spacers="left top right">
          <button width="1pr" action="properties" />
          <button width="1pr" action="openinwrd" />
        </cell>
      </grid>
    </body>
  </screen>

</screens>
