<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.auth.apikeys" library="apikeys.whlib">

  <screen name="apikeys" footerbuttons="ok cancel" width="70x" height="12gr">
    <body>
      <listedit name="apikeys"
                height="1pr"
                buttons="add delete"
                ongetrows="ongetapikeys"
                onrowdelete="ondeleteapikey"
                onrowedit="oneditapikey"
                minwidth="40x">
        <column name="created" type="datetime" />
        <column name="expires" type="datetime" />
      </listedit>
    </body>
  </screen>

  <screen name="addapikey">
    <body spacers="none">
      <wizard name="wizard">
        <page name="page1">
        <text valuetid=".clicknext"/>
        </page>
        <page name="page2" isfinish="true" oninit="oninitpage2">
          <textedit name="access_token" enabled="false" />
          <datetime name="expires" storeutc="true" readonly="true" type="datetime" />
        </page>
      </wizard>
    </body>
  </screen>

</screens>
