<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.auth.apikeys" library="apikeys.whlib">

  <screen name="apikeys" width="90x" height="12gr" footerbuttons="ok cancel">
    <body>
      <listedit name="apikeys"
                height="1pr"
                minwidth="40x"
                ongetrows="ongetapikeys"
                onrowdelete="ondeleteapikey"
                onrowedit="oneditapikey">
        <column name="title" type="text" width="2pr" />
        <column name="created" type="datetime" />
        <column name="expires" type="datetime" />
      </listedit>
    </body>
  </screen>

  <screen name="addapikey">
    <actions>
      <copyaction name="copykey" source="access_token" title="" />
    </actions>

    <body spacers="none">
      <wizard name="wizard">
        <page name="page1" onnext="onnextpage1">
          <textedit name="title" placeholdertid=".title-placeholder" required="true" />
          <date name="expires" />
          <select name="scopes" type="checkbox" rowkeytype="string" />
          <text valuetid=".clicknext" />
        </page>
        <page name="page2" isfinish="true" oninit="oninitpage2">
          <textedit name="access_token" width="1pr" enabled="false">
            <button name="copybutton" action="copykey" icon="tollium:actions/copy" title="" />
          </textedit>
          <datetime name="expires_final" type="datetime" readonly="true" storeutc="true" tid=".expires" />
        </page>
      </wizard>
    </body>
  </screen>

  <screen name="editapikey" footerbuttons="ok cancel">
    <body>
      <textedit name="title" placeholdertid=".title-placeholder" required="true" />
      <date name="expires" />
      <select name="scopes" type="checkbox" rowkeytype="string" />
    </body>
  </screen>

</screens>
