<formdefinitions xmlns="http://www.webhare.net/xmlns/publisher/forms" gid="site.forms.authpages">

  <form name="login" library="mod::wrd/lib/internal/pages/authpages.whlib" objectname="LoginForm">
    <page>
      <textedit name="login" autocomplete="username" required="1" tid=".username" />
      <password name="password" autocomplete="current-password" required="1" tid=".password" />
    </page>
  </form>

  <form name="forgotpassword" library="mod::wrd/lib/internal/pages/authpages.whlib" objectname="ForgotPasswordForm">
    <page>
      <textedit name="email" autocomplete="email" required="1" tid=".email" />
    </page>
  </form>

  <form name="resetpassword" library="mod::wrd/lib/internal/pages/authpages.whlib" objectname="ResetPasswordForm">
    <page>
      <textedit name="login" autocomplete="username" tid=".username" enabled="false" />
      <password name="passwordnew" autocomplete="new-password" required="1" tid=".passwordnew" />
      <password name="passwordrepeat" autocomplete="new-password" required="1" tid=".passwordrepeat" />
    </page>
  </form>

  <form name="emailchange" library="mod::wrd/lib/internal/pages/authpages.whlib" objectname="EmailChangeForm">
    <page>
      <textedit name="email" autocomplete="email" required="1" tid=".email" />
    </page>
  </form>

  <form name="passwordchange" library="mod::wrd/lib/internal/pages/authpages.whlib" objectname="PasswordChangeForm">
    <page>
      <textedit name="login" autocomplete="username" tid=".username" enabled="false" />
      <password name="currentpassword" autocomplete="current-password" required="1" tid=".currentpassword" />
      <password name="passwordnew" autocomplete="new-password" required="1" tid=".passwordnew" />
      <password name="passwordrepeat" autocomplete="new-password" required="1" tid=".passwordrepeat" />
    </page>
  </form>

</formdefinitions>
