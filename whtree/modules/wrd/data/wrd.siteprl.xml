<siteprofile xmlns="http://www.webhare.net/xmlns/publisher/siteprofile">

  <!-- SAML IDP -->
  <filetype namespace="http://www.webhare.net/xmlns/wrd/samlidpendpoint"
            blobiscontent="false"
            icon="tollium:files/application_x-webhare-serverparsed"
            ispublishable="true"
            ispublishedassubdir="true"
            tid="wrd:filetypes.samlidpendpoint">
    <dynamicexecution startmacro="mod::wrd/lib/internal/auth/samlidpendpoint.whlib#RunSAMLIdpEndpoint" />
  </filetype>

  <!-- SAML SP -->
  <filetype namespace="http://www.webhare.net/xmlns/wrd/samlspendpoint"
            blobiscontent="false"
            icon="tollium:files/application_x-webhare-serverparsed"
            ispublishable="true"
            ispublishedassubdir="true"
            tid="wrd:filetypes.samlspendpoint">
    <dynamicexecution startmacro="mod::wrd/lib/internal/auth/samlspendpoint.whlib#RunSAMLSpEndpoint" />
  </filetype>

  <apply>
    <to type="all" />
    <formdefinitions name="wrd:authpages" path="mod::wrd/data/forms/authpages.formdef.xml" />
  </apply>

  <!-- WRD Schema archive -->
  <filetype namespace="http://www.webhare.net/xmlns/wrd/schemaarchive"
            blobiscontent="true"
            extensions=".wrdarchive"
            icon="tollium:files/application_wharchive"
            requirescontent="true"
            tid="wrd:filetypes.schemaarchive" />

  <!-- Authpages intro texts -->
  <rtdtype namespace="http://www.webhare.net/xmlns/wrd/authtexttype">
    <blockstyles defaultstyle="NORMAL">
      <textstyle tag="HEADING2" containertag="h2" textstyles="" />
      <textstyle tag="NORMAL" containertag="p" textstyles="b i u a-href" />
      <textstyle tag="UNORDERED" containertag="ul" textstyles="b i u a-href" />
      <textstyle tag="ORDERED" containertag="ol" textstyles="b i u a-href" />
    </blockstyles>
  </rtdtype>

</siteprofile>
