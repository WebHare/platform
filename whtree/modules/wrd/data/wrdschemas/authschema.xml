<schemadefinition xmlns="http://www.webhare.net/xmlns/wrd/schemadefinition">

  <object tag="WRD_AUTHDOMAIN" title="Authentication domain">
    <attributes>
      <free tag="WRD_TITLE" title="Descriptive domain title" />
      <obsolete tag="WRDAUTH_EMAILBCC" title="BCC address for emails" />
      <obsolete tag="WRDAUTH_EXTENSIONLIBRARY" title="Library to load for WRDAuth extensions" />
      <free tag="WRDAUTH_LANGUAGE" /> <!-- ignored but we'll leave it in the wrdschema at least until we complete AUTHDOMAIN phaseout -->
      <free tag="WRDAUTH_LASTIPFIELD" title="Last login from IP" />
      <free tag="WRDAUTH_LASTLOGINFIELD" title="Last login field" />
      <obsolete tag="WRDAUTH_MASTERPASSWORD" />
      <obsolete tag="WRDAUTH_EMAILSUBJECTPREFIX" />
      <obsolete tag="WRDAUTH_EMAILSENDER" title="Sender for emails" />
      <obsolete tag="WRDAUTH_LOGINPAGE" title="URL to login page" />
      <free tag="WRDAUTH_DOMAINSECRET" title="Domain secret (used in preference to GUID for hashes)" />

      <!-- Now stored in schema metadata -->
      <obsolete tag="WRDAUTH_ACCOUNTTYPE" />
      <obsolete tag="WRDAUTH_EMAILFIELD" />
      <obsolete tag="WRDAUTH_LOGINFIELD" />
      <obsolete tag="WRDAUTH_PASSWORDFIELD" />
    </attributes>
  </object>

</schemadefinition>
