<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:publisher="http://www.webhare.net/xmlns/publisher/components"
         gid="contentproviders">

  <screen name="custom" gid=".custom" title="" lib="contentproviders/customcontent.whlib">
    <compositions>
      <record name="mysettings" />
    </compositions>
    <body>
      <textedit composition="mysettings" cellname="library" name="library" required="true" width="1pr" />
      <textedit composition="mysettings" cellname="contentobject" name="contentobject" required="true" width="1pr" />

      <!-- The STRING lastcontentscheck composition value is stored here and displayed as DATETIME in the lastcontentscheck text -->
      <textedit composition="mysettings" cellname="lastcontentscheck" visible="false" />
      <text name="lastcontentscheck" />
    </body>
  </screen>

</screens>
