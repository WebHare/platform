<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         lib="screens/report.whlib"
         xmlns:publisher="http://www.webhare.net/xmlns/publisher/components"
         xmlns:todd="http://www.webhare.net/xmlns/tollium/todd/components"
         gid="report"
         >

  <messageboxes gid=".messageboxes">
  </messageboxes>

  <screen name="linkcheck" gid=".linkcheck"
          allowresize="true" savestate="size"
          width="120x" height="40x">
    <actions>
      <action name="fileview" onexecute="dofileview" />
      <action name="csvexport" icon="tollium:actions/export" onexecute="docsvexport" />
    </actions>

    <toolbar gid=".toolbar">
      <button action="csvexport" />
    </toolbar>

    <body>
      <checkbox name="showalllinks" title="" labeltid=".showalllinks" onchange="refreshlinks" />
      <panel width="1pr" height="1pr">
        <list name="links"
              selectmode="single"
              openaction="fileview"
              emptytid=".nolinks"
              width="1pr" height="1pr">
          <column name="filepath" type="text" width="2pr" />
          <column name="url" type="text" width="3pr" />
          <column name="text" type="text" width="1pr" />
          <column name="status_icon" hintname="status_hint" sortkeyname="status" type="icon" tid=".status" />
        </list>
      </panel>
    </body>
    <footer>
      <defaultformbuttons buttons="close"/>
    </footer>
  </screen>

  <screen name="queries" gid=".queries"
          allowresize="true" savestate="size"
          width="120x" height="40x">
    <actions>
      <action name="optionschanged" tid=".refresh" onexecute="refresh" />
      <action name="csvexport" icon="tollium:actions/export" onexecute="docsvexport" />
    </actions>

    <toolbar gid=".toolbar">
      <button action="csvexport" />
    </toolbar>

    <body>
      <heading tid=".optionsbox" />
      <select name="options" type="checkbox" orientation="horizontal" rowkeytype="string" onchange="refresh">
        <option rowkey="grouped" />
      </select>
      <line>
        <datetime name="fromdate" type="date" />
        <button action="optionschanged" />
      </line>
      <panel width="1pr" height="1pr">
        <list name="results">
          <column name="query" type="text" width="1pr" />
          <column name="results" type="integer" align="right" width="10x" />
          <column name="pages" type="integer" align="right" width="10x" />
          <column name="when" type="datetime" storeutc="true" width="20x" />
        </list>
      </panel>
    </body>
  </screen>

  <fragment name="objectreport" gid=".objectreport">
    <actions>
    </actions>
    <contents>
      <checkbox name="showalllinks" title="" labeltid=".showalllinks" onchange="refreshlinks" />
      <panel width="1pr" height="1pr">
        <list name="links" width="1pr" height="1pr">
          <column name="referrer" sortkeyname="referrer_sort" type="text" width="1pr" />
          <column name="url" sortkeyname="url_sort" type="text" width="3pr" />
          <column name="text" sortkeyname="text_sort" type="text" width="1pr" />
          <column name="status_icon" sortkeyname="status_sort" hintname="status_hint" type="icon" tid=".status" />
        </list>
      </panel>
    </contents>
  </fragment>

</screens>
