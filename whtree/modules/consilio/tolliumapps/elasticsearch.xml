<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.elasticesearch" library="elasticsearch.whlib">

  <screen name="esmgr" allowresize="true" savestate="size">
    <actions>
      <action name="getmapping" onexecute="dogetmapping">
        <enableon source="indices" min="1" max="1" />
      </action>
      <action name="delete" onexecute="dodelete" tid="~delete">
        <enableon source="indices" min="1" />
      </action>
    </actions>

    <body>
      <select name="indexmanager" type="pulldown" onchange="onindexmanagerchange" />
      <grid height="1pr">
        <cell width="1pr">
          <list name="indices" selectmode="multiple">
            <column name="name" type="text" width="1pr" tid="~name" />
            <column name="docs" type="integer" width="12x" align="right" />
            <column name="size" type="text" width="16x" align="right" />
          </list>
        </cell>
        <cell>
          <button action="getmapping" />
          <spacer height="1gr" />
          <button action="delete" />
        </cell>
      </grid>
    </body>
  </screen>

  <screen name="inspectquery" width="120x" height="35x" allowresize="true">
    <actions>
      <action name="runquery" onexecute="dorunquery" />
    </actions>

    <body>
      <select name="indexmanager" type="pulldown" />
      <split type="vertical" height="1pr">
        <part>
          <grid height="1pr">
            <cell width="1pr" borders="all">
              <codeedit name="query" width="1pr" height="1pr" minwidth="30x" minheight="4x" />
            </cell>
            <cell>
              <button action="runquery" />
            </cell>
          </grid>
        </part>
        <part borders="all">
          <codeedit name="result" width="1pr" height="1pr" minwidth="30x" minheight="4x" />
        </part>
      </split>
    </body>

    <footer>
      <defaultformbuttons buttons="close" />
    </footer>
  </screen>

</screens>
