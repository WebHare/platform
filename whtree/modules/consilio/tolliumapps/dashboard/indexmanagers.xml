<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="tolliumapps.dashboard.indexmanagers"
         library="indexmanagers.whlib">

  <screen name="indexmgrs" allowresize="true" flags="issysop" savestate="size" tid=".title">
    <actions>
      <action name="managemanagers" frameflags="issysop" onexecute="domanagemgrs" />
      <action name="getmapping" onexecute="dogetmapping">
        <enableon source="indices" min="1" max="1" />
      </action>
      <action name="delete" frameflags="issysop" onexecute="dodelete" tid="~delete">
        <enableon source="indices" min="1" />
      </action>
    </actions>

    <body>
      <line>
        <select name="indexmanager" type="pulldown" />
        <button action="managemanagers" />
      </line>
      <grid height="1pr">
        <cell width="1pr">
          <list name="indices" onselect="updatefooterrows" selectmode="multiple" sortcolumn="catalog">
            <column name="name" type="text" width="3pr" iconname="health" tid="~name" />
            <column name="catalog" type="text" width="2pr" sortkeyname="catalog_sort" tid="common.terms.catalog" />
            <column name="docs" type="text" width="12x" align="right" />
            <column name="size" type="text" width="16x" align="right" sortkeyname="size_sort" />
            <column name="shards" type="integer" width="10x" align="right" />
          </list>
        </cell>
        <cell>
          <button action="getmapping" />
          <spacer height="1gr" />
          <button action="delete" />
        </cell>
      </grid>
    </body>
  </screen>

</screens>
