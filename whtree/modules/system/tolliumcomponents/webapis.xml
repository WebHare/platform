<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumcomponents.webapis" library="webapis.whlib">

  <fragment name="oauth2client">
    <actions>
      <action name="configureclient" onexecute="doconfigureclient" />
    </actions>
    <contents>
      <line>
        <textedit name="clientid" width="1pr" enabled="false" />
        <button action="configureclient" />
      </line>
    </contents>
  </fragment>

  <screen name="configureclient" footerbuttons="ok cancel">
    <actions>
      <copyaction name="copycallbackurl" source="callbackurl" title="" />
    </actions>

    <body>
      <textedit name="clientid" width="1pr" minwidth="60x" required="true" />
      <textedit name="clientsecret" width="1pr" required="true" />
      <textedit name="callbackurl" width="1pr" required="true">
        <button action="copycallbackurl" icon="tollium:actions/copy" />
      </textedit>
    </body>
  </screen>

  <fragment name="oauth2authorization">
    <actions>
      <windowopenaction name="authorize" onwindowopen="doauthorize" />
      <action name="clear" onexecute="doclear" tid="~clear" />
    </actions>
    <contents>
      <line>
        <textedit name="authorization" width="1pr" enabled="false" />
        <button action="authorize" />
        <button action="clear" />
      </line>
    </contents>
  </fragment>

  <screen name="oauth2wait" footerbuttons="cancel">
    <body>
      <text valuetid=".waiting" />
    </body>
  </screen>

  <fragment name="timezoneedit" gid=".timezoneedit">
    <actions>
      <action name="edit" onexecute="doedit" title="" />
      <action name="clear" onexecute="doclear" title="" />
    </actions>
    <contents>
      <line>
        <textedit name="current" width="1pr" enabled="false" title="" />
        <button action="edit" icon="tollium:actions/edit" />
        <button action="clear" icon="tollium:actions/delete" />
      </line>
    </contents>
  </fragment>

  <screen name="timezoneeditscreen"
          footerbuttons="ok cancel"
          gid=".timezoneedit"
          onmessage="onmessage"
          tid=".timezoneeditscreen">
    <actions>
      <action name="retrievelocation" onexecute="doretrievelocation" />
      <action name="search" onexecute="dosearch" />
    </actions>

    <body>
      <panel name="geonames" layout="left">
        <heading tid=".auto" />
        <button action="retrievelocation" />
        <heading tid=".manual" />
        <line>
          <textedit name="query" defaultbutton="searchbutton" />
          <button name="searchbutton" action="search" icon="tollium:actions/search" title="" />
        </line>
        <select name="results" type="pulldown" onchange="onresultselected" visible="false" />
        <heading tid=".selected" />
        <text name="selected" width="1pr" title="" valuetid=".noselection" />
      </panel>
      <panel name="manual" visible="false">
        <select name="country" type="pulldown" onchange="oncountryselected" />
        <select name="timezone" type="pulldown" onchange="ontimezoneselected" />
      </panel>
    </body>
  </screen>

</screens>
