<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="tolliumapps.commondialogs.mailviewer"
         library="mailviewer.whlib">

  <screen name="mailqueuedialog"
          width="130x"
          height="40x"
          allowresize="true"
          footerbuttons="close"
          tid="tolliumapps.dashboard.mailqueue.mailqueuepanel">
    <body name="body">
    </body>
  </screen>

  <screen name="mailviewer" width="110x" height="50x" allowresize="true" flags="issysop" footerbuttons="close">
    <actions>
      <action name="simulatesoftbounce" frameflags="issysop" onexecute="dosimulatesoftbounce" />
      <action name="simulatehardbounce" frameflags="issysop" onexecute="dosimulatehardbounce" />
      <action name="simulatecomplaint" frameflags="issysop" onexecute="dosimulatecomplaint" />
      <action name="simulatedelivery" frameflags="issysop" onexecute="dosimulatedelivery" />
    </actions>

    <body spacers="none">
      <tabs name="tabs" type="server" height="1pr">
        <tab tid=".mailcontents">
          <emailcontents name="mailcontents" />
        </tab>
        <tab spacers="top left bottom right" tid=".taskinfo">
          <!-- bit ugly, but with only one form label outside the box this is a quick presentation fix.. -->
          <heading tid=".errors" />
          <line layout="left">
            <textarea name="errors" height="5gr" enabled="false" title="" />
          </line>
          <box name="callbackinfo" hr="false">
            <textedit name="callbackfunc" width="1pr" />
            <textedit name="callbackdata" width="1pr" />
            <inlineblock tid=".simulate">
              <line>
                <button action="simulatesoftbounce" />
                <button action="simulatehardbounce" />
                <button action="simulatecomplaint" />
                <button action="simulatedelivery" />
              </line>
            </inlineblock>
          </box>
        </tab>
      </tabs>
    </body>
  </screen>

</screens>
