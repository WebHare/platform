<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="tolliumapps.login.forgotpassword"
         library="forgotpassword.whlib">

  <screen name="forgotpassword">
    <body spacers="none">
      <wizard>
        <page onnext="onemailnext">
          <heading tid=".welcome" />
          <textedit name="email" required="true" tid="~email" validationchecks="email" />
        </page>
        <page isfinish="true">
          <heading tid=".finished" />
        </page>
      </wizard>
    </body>
  </screen>

  <screen name="resetpassword" footerbuttons="ok cancel">
    <body spacers="none">
      <panel name="warningpanel" backgroundcolor="#FEFFDE" borders="bottom" spacers="left right" visible="false">
        <text name="warning_passwordmustbereset"
              title=""
              valuetid=".warning_passwordmustbereset"
              visible="false"
              wordwrap="true" />
      </panel>
      <panel spacers="left right bottom">
        <line layout="left">
          <text name="validationchecksfield" minwidth="40x" title="" visible="false" />
        </line>
        <textedit name="username" width="1pr" enabled="false" tid="~username" />
        <textedit name="password" width="1pr" password="true" required="true" tid="~passwordnew" />
        <textedit name="passwordrepeat" width="1pr" password="true" required="true" tid="~passwordrepeat" />
        <line>
          <textedit name="verificationcode" width="1pr" placeholder="VCxxxxxxxxxxxx" tid=".verificationcode" />
          <text name="verificationcodeexplain" title="" valuetid=".verificationcodeexplain" />
        </line>
      </panel>
    </body>
  </screen>

</screens>
