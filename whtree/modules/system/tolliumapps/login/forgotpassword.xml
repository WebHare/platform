<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         library="forgotpassword.whlib"
         gid="tolliumapps.login.forgotpassword">

  <screen name="forgotpassword">
    <body spacers="none">
      <wizard>
        <page onnext="onemailnext" >
          <heading tid=".welcome" />
          <textedit name="email" required="true" validationchecks="email" tid="~email" />
        </page>
        <page isfinish="true">
          <heading tid=".finished" />
        </page>
      </wizard>
    </body>
  </screen>

  <screen name="resetpassword">
    <body>
      <textedit name="username" enabled="false" width="1pr" tid="~username" />
      <textedit name="password" password="true" required="true" width="1pr" tid="~passwordnew" />
      <textedit name="passwordrepeat" password="true" required="true" width="1pr" tid="~passwordrepeat"/>
      <line>
        <textedit name="verificationcode" width="1pr" tid=".verificationcode" placeholder="VCxxxxxxxxxxxx" />
        <text name="verificationcodeexplain" title="" valuetid=".verificationcodeexplain" />
      </line>
    </body>
    <footer>
      <defaultformbuttons buttons="ok cancel" />
    </footer>
  </screen>

</screens>
