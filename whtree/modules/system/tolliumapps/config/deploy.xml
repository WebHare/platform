<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         library="deploy.whlib"
         xmlns:s="http://www.webhare.net/xmlns/system/components"
         gid="tolliumapps.config.deploy"
         >

  <screen name="peerchangeswarning" gid=".deploymodule">
    <actions>
      <action name="reviewchanges" onexecute="doreviewchanges" />
    </actions>
    <body>
      <text valuetid=".modulehaspeerchanges" />
      <panel height="1pr" />
    </body>
    <footer>
      <line layout="right">
        <button action="reviewchanges" />
        <button tolliumresult="yes" tid="~yes" />
        <button tolliumresult="no" tid="~no" />
      </line>
    </footer>
  </screen>

  <screen name="reviewremotetolocaldiff"
          gid=".reviewdiffs"
          allowresize="true"
          width="80x"
          height="20x"
          >
    <actions>
      <action name="showdiff">
        <enableon source="files" min="1" onexecute="doshowdiff" />
      </action>
      <action name="showfulldiff" onexecute="doshowfulldiff" />
    </actions>
    <body>
      <grid height="1pr">
        <col width="1pr" />
        <col />
        <row height="1pr">
          <cell>
            <list name="files"
                  height="1pr"
                  selectmode="single"
                  openaction="showdiff"
                  emptytid=".nodifferences"
                  >
              <column name="path" type="text" />
              <column name="status" type="text" />
            </list>
          </cell>
          <cell>
            <button action="showdiff" width="1pr" />
            <button action="showfulldiff" width="1pr" />
          </cell>
        </row>
      </grid>
    </body>
    <footer>
      <defaultformbuttons buttons="close" />
    </footer>
  </screen>

  <screen name="reviewmodulepeerchanges"
          gid=".reviewdiffs"
          allowresize="true"
          width="80x"
          height="20x"
          >
    <actions>
      <action name="showdiff">
        <enableon source="files" min="1" onexecute="doshowdiff" />
      </action>
      <action name="showfulldiff" onexecute="doshowfulldiff" />
    </actions>
    <body>
      <grid height="1pr">
        <col width="1pr" />
        <col />
        <row height="1pr">
          <cell>
            <list name="files"
                  height="1pr"
                  selectmode="single"
                  openaction="showdiff"
                  >
              <column name="path" type="text" />
              <column name="status" type="text" />
            </list>
          </cell>
          <cell>
            <button action="showdiff" width="1pr" />
            <button action="showfulldiff" width="1pr" />
          </cell>
        </row>
      </grid>
    </body>
    <footer>
      <defaultformbuttons buttons="close" />
    </footer>
  </screen>

  <screen name="modulefilediff"
          gid=".modulefilediff"
          title=""
          allowresize="true"
          width="120x"
          height="30x"
          >
    <body spacers="none">
      <codeedit name="diff" height="1pr" />
    </body>
    <footer>
      <grid>
        <cell width="1pr" >
          <checkbox name="ignorewhitespace" title="" labeltid=".ignorewhitespace" onchange="gotchange" />
        </cell>
        <cell>
          <defaultformbuttons buttons="close" />
        </cell>
      </grid>
    </footer>
  </screen>

  <screen name="reviewincomingcommits"
          gid=".reviewincomingcommits"
          allowresize="true"
          width="80x"
          height="20x"
          savestate="size"
          >
    <compositions>
      <record name="commit" />
    </compositions>
    <body>
      <split type="vertical">
        <part height="2pr">
          <list name="commits"
                height="1pr"
                selectmode="single"
                onselect="onselect"
                sortable="false"
                borders="top left right"
                >
            <column name="date" type="datetime" precision="minutes" width="15x" />
            <column name="id" type="text" width="15x" />
            <column name="author" type="text" width="1pr"/>
            <column name="message" type="text" width="3pr" />
          </list>
        </part>
        <part height="1pr">
          <text composition="commit" cellname="author" />
          <textedit composition="commit" cellname="id" enabled="false" width="1pr" />
          <datetime composition="commit" cellname="date" type="datetime" precision="minutes" readonly="true" />
          <panel layout="left" height="1pr">
            <textarea title="" composition="commit" cellname="message" height="1pr" enabled="false" />
          </panel>
        </part>
      </split>
    </body>
    <footer>
      <defaultformbuttons buttons="close" />
    </footer>
  </screen>


</screens>
