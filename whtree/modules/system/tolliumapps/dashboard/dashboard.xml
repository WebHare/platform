<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.dashboard.dashboard" library="dashboard.whlib">

  <screen name="main"
          allowresize="true"
          flags="refreshcontents issysop"
          icon="system:sysmgmt/monitoring"
          menubar="menubar"
          oninterval="oninterval"
          onmessage="onmessage">
    <actions>
      <action name="togglerefresh" onexecute="dotogglerefresh" title="" />
      <action name="refresh" onexecute="dorefresh" title="" />
      <action name="softreset" onexecute="dosoftreset" />
      <action name="clearcaches" onexecute="doclearcaches" />
      <action name="adhoccache" frameflags="issysop" onexecute="doadhoccache" tid="sysmgmt.adhoccache.title" />
      <action name="remoting" frameflags="issysop" onexecute="doremoting" tid="sysmgmt.remoting.title" />
      <action name="backend"
              frameflags="issysop"
              onexecute="dobackend"
              shortcut="ctrl+shift+t"
              tid="tolliumapps.config.settings.settings" />
      <action name="webdavdata" frameflags="issysop" onexecute="dowebdavdata" tid="sysmgmt.webdav.data.title" />
      <windowopenaction name="openinseparatetab" frameflags="issysop" onwindowopen="doopeninseparatetab">
        <enableon source="monitorpanels" min="1" max="1" />
      </windowopenaction>
      <action name="mailroutes" frameflags="issysop" onexecute="domailroutes" shortcut="ctrl+shift+e" tid=".mailroutes" />
      <action name="webserverusagestats" onexecute="DoExportWebserverUsageStats" tid=".statistics.webserverusagestats" />
      <action name="apikeys" frameflags="issysop" onexecute="doapikeys" shortcut="ctrl+shift+k" tid="tolliumapps.dashboard.apikeys.apikeys" />
    </actions>

    <menus>
      <menu name="menubar">
        <item action="clearcaches" />
        <item action="softreset" />
        <divider />
        <item action="backend" />
        <item action="adhoccache" />
        <item action="remoting" />
        <item action="webdavdata" />
        <item action="mailroutes" />
        <item action="apikeys" />
        <divider />
        <item action="webserverusagestats" />
        <divider />
        <item action="openinseparatetab" disablemode="hidden" />
      </menu>
      <menu name="panelscontextmenu">
        <item action="openinseparatetab" disablemode="hidden" />
      </menu>
    </menus>

    <toolbar>
      <button name="togglerefreshbutton" action="togglerefresh" icon="system:sysmgmt/cruisecontrol" />
      <button name="refreshbutton" action="refresh" icon="tollium:actions/reload" />
      <divider />
      <button action="clearcaches" icon="system:sysmgmt/clearcache" />
      <button action="softreset" icon="system:sysmgmt/softreset" />
    </toolbar>

    <body spacers="none">
      <split type="horizontal">
        <part width="1pr">
          <list name="monitorpanels"
                height="1pr"
                borders="none"
                columnheaders="false"
                onselect="onmonitorpanelsselect"
                selectcontextmenu="panelscontextmenu"
                selectevent="synchronous"
                selectmode="single"
                sortable="false">
            <column name="title" type="text" title="" tree="true" />
          </list>
          <panel name="statusbar" borders="top" spacers="left">
            <text name="lastupdate" />
          </panel>
        </part>
        <part name="currentmonitor" width="4pr" />
      </split>
    </body>
  </screen>

</screens>
