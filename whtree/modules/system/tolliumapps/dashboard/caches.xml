<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.dashboard.caches" library="caches.whlib">

  <screen name="precalculatedcache">
    <actions>
      <action name="delete" tid="~delete">
        <enableon source="cacheentries" min="1" onexecute="ondelete" />
      </action>
    </actions>

    <body spacers="none">
      <grid height="1pr">
        <cell width="1pr">
          <list name="cacheentries"
                height="1pr"
                borders="right"
                eventmasks="system:precalccache.updated"
                ongetrows="ongetcacheentries"
                selectmode="multiple">
            <column name="rowkey" type="integer" width="10x" tid=".id" />
            <column name="hash" type="text" width="34x" />
            <column name="func" type="text" />
            <column name="state" type="text" width="14x" />
            <column name="lastuse" type="datetime" width="18x" storeutc="true" />
          </list>
        </cell>
        <cell spacers="top left right">
          <button width="1pr" action="delete" />
        </cell>
      </grid>
    </body>
  </screen>

</screens>
