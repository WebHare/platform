<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         library="variableinspector.whlib"
         xmlns:todd="http://www.webhare.net/xmlns/tollium/todd/components"
         gid="debugger">

  <screen name="variableinspector"
          allowresize="true"
          gid=".variableinspector"
          width="100x"
          height="30x"
          >
    <actions>
      <action name="retrievefull">
        <enableon source="contents" min="1" max="1" checkflags="canretrievefull" onexecute="doretrievefull" />
      </action>
      <action name="switchencoding">
        <enableon source="contents" min="1" max="1" checkflags="cantoggleencoding" onexecute="doswitchencoding" />
      </action>
      <action name="showtext">
        <enableon source="contents" min="1" max="1" checkflags="canshowtext" onexecute="doshowtext" />
      </action>
      <downloadaction name="download">
        <enableon source="contents" min="1" max="1" checkflags="candownload" ondownload="dodownload" />
      </downloadaction>
    </actions>
    <menus>
      <menu name="selectcontextmenu">
        <item action="retrievefull" disablemode="hidden" />
        <item action="switchencoding" disablemode="hidden" />
        <item action="showtext" disablemode="hidden" />
        <item action="download" disablemode="hidden" />
      </menu>
    </menus>
    <body>
      <panel height="1pr">
        <list name="contents"
              selectmode="single"
              height="1pr"
              flags="cantoggleencoding canretrievefull canshowtext candownload"
              openaction="retrievefull"
              selectcontextmenu="selectcontextmenu">
          <column name="name" tree="true" type="text" sortkeyname="sortkey" />
          <column name="value" type="text" width="3pr" />
        </list>
      </panel>
    </body>
    <footer>
      <defaultformbuttons buttons="close" />
    </footer>
  </screen>
</screens>
