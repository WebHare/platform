<screens xmlns="http://www.webhare.net/xmlns/tollium/screens">

  <!-- select right -->
  <fragment name="selectright" gid="userrights.commondialogs.rights" lib="screens/userrights/parts/selectright.whlib">
    <contents>
      <box name="grantbox" hr="false" tid=".grant">
        <text name="grantcreationdate" tid=".grantdatetime" visible="false" />
        <text name="grantgrantor" tid=".grantor" visible="false" />
        <text name="rightsgroup" visible="false" />
        <text name="objectpath" visible="false" />
        <text name="singleright" visible="false" />
        <select name="rightslist" type="pulldown" onchange="onrightselect" />
        <line layout="left">
          <checkbox name="grantwithgrantoption" labeltid=".withgrantoption" title="" />
        </line>
      </box>
    </contents>
  </fragment>

</screens>
