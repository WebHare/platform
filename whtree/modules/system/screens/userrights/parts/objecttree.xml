<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:system="http://www.webhare.net/xmlns/system/components">

  <!-- objectttree -->
  <fragment name="objecttree" gid="userrights.objecttree" lib="screens/userrights/parts/objecttree.whlib">
    <actions gid="userrights.actions">
      <action name="grantrightonobject" ellipsis="true" onexecute="dograntrightonobject">
        <enableon source="objectlist" min="1" max="1" checkflags="cangrantany" />
      </action>
      <action name="exportobjectrights" onexecute="doexportobjectrights">
        <enableon source="objectlist" min="1" max="1" checkflags="!isglobal" />
      </action>
      <action name="reload" onexecute="doreload" />
    </actions>
    <menus>
      <menu name="selectcontextmenu">
        <item action="grantrightonobject" />
        <item action="reload" />
      </menu>
      <menu name="newcontextmenu">
        <item action="reload" />
      </menu>
    </menus>
    <contents>
      <system:rightobjecttree name="objectlist"
                              width="1pr"
                              flags="cangrantany isglobal"
                              onextendchildren="onextendobjecttreechildren"
                              onselect="onselecthandler"
                              selectcontextmenu="selectcontextmenu" />
    </contents>
  </fragment>

</screens>
