<screens xmlns="http://www.webhare.net/xmlns/tollium/screens">

  <!-- find users and/or roles -->
  <fragment name="userrolesearch" gid="userrights.commondialogs.search" lib="screens/userrights/parts/userrolesearch.whlib">
    <actions gid="userrights.actions">
      <action name="search" onexecute="dosearch" />
      <action name="showobject" onexecute="doshowobject">
        <enableon source="searchresults" min="1" max="1" />
      </action>
      <action name="editobject" onexecute="@notimplemented">
        <enableon source="searchresults" min="1" max="1" />
      </action>

      <!-- action name="togglesearchbar" shortcut="alt+f3" onexecute="userrights->dotogglesearchbutton" tid=".togglesearchbar"/ -->
    </actions>
    <menus>
      <menu name="optionsmenu">
        <item action="showobject" />
        <item action="editobject" />
      </menu>
    </menus>
    <contents>
      <panel borders="bottom" spacers="all">
        <line>
          <textedit name="searchfor" width="60x" defaultbutton="searchbutton" title="" />
          <button name="searchbutton" action="search" tid="~search" />
        </line>
      </panel>
      <panel name="searchresultspanel" height="1pr">
        <list name="searchresults"
              height="1pr"
              borders="bottom "
              gid="tolliumapps.userrights.common"
              ongetchildren="showsearchresults"
              openaction="showobject"
              rowlayout="tworows"
              selectmode="multiple">
<!-- selectcontextmenu="optionsmenu" -->
          <column name="icon" type="icon" sortkeyname="type" title="" />
          <column name="name" type="text" width="3pr" />
          <column name="unitpath" type="text" width="2pr" tid=".unit" />
          <column name="description" type="text" tid="~description" />
          <rowlayout name="tworows">
            <col coldef="icon" />
            <col coldef="name" />
            <col coldef="unitpath" />
            <row>
              <cell coldef="icon" rowspan="2" />
              <cell coldef="name" />
              <cell coldef="unitpath" />
            </row>
            <row>
              <cell coldef="description" colspan="2" />
            </row>
          </rowlayout>
        </list>
      </panel>
      <panel spacers="all">
        <line layout="right">
          <button action="showobject" tid=".goto" />  <!-- action="jumptosearchresult" -->
        </line>
      </panel>
    </contents>
  </fragment>

</screens>
