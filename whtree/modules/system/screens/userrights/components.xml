<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:p="http://www.webhare.net/xmlns/publisher/components"
         gid="components">

  <fragment name="selectuser" lib="components/selectuser.whlib" gid=".selectuser">
    <actions>
      <action name="edit" onexecute="doedit" title="" />
      <action name="clear" onexecute="doclear" title="" />
    </actions>
    <contents>
      <line>
        <textedit name="username" title="" enabled="false" width="1pr" />
        <button action="edit" name="editbtn" title="" icon="tollium:actions/edit" hinttid="tollium:common.actions.edit"/>
        <button action="clear" name="clearbtn" title="" icon="tollium:actions/delete" hinttid="tollium:common.actions.clear"/>
      </line>
    </contents>
  </fragment>

  <fragment name="passwordvalidationchecks" lib="components/passwordvalidationchecks.whlib" gid=".passwordvalidationchecks">
    <contents>
      <line layout="left">
        <checkbox name="password_hibp" labeltid=".passwordcheckhibp" title="" />
      </line>
      <textedit name="password_minlength" minvalue="0" valuetype="integer" emptyvalue="0" width="5x" />
      <textedit name="password_lowercase" minvalue="0" valuetype="integer" emptyvalue="0" width="5x" />
      <textedit name="password_uppercase" minvalue="0" valuetype="integer" emptyvalue="0" width="5x" />
      <textedit name="password_digits" minvalue="0" valuetype="integer" emptyvalue="0" width="5x" />
      <textedit name="password_symbols" minvalue="0" valuetype="integer" emptyvalue="0" width="5x" />
      <browsecustom name="password_noreuse" onbrowse="GotBrowseNoReuse" onmapvalue="MapDuration" />
      <browsecustom name="password_maxage" onbrowse="GotBrowseMaxAge" onmapvalue="MapDuration" />
    </contents>
  </fragment>

</screens>
