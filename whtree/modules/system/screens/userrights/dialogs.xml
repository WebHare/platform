<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="userrights.dialog"
         library="/lib/screens/userrights/dialogs.whlib">

  <screen name="selectunit"
          width="50x"
          height="30x"
          allowresize="true"
          footerbuttons="ok cancel"
          gid=".selectunit"
          savestate="size"
          title="">
    <body>
      <includefragment name="unittree" fragment="userrights/parts/unittree.unittree" />
    </body>
  </screen>

  <screen name="selectuserrole" width="100x" height="16gr" allowresize="true" gid=".selectuserrole" savestate="size" title="">
    <actions>
      <action name="dosubmit" onexecute="submit" tid="~ok">
        <enableon source="selectuserrole->unitcontents->userandrolelist" min="1" requirefocus="true" />
      </action>
    </actions>

    <body>
      <includefragment name="selectuserrole" fragment="userrights/parts/selectuserrole.selectuserrole" />
    </body>

    <footer>
      <line layout="right">
        <button action="dosubmit" />
        <button tid="~cancel" tolliumresult="cancel" />
      </line>
    </footer>
  </screen>

</screens>
