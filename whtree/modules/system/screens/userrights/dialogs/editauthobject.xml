<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:system="http://www.webhare.net/xmlns/system/components"
         xmlns:wrd="http://www.webhare.net/xmlns/wrd/components"
         lib="screens/userrights/dialogs/editauthobject.whlib">

  <screen name="editunit" gid="userrights.editunit" allowresize="true" footerbuttons="ok cancel">
    <compositions>
      <wrd:entity name="entity" wrdtype="WHUSER_UNIT" />
    </compositions>
    <body>
      <panel height="1pr">
        <textedit composition="entity" cellname="wrd_title" name="wrd_title" required="true" maxlength="256" />
        <textarea composition="entity" cellname="whuser_comment" height="1pr"  />
      </panel>
    </body>
  </screen>

  <screen name="editrole" gid="userrights.editrole" allowresize="true" footerbuttons="ok cancel">
    <compositions>
      <wrd:entity name="entity" wrdtype="WHUSER_ROLE" />
    </compositions>
    <body>
      <panel height="1pr">
        <textedit composition="entity" cellname="wrd_title" required="true" maxlength="256" />
        <textarea composition="entity" cellname="whuser_comment" height="1pr"  />
      </panel>
    </body>
  </screen>

</screens>
