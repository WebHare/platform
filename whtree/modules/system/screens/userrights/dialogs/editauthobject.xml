<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:system="http://www.webhare.net/xmlns/system/components"
         xmlns:wrd="http://www.webhare.net/xmlns/wrd/components"
         library="/lib/screens/userrights/dialogs/editauthobject.whlib">

  <screen name="editunit" allowresize="true" footerbuttons="ok cancel" gid="userrights.editunit">
    <compositions>
      <wrd:entity name="unitentity" wrdtype="WHUSER_UNIT" />
      <record composition="unitentity" cellname="expiration" name="expiration" />
    </compositions>

    <body spacers="none">
      <tabs name="maintabs">
        <tab tid="~properties">
          <textedit composition="unitentity"
                    cellname="wrd_title"
                    name="wrd_title"
                    maxlength="256"
                    required="true"
                    tid="~name" />
          <textarea composition="unitentity" cellname="whuser_comment" height="4gr" tid="~comments" />
          <spacer name="extensionpoint" visible="false" />
        </tab>
        <tab tid="~settings">
          <heading composition="unitentity"
                   cellname="override_passwordchecks"
                   name="override_passwordchecks"
                   checkbox="true"
                   enablecomponents="passwordchecks" />
          <system:passwordvalidationchecks composition="unitentity" cellname="passwordchecks" name="passwordchecks" />
          <heading composition="unitentity"
                   cellname="override_expiration"
                   name="override_expiration"
                   checkbox="true"
                   enablecomponents="expiraton_locknologin" />
          <browsecustom composition="expiration"
                        cellname="locknologin"
                        name="expiraton_locknologin"
                        onbrowse="selectduration"
                        onmapvalue="mapduration" />
        </tab>
      </tabs>
    </body>
  </screen>

  <screen name="editrole" allowresize="true" footerbuttons="ok cancel" gid="userrights.editrole">
    <compositions>
      <wrd:entity name="entity" wrdtype="WHUSER_ROLE" />
    </compositions>

    <body>
      <panel height="1pr">
        <textedit composition="entity" cellname="wrd_title" maxlength="256" required="true" tid="~name" />
        <textedit composition="entity" cellname="wrd_contact_email" maxlength="256" tid="~email" validationchecks="email" />
        <textarea composition="entity" cellname="whuser_comment" height="1pr" tid="~comments" />
      </panel>
    </body>
  </screen>

</screens>
