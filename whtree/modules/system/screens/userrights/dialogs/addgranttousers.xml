<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:system="http://www.webhare.net/xmlns/system/components"
         library="/lib/screens/userrights/dialogs/addgranttousers.whlib">

  <!-- Add a right to pre-chosen users/roles -->
  <screen name="addgranttousers"
          width="120x"
          height="35x"
          minwidth="80x"
          minheight="20x"
          allowresize="true"
          footerbuttons="ok cancel"
          gid="userrights.rights"
          savestate="size"
          title="">
    <actions>
      <action name="submitaction" onexecute="submit" title="" />
    </actions>

    <body>
      <split type="horizontal">
        <part width="1pr">
          <includefragment name="objecttree" fragment="userrights/parts/objecttree.objecttree" />
        </part>
        <part width="2pr">
          <list name="rightslist"
                height="1pr"
                borders="top right bottom"
                flags="canmanage"
                gid="userrights.commondialogs.columns"
                onselect="onrightselect"
                openaction="submitaction"
                selectableflags="canmanage"
                selectmode="single"
                sortable="false">
            <column name="title" type="text" width="1pr" tid=".right" />
            <column name="description" type="text" width="2pr" />
            <style name="ungrantable" textcolor="#9a9a9a" />
          </list>
        </part>
      </split>
      <line layout="left">
        <checkbox name="grantwithgrantoption" labeltid=".withgrantoption" title="" />
      </line>
      <textarea name="comment" tid="system:userrights.commondialogs.rights.comment" />
    </body>
  </screen>

</screens>
