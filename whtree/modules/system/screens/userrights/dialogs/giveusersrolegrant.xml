<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:system="http://www.webhare.net/xmlns/system/components"
         lib="screens/userrights/dialogs/giveusersrolegrant.whlib">

  <!-- Add a pre-chosen role to selectable users -->
  <screen name="giveusersrolegrant"
          title=""
          minwidth="80x"
          width="120x"
          height="35x"
          allowresize="true"
          savestate="size">
    <body gid="userrights.rights">
      <includefragment name="selectuserrole" fragment="userrights/parts/selectuserrole.selectuserrole" />
      <textarea name="comment" tid="~comments" />
    </body>
    <footer>
      <defaultformbuttons buttons="ok cancel"/>
    </footer>
  </screen>
</screens>
