<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="monitor" library="/lib/screens/monitor/rpclog.whlib">

  <screen name="rpclog" gid=".rpclog.panel">
    <actions>
      <action name="properties" onexecute="doeditrpclog" tid="~properties">
        <enableon source="logslist" min="1" />
      </action>
    </actions>

    <compositions>
      <eventlistener masks="system:registry.system.logging.rpc" onevents="gotregistryevents" />
    </compositions>

    <body height="1pr" spacers="none">
      <grid width="80x" height="1pr">
        <col width="1pr" />
        <col />
        <row height="1pr">
          <cell>
            <list name="logslist"
                  height="1pr"
                  borders="right"
                  icons="tollium:status/negative tollium:status/checked tollium:status/warning"
                  openaction="properties"
                  selectmode="single">
              <column name="title" type="text" width="30x" />
              <column name="until" type="text" iconname="untilicon" />
            </list>
          </cell>
          <cell spacers="left top">
            <button action="properties" />
          </cell>
        </row>
      </grid>
    </body>
  </screen>

  <screen name="editrpclogsettings" width="50x" footerbuttons="ok cancel" gid=".rpclog.settings" tid=".title">
    <body height="1pr" layout="form">
      <select name="loguntil" type="radio">
        <option rowkey="not" />
        <option rowkey="forever" />
        <option rowkey="until">
          <datetime name="loguntildate"
                    type="datetime"
                    errorlabeltid=".loguntildate"
                    precision="minutes"
                    required="true"
                    storeutc="true"
                    title="" />
        </option>
      </select>
      <lines layout="left">
        <checkbox name="profile" labeltid=".profile" title="" />
      </lines>
    </body>
  </screen>

</screens>
