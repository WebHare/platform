<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         lib="screens/monitor/webserverscripts.whlib"
         gid="monitor.webserverscripts">

  <messageboxes gid=".dialogs">
    <messagebox name="resourcemanagererror"           icon="error" buttons="ok" />
  </messageboxes>

  <screen name="webserverscripts" title=""
          tid=".title"
          gid=".manager"
          allowresize="true"
          >
    <actions gid=".actions">
      <action name="details" onexecute="dodetails"  shortcut="enter">
        <enableon source="applist" min="1" max="1" checkflags="hasdetails" />
      </action>
      <action name="terminate" onexecute="doterminate"  shortcut="del">
        <enableon source="applist" min="1" max="1" />
      </action>
    </actions>
    <menus>
      <menu name="contextmenu">
        <item action="details" disablemode="hidden"/>
        <item action="terminate" disablemode="hidden"/>
      </menu>
    </menus>
    <compositions>
      <eventlistener name="listener" masks="system:internal.scriptmanager.statechange" onevents="onscriptevent" />
    </compositions>
    <body layout="form" height="1pr">
      <split type="vertical">
        <part height="2pr">
          <grid height="1pr">
            <col width="1pr" />
            <col />
            <row height="1pr">
              <cell>
                <list name="applist"
                      selectmode="single"
                      openaction="details"
                      borders="right"
                      height="1pr"
                      flags="hasdetails"
                      selectcontextmenu="contextmenu"
                      onselect="onapplistselect"
                      >
                  <column name="name"    type="text" width="35x" />
                  <column name="status"  type="text" width="12x" />
                  <column name="since"   type="datetime" precision="milliseconds" width="22x" storeutc="true" />
                  <column name="lasterror" type="text" />
                </list>
              </cell>
              <cell>
                <button action="details" />
                <button action="terminate" />
              </cell>
            </row>
          </grid>
        </part>
        <part height="1pr">
          <list name="historylist"
                height="1pr"
                borders="none"
                selectmode="single"
                onselect="onmessageselect"
                sortcolumn="date"
                sortascending="false"
                >
            <column name="date"    type="datetime" precision="milliseconds" width="22x" storeutc="true" sortkeyname="datesortkey" />
            <column name="message" type="text" />
          </list>
          <box tid=".details" height="1pr" hr="false">
            <text name="detailtext" height="10x" title="" selectable="true" />
          </box>
        </part>
      </split>
    </body>
  </screen>

</screens>
