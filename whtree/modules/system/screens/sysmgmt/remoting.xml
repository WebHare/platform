<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         lib="screens/sysmgmt/remoting.whlib"
         gid="sysmgmt.remoting">

  <messageboxes>
  </messageboxes>

  <screen name="main"
          tid=".title"
          gid=".main"
          allowresize="true"
          savestate="size"
          >
    <actions gid=".actions">
      <action name="edit" onexecute="doedit"  shortcut="ctrl+q" tid="tollium:common.actions.edit">
        <enableon source="services" min="1" />
      </action>
      <action name="close" onexecute="cancel"  shortcut="ctrl+q" tid="tollium:common.actions.close"/>
    </actions>

    <body layout="form" height="1pr">
      <grid height="1pr">
        <col width="1pr" />
        <col />
        <row height="1pr">
          <cell>
            <list name="services"
                  minwidth="50x"
                  minheight="30x"
                  selectmode="single"
                  openaction="edit"
                  icons="tollium:status/checked"
                  >
              <column name="module" type="text" />
              <column name="service" type="text" />
              <column name="log_raw_requests_icon" type="icon" width="16px" />
              <column name="log_decoded_requests_icon" type="icon" width="16px" />
              <column name="log_decoded_responses_icon" type="icon" width="16px" />
              <column name="log_raw_responses_icon" type="icon" width="16px" />
              <column name="profile_icon" type="icon" width="16px" />
              <column name="rpcloglevel" type="text" width="3x" />
            </list>
          </cell>
          <cell>
            <button action="edit" />
          </cell>
        </row>
      </grid>
    </body>
    <footer>
      <defaultformbuttons buttons="close"/>
    </footer>
  </screen>


  <screen name="editservice"
          tid=".title"
          gid=".editservice"
          width="40x"
          >
    <compositions>
      <record name="config" />
    </compositions>

    <body layout="form" height="1pr">
      <box tid=".debugsettings" layout="left">
        <checkbox composition="config" cellname="log_raw_requests" labeltid=".log_raw_requests" title="" />
        <checkbox composition="config" cellname="log_decoded_requests" labeltid=".log_decoded_requests" title="" />
        <checkbox composition="config" cellname="log_decoded_responses" labeltid=".log_decoded_responses" title="" />
        <checkbox composition="config" cellname="log_raw_responses" labeltid=".log_raw_responses" title="" />
        <checkbox composition="config" cellname="profile" labeltid=".profile" title="" />
        <line layout="form">
          <textedit composition="config" cellname="rpcloglevel" valuetype="integer" minvalue="0" maxvalue="7" width="5x"/>
        </line>
      </box>
    </body>
    <footer>
      <defaultformbuttons buttons="ok cancel"/>
    </footer>
  </screen>

</screens>
