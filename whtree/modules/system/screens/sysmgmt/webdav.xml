<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="sysmgmt.webdav" lib="screens/sysmgmt/webdav.whlib">

  <screen name="webdav_data" width="100x" height="30x" allowresize="true" footerbuttons="close" gid=".data" tid=".title">
    <actions>
      <action name="addfolder" onexecute="doaddfolder" shortcut="ctrl+n" tid="~add" />
      <action name="editfolder" onexecute="doeditfolder" tid="~edit">
        <enableon source="folders" min="1" />
      </action>
      <action name="deletefolder" onexecute="dodeletefolder" shortcut="del" tid="~delete">
        <enableon source="folders" min="1" />
      </action>
      <action name="rightsfolder" onexecute="dorightsfolder">
        <enableon source="folders" min="1" max="1" />
      </action>
      <action name="close" onexecute="cancel" shortcut="ctrl+q" tid="~close" />
    </actions>

    <menus>
      <menu name="contextmenu">
        <item action="editfolder" />
        <item action="deletefolder" />
        <divider/>
        <item action="rightsfolder" />
      </menu>
      <menu name="newcontextmenu">
        <item action="addfolder" />
      </menu>
    </menus>

    <body>
      <grid height="1pr">
        <cell width="1pr">
          <list name="folders"
                height="1pr"
                newcontextmenu="newcontextmenu"
                openaction="editfolder"
                selectcontextmenu="contextmenu"
                selectmode="single">
            <column name="foldername" type="text" />
            <column name="diskfolder" type="text" />
          </list>
        </cell>
        <cell>
          <button action="addfolder" />
          <button action="editfolder" />
          <button action="deletefolder" />
          <spacer height="1gr" />
          <button action="rightsfolder" />
        </cell>
      </grid>
    </body>
  </screen>

  <screen name="webdav_folder" footerbuttons="ok cancel" gid=".folder">
    <body layout="form">
      <heading name="webdavdata" />
      <textedit name="foldername" maxlength="256" required="true" />
      <browseserverpath name="diskfolder" acceptfiles="false" allowmanualedit="true" required="true" />
      <line layout="left">
        <checkbox name="forcelowercase" labeltid=".forcelowercase" title="" value="true" />
      </line>
    </body>
  </screen>

</screens>
