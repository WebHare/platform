<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         lib="components/passwordfield.whlib">

  <messageboxes gid="commondialogs.editpassword">
    <messagebox name="sureclearpassword" icon="question" buttons="yes no" />
  </messageboxes>

  <fragment name="passwordfield">
    <actions>
      <action name="changepassword" tid="tollium:common.actions.edit" onexecute="dochangepassword" />
    </actions>
    <contents>
      <line>
        <textedit name="passwordfield" title="" password="true" enabled="false" width="1pr" />
        <button action="changepassword" />

                  <!-- not copied yet
        textfield->required := this->required;
        textfield->width := this->width!="" ? this->width : "30x";
        -->
      </line>
    </contents>
  </fragment>


  <screen gid="commondialogs.editpassword" name="editpassword" tid=".pagetitle" onshow="onshow">
    <body name="toppanel">
      <line layout="left">
        <text name="policyfield" title="" wordwrap="true" minwidth="40x" />
      </line>
      <line layout="left">
        <text name="validationchecksfield" title="" wordwrap="true" minwidth="40x" visible="false" />
      </line>
      <textedit password="true" name="oldpassword" required="true"/>
      <textedit password="true" name="newpassword" required="true" lengthmeasure="characters" />
      <textedit password="true" name="confirmpassword" required="true" />
      <line layout="left" >
        <checkbox name="showpasswords" title="" onchange="onshowpasswordschange" />
        <text valuetid=".showpasswords" labelfor="showpasswords" />
      </line>
    </body>
    <footer>
      <defaultformbuttons buttons="ok cancel" />
    </footer>
  </screen>

</screens>
