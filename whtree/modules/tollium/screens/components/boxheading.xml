<screens xmlns="http://www.webhare.net/xmlns/tollium/screens">

  <fragment name="box" contentpanel="boxcontents" lib="components/box.whlib">
    <contents>
      <heading name="heading" />
      <panel name="boxcontents" />
      <hr name="bottomhr" />
    </contents>
  </fragment>

  <fragment name="heading" lib="components/heading.whlib">
    <contents>
      <panel>
        <line layout="left">
          <checkbox name="cbox" title="" visible="false" />
          <text name="headingtitle" title="" />
          <helpicon name="helpicon" />
        </line>
      </panel>
    </contents>
  </fragment>

  <fragment name="helpicon" lib="components/helpicon.whlib">
    <contents>
      <image name="helpicon" width="16px" height="16px" onclick="openhelp" title="" value="tollium:actions/help" />
    </contents>
  </fragment>

</screens>
