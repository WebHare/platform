<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" library="/lib/components/url.whlib">

  <fragment name="tolliumurl">
    <actions>
      <copyaction name="copylink" source="previewurl" title="" />
      <windowopenaction name="openlink" onwindowopen="onopenlink" title="" />
      <action name="qrlink" onexecute="doqrlink" title="" />
    </actions>
    <contents>
      <textedit name="previewurl" width="1pr" enabled="false" title="">
        <button name="copybutton" action="copylink" icon="tollium:actions/copy" title="" />
        <button name="qrbutton" action="qrlink" icon="tollium:objects/qr" title="" />
        <button name="openbutton" action="openlink" icon="tollium:actions/openlink" title="" />
      </textedit>
    </contents>
  </fragment>

</screens>
