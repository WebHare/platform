<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" library="/lib/components/listedit.whlib">

  <fragment name="listedit">
    <actions>
      <action name="moveup">
        <enableon source="list" min="1" checkflags="__arrayedit_canmoveup" onexecute="moveupvalue" />
      </action>
      <action name="movedown">
        <enableon source="list" min="1" checkflags="__arrayedit_canmovedown" onexecute="movedownvalue" />
      </action>
      <action name="add" onexecute="addvalue" />
      <action name="edit" onexecute="editvalue">
        <enableon source="list" min="1" max="1" />
      </action>
      <action name="delete" onexecute="deletevalue">
        <enableon source="list" min="1" />
      </action>
    </actions>
    <menus>
      <menu name="selectionmenu">
        <item name="edititem" action="edit" disablemode="hidden" tid="~edit" />
        <item name="deleteitem" action="delete" disablemode="hidden" tid="~delete" />
        <divider />
        <item name="moveupitem" action="moveup" tid="~up" visible="false" />
        <item name="movedownitem" action="movedown" tid="~down" visible="false" />
        <divider />

        <!-- added actions appear here -->
      </menu>
      <menu name="noselectionmenu">
        <item name="additem" action="add" tid="~add" />
      </menu>
    </menus>
    <contents>
      <grid name="maingrid">
        <col width="1pr" />
        <col />
        <row height="1pr">
          <cell>
            <list name="list"
                  width="1pr"
                  height="1pr"
                  newcontextmenu="noselectionmenu"
                  oncheck="gotlistcheck"
                  openaction="edit"
                  selectcontextmenu="selectionmenu"
                  selectmode="single" />
          </cell>
          <cell name="buttoncell">
            <button name="addbutton" width="1pr" action="add" tid="~add" />
            <button name="editbutton" width="1pr" action="edit" tid="~edit" />
            <button name="deletebutton" width="1pr" action="delete" tid="~delete" />
            <panel spacers="top">
              <button name="moveupbutton" width="1pr" action="moveup" tid="~up" visible="false" />
              <button name="movedownbutton" width="1pr" action="movedown" tid="~down" visible="false" />
            </panel>
            <panel name="extrabuttons" spacers="top" visible="false" />
          </cell>
        </row>
      </grid>
    </contents>
  </fragment>

  <screen name="arrayedit_addscreen"
          footerbuttons="ok cancel"
          gid="components.listedit.arrayedit_addscreen"
          tid=".windowtitle">
    <actions>
    </actions>

    <body>
      <select name="rowtype" type="radio" public="true" title="" />
    </body>
  </screen>

</screens>
