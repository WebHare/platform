<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumapps.inspector" library="inspector.whlib">

  <screen name="inspector" width="140x" height="16gr" allowresize="true" footerbuttons="close" savestate="size">
    <actions>
      <action name="inspectcomponent">
        <enableon source="components" checkflags="iscomponent" onexecute="DoInspectComponent" requirefocus="true"/>
      </action>
      <action name="inspectproperty">
        <enableon source="properties" checkflags="isproperty" onexecute="doinspectproperty" requirefocus="true"/>
      </action>
    </actions>

    <menus>
      <menu name="componentmenu">
        <item action="inspectcomponent" />
      </menu>
      <menu name="propmenu">
        <item action="inspectproperty" />
      </menu>
    </menus>

    <body>
      <split type="horizontal" height="1pr">
        <part width="2pr">
          <list name="components"
                height="1pr"
                selectcontextmenu="componentmenu"
                flags="iscomponent"
                onselect="OnSelectComponent"
                selectableflags="iscomponent"
                selectmode="single">
            <column name="name" type="text" width="3pr" tree="true" />
            <column name="title" type="text" width="2pr" />
            <column name="type" type="text" width="1pr" />
          </list>
        </part>
        <part width="1pr">
          <list name="properties" selectcontextmenu="propmenu" selectmode="single" flags="isproperty">
            <column name="prop" type="text" width="1pr" />
            <column name="value" type="text" width="1pr" />
          </list>
        </part>
      </split>
    </body>
  </screen>

</screens>
