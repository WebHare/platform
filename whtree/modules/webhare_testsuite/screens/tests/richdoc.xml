<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" library="/lib/screens/tests/richdoc.whlib">

  <screen name="main" width="800px" height="600px" allowresize="true" menubar="menubar" title="Rich Text Editor">
    <actions>
      <action name="openhtml" onexecute="doopenhtml" title="Open HTML..." />
      <action name="openemail" onexecute="doopenemail" title="Open E-mail..." />
      <action name="reply" onexecute="doreply" title="Reply" />
      <action name="rewrite" onexecute="dorewrite" title="Rewrite" />
      <action name="send" onexecute="dosend" title="Download" />
      <action name="editrawhtml" onexecute="doeditrawhtml" shortcut="ctrl+shift+e" title="Edit raw html" />
      <action name="clearformatting" onexecute="doclearformatting" title="Clear Formatting" />
      <action name="undirty" onexecute="doundirty" title="Undirty" />
      <action name="showmessage" onexecute="doshowmessage" shortcut="ctrl+shift+m" />
      <action name="insertobject" onexecute="doinsertobject" />
      <action name="createobject" onexecute="docreateobject" />
      <action name="insertinlineobject" onexecute="doinsertinlineobject" />
      <action name="insertimage" onexecute="doinsertimage" />
      <action name="inserttwocol" onexecute="doinserttwocol" />
      <action name="viewplaintext" onexecute="doviewplaintext" title="View plaintext" />
    </actions>

    <menus>
      <menu name="menubar">
        <item title="M01">
          <item action="insertobject" title="A01 Insert Object" />
          <item action="createobject" title="A02 Create Object" />
          <item action="insertinlineobject" title="A03 Insert Inline Object" />
          <item action="insertimage" title="A04 Insert Image" />
          <item action="inserttwocol" title="A05 Insert Two Column Object" />
        </item>
      </menu>
    </menus>

    <body name="body" spacers="none">
      <panel name="editorpanel" height="1pr">
        <tabs name="rteholder" height="1pr" onselect="onchangetab" savestate="selectedtab">
          <tab name="rtetab" title="Tab with Free RTE">
            <richarea name="editor" type="email" width="1pr" height="1pr" />
          </tab>
          <tab name="othertab" title="Tab with Structured RTE">
            <textedit name="focusfield"
                      width="1pr"
                      title="textfield"
                      value="textfield for testing focus. try focussing this field and TAB-bing back to the Editor" />
            <textedit name="dirty" enabled="false" title="Dirty" />
            <richdocument name="structured"
                          width="1pr"
                          height="1pr"
                          contentareawidth="900px"
                          rtdtype="http://www.webhare.net/xmlns/webhare_testsuite/testrichdoc" />
          </tab>
        </tabs>
      </panel>
    </body>

    <footer>
      <line layout="left">
        <checkbox name="editorvisible" label="Visible" onchange="togglevisible" />
        <checkbox name="editorenabled" label="Enabled" onchange="toggleenabled" />
        <checkbox name="editorreadonly" label="Readonly" onchange="togglereadonly" />
        <checkbox name="suppress_urls" label="Suppress urls" onchange="GotPlaintextConversionOptionsChange" title="" />
        <checkbox name="unix_newlines" label="Unix newlines" onchange="GotPlaintextConversionOptionsChange" title="" />
        <checkbox name="showcounter" label="Show counter" onchange="GotShowCounterChange" title="" />
        <select name="toplaintextmethod" type="pulldown" onchange="GotToPlainTextMethodChange" title="ToPlainText">
          <option rowkey="converthtmltoplaintext" title="converthtmltoplaintext" />
          <option rowkey="textcontent" title="textcontent" />
        </select>
      </line>
      <line layout="left">
        <button name="openhtmlbutton" action="openhtml" />
        <button name="openemailbutton" action="openemail" />
        <button name="replybutton" action="reply" />
        <button name="rawhtmlbutton" action="editrawhtml" />
        <button name="rewritebutton" action="rewrite" />
        <button name="sendbutton" action="send" />
        <button name="clearformattingbutton" action="clearformatting" />
        <button name="undirtybutton" action="undirty" />
        <button name="viewplaintextbutton" action="viewplaintext" />
      </line>
    </footer>
  </screen>

  <screen name="editrawhtml"
          allowresize="true"
          footerbuttons="ok cancel"
          implementation="none"
          savestate="size"
          title="Edit raw html">
    <body>
      <textedit name="len" enabled="false" title="Length in characters" valuetype="integer" />
      <codeedit name="code" width="1pr" height="1pr" public="true" />
    </body>
  </screen>

  <screen name="allowformat" title="RTD with allowformatting">
    <actions>
      <action name="editrawhtml" onexecute="doeditrawhtml" shortcut="ctrl+shift+e" title="Edit raw html" />
    </actions>

    <body>
      <richarea name="myrte" type="html-block" public="true" tagfilter="p b i ul a-href" />
      <button name="rawhtmlbutton" action="editrawhtml" />
    </body>
  </screen>

  <screen name="autotest1" allowresize="1">
    <body>
      <richarea name="testrte" height="1pr" public="true" />
    </body>
  </screen>

  <screen name="autotest2" allowresize="1">
    <body>
      <richdocument name="testrte"
                    height="1pr"
                    public="true"
                    rtdtype="http://www.webhare.net/xmlns/webhare_testsuite/testrichdoc" />
      <richdocument name="testrtewithlinkhandler"
                    height="1pr"
                    public="true"
                    rtdtype="http://www.webhare.net/xmlns/webhare_testsuite/rtd/level1" />
    </body>
  </screen>

  <screen name="testblock" footerbuttons="ok cancel">
    <body>
      <textedit name="customtext" title="Custom text" value="" />
    </body>
  </screen>

  <screen name="writablewidgets" width="800px" height="600px" allowresize="true" title="Read-only RTD with writable widgets">
    <actions>
      <action name="someaction" onexecute="dosomeaction" />
    </actions>

    <body>
      <richdocument name="rte" height="1pr" readonly="true" />
      <richarea name="rich" height="1pr" readonly="true" />
      <button name="somebutton" action="someaction" />
    </body>
  </screen>

</screens>
