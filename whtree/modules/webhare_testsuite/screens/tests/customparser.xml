<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:test="http://www.webhare.net/xmlns/webhare_testsuite/testcomponents">

  <screen name="testscreen" implementation="test:screenimplementation">
    <body name="body">
    </body>
  </screen>

  <fragment name="testfragment" implementation="test:fragmentimplementation">
    <contents>
      <tabs name="tabs">
      </tabs>
    </contents>
  </fragment>

  <tabsextension name="testextension" implementation="test:tabsextensionimplementation" gid="testtids.fragment">
    <newtab name="tab" title="tab">
      <test:extraparsercomponent name="children" title="">
        <test:child title="This is the title" testattr="Custom parser attribute value" />
        <test:child testattr="" compref="refcomp" />
        <test:child tid=".fragment" testattr="Last child" />
      </test:extraparsercomponent>
      <text name="refcomp" title="Referenced component" />
    </newtab>
  </tabsextension>

  <fragment name="extraparsercomponent" library="/lib/screens/components/customparser.whlib">
    <contents>
      <list name="childnodes" sortable="false">
        <column name="title" type="text" />
        <column name="testattr" type="text" />
        <column name="compref" type="text" />
      </list>
    </contents>
  </fragment>

</screens>
