  <screen name="layouttest_tabs" menubar="menubar" title="Layouttest: tabs">
    <actions>
      <action name="showappholder" onexecute="doshowappholder" title="A01 Show app holder" />
      <action name="toggletabnames" onexecute="dotoggletabnames" title="A02 Toggle tab names" />
      <action name="sync" onexecute="dosync" />
    </actions>
    <menus>
      <menu name="menubar">
        <item title="M01 Actions">
          <item action="showappholder" />
          <item action="toggletabnames" />
        </item>
      </menu>
    </menus>
    <body name="body" spacers="none">
      <tabs name="servertabs" type="server" onselect="ontabselect" savestate="selectedtab">
        <tab name="emptytab">
        </tab>
        <tab name="appholder">
          <tabs name="tabs" selectedtab="tab2" onselect="ontabselect">
            <tab name="tab1" width="400px" height="250px">
              <box title="selector" name="selector"  hr="false">
                <select name="typepulldown"
                        title="Type"
                        type="pulldown"
                        flags="showproduct showimagetext">
                  <option rowkey="P01"
                          flags="showproduct"
                          enablecomponents="productsku"
                          title="P01" />
                  <option rowkey="P02"
                          flags="showimagetext"
                          enablecomponents="type_imagetext_title type_imagetext_button_title type_imagetext_image"
                          title="P02" />
                </select>
              </box>
              <tabs type="server">
                <tab title="product" name="product">
                  <visibleon source="typepulldown" checkflags="showproduct" min="1" />
                  <box title="Kies een product" hr="false">
                    <textedit required="true" title="Product" name="productsku"/>
                  </box>
                </tab>
                <tab title="imagetext" name="imagetext">
                  <visibleon source="typepulldown" checkflags="showimagetext" min="1" />
                  <textedit title="Titel" name="type_imagetext_title" width="1pr"/>
                  <box title="Afbeelding" hr="false">
                    <imageedit required="true"
                               imagewidth="267px"
                               imageheight="100px"
                               errorlabel="Afbeelding"
                               name="type_imagetext_image"/>

                  </box>
                  <box title="Knop" hr="false">
                    <textedit title="Knoptext" name="type_imagetext_button_title" width="1pr"/>
                    <select name="select_on_servertab" type="pulldown" title="Select-in-servertab">
                      <option rowkey="s1" title="S1" />
                      <option rowkey="s2" title="S2" />
                    </select>
                  </box>
                </tab>
              </tabs>
            </tab>
            <tab name="tab2" width="300px" height="350px">
              <text name="tab1_imagetext_title" title="Tab1 title" />
              <text name="tab3_texteditstack2" title="Stackedtab2 title" />
              <button name="syncbutton" action="sync" title="Sync"/>
            </tab>
            <tab name="untitledtab" title=""> <!-- shouldn't cause crashes or Weird Effects, and should be reachable -->
              <text name="untitledtabtext" title="" value="empty tab" />
            </tab>
            <tab name="tab3"  width="400px" height="350px">
              <panel borders="all" height="1pr">
              <tabs name="stackedtabs" type="stacked" height="1pr" savestate="selectedtab">
                <tab name="stackedtab0" title="Stacked tab 0" visible="false" /> <!-- invisible initial tab shouldn't confuse <tabs> component -->
                <tab name="stackedtab1" title="Stacked tab 1">
                  <textedit name="texteditstack1" title="Textedit stackedtab 1" />
                </tab>
                <tab name="stackedtab2" title="Stacked tab 2">
                  <textedit name="texteditstack2" title="Textedit stackedtab 2" />
                </tab>
                <tab name="stackedtab3" title="Stacked tab 3">
                  <textedit name="texteditstack3" title="Textedit stackedtab 2" />
                </tab>
              </tabs>
              </panel>
            </tab>
          </tabs>
        </tab>
