<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" library="/lib/screens/tests/anycomponent.whlib">

  <screen name="anycomponent" allowresize="true" flags="readvalue readselection readoverlays">
    <actions>
      <action name="updateoptions" onexecute="doupdateoptions" title="Update options" />
      <action name="updatetitle" onexecute="doupdatetitle" title="Update title" />
      <action name="updatelabel" onexecute="doupdatelabel" title="Update label" />
      <action name="readvalue" frameflags="readvalue" onexecute="doreadvalue" title="Read" />
      <action name="writevalue" onexecute="dowritevalue" title="Write" />
      <action name="readselection" frameflags="readselection" onexecute="doreadselection" title="Read" />
      <action name="writeselection" onexecute="dowriteselection" title="Write" />
      <action name="validatevalue" onexecute="dovalidatevalue" title="Validate" />
      <action name="readoverlays" frameflags="readoverlays" onexecute="doreadoverlays" title="Read" />
      <action name="writeoverlays" onexecute="dowriteoverlays" title="Write" />
    </actions>

    <compositions>
      <radiogroup name="radiogroup" />
    </compositions>

    <body name="body">
      <split name="splitv" type="vertical">
        <part>
          <split name="splith" type="horizontal">
            <part name="componentpanel" />
            <part width="1pr" />
          </split>
        </part>
        <part />
      </split>
      <grid name="controlpanel">
        <col width="1pr" />
        <col />
        <row>
          <cell>
            <line>
              <checkbox name="visible" label="Visible" onchange="onvisiblechange" title="Options" value="true" />
              <checkbox name="enable" label="Enabled" onchange="onenablechange" value="true" />
              <checkbox name="required" label="Required" onchange="onrequiredchange" value="false" />
              <checkbox name="readonly" label="Readonly" onchange="onreadonlychange" value="false" />
              <checkbox name="indeterminate" label="Indeterminate" onchange="onindeterminatechange" value="false" />
              <checkbox name="hiderequiredifdisabled"
                        label="HideRequiredIfDisabled"
                        onchange="onhiderequiredifdisabledchange"
                        value="true" />
            </line>
            <line>
              <textedit name="title" title="Title" />
              <button name="updatetitlebutton" action="updatetitle" />
            </line>
            <line>
              <textedit name="value" title="Value" />
              <textedit name="onchangecount" readonly="true" title="" valuetype="integer" />
              <text value="onchanges" />
              <button name="readvaluebutton" action="readvalue" />
              <button name="writevaluebutton" action="writevalue" />
              <button action="validatevalue" />
            </line>
            <line>
              <textedit name="selection" width="1pr" title="Selection" />
              <textedit name="onselectcount" readonly="true" title="" valuetype="integer" />
              <text value="onselects" />
              <button name="readselectionbutton" action="readselection" />
              <button name="writeselectionbutton" action="writeselection" />
            </line>
            <panel name="overlaypanel">
              <line>
                <textedit name="overlays" width="1pr" title="Overlays" />
                <button name="buttonreadoverlays" action="readoverlays" />
                <button name="buttonwriteoverlays" action="writeoverlays" />
                <textedit name="onchangeoverlayscount" readonly="true" valuetype="integer" />
                <text value="onchangeoverlays" />
              </line>
            </panel>
            <line>
              <textedit name="label" />
              <button name="updatelabelbutton" action="updatelabel" />
            </line>
            <button action="updateoptions" />
            <line>
              <textedit name="onchangecounter" enabled="false" />
              <checkbox name="listenonchange" label="listen onchange/onset" onchange="DoListenOnchange" title="" />
            </line>
            <panel name="mainprops" />
          </cell>
          <cell>
            <line>
              <textedit name="enableontarget1" width="5x" title="EnableOnTarget1" />
              <checkbox name="enableontarget1_include" label="included1" onchange="onupdateenablecomponents" title="" />
            </line>
            <line>
              <textedit name="enableontarget2" width="5x" title="EnableOnTarget2" />
              <checkbox name="enableontarget2_include" label="included2" onchange="onupdateenablecomponents" title="" />
            </line>
            <radiobutton name="radiobutton2" group="radiogroup" title="RadioButton" />
            <button name="alternatedefault" title="Alternate default" />
            <checkbox name="dummycheckbox" label="Dummy checkbox" />
          </cell>
        </row>
      </grid>
    </body>
  </screen>

  <screen name="roweditor">
    <compositions>
      <record name="row" />
    </compositions>

    <body>
      <checkbox composition="row" cellname="checkbox" label="Checkbox" visible="false" />
      <textedit composition="row" cellname="othertext" name="othertext" title="Other text" />
      <textedit composition="row" name="virtualized_text" title="Virtualized text" />
      <select composition="row" cellname="radio" name="radio" type="radio" title="Radio">
        <option rowkey="test" title="gaga" />
        <option rowkey="test2" title="gugu" />
      </select>
    </body>
  </screen>

</screens>
