  author =       {Rafal Dabrowski and Agata Orych},
  title =        "Chosen problems with acquiring multispectral imagery data using the {miniMCA}
  camera",
  booktitle =    {Proceedings 9th International Conference on Environmental Engineering},
  year =         {2014},
  pages =        {6 pp.},
  month =        {May},
