<?wh
/// @short Export tests

LOADLIB "mod::webhare_testsuite/tests/baselibs/hsengine/testdata_export_middlelib.whlib";
LOADLIB "wh::internal/hsselftests.whlib";

MACRO BasicTest()
{
  OpenTest("TestExport: BasicTest");
  TestEq(42, i);
  CloseTest("TestExport: BasicTest");
}

MACRO GlobalsTest()
{
  OpenTest("TestExport: GlobalsTest");

  Activate1();
  Activate2();

  TestEq(TRUE, activated1);
  IF ((NOT activated1) OR (NOT IsActivated2()))
    ABORT("Error: non-constant macro-call optimized away");

  CloseTest("TestExport: GlobalsTest");
}

MACRO DeprecatingTest()
{
  RECORD result := TestCompileAndRun('<?wh LOADLIB "mod::webhare_testsuite/tests/baselibs/hsengine/testdata_export_middlelib.whlib"; PRINT(""||i2); ?>');
  TestCleanResult(1, result.errors);
  MustContainWarning(2, result.errors, 18, "I2");
  TestEq("43", result.output);
}

PRINT("\n === Running TestExport\n");
BasicTest();
GlobalsTest();
DeprecatingTest();
