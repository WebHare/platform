MACRO TestSchemaSettings()
{
  testfw->BeginWork();

  // Clean schema, otherwise we'll get a sync error due to a duplicated guid
  OpenWRDSchema("webhare_testsuite:synctarget")->DeleteSelf();
  OBJECT synctarget := CreateWRDSchema("webhare_testsuite:synctarget",
        [ title := "webhare_testsuite schema, sync target"
        , description := "The webhare_testsuite WRD schema sync target"
        ]);

  testfw->GetWRDSchema()->SetSchemaSetting("webhare_testsuite:a", 1);
  synctarget->SetSchemaSetting("webhare_testsuite:b", "b");
  testfw->GetWRDSchema()->SetSchemaSetting("webhare_testsuite:c", "f");
  synctarget->SetSchemaSetting("webhare_testsuite:c", "g");
  testfw->CommitWork();

  RECORD syncres := RunSync(synctarget, DEFAULT OBJECT, testfw->GetWRDSchema()->tag);
  TestEQMembers(
      [ [ name := "webhare_testsuite:a", value := 1 ]
      , [ name := "webhare_testsuite:c", value := "f" ]
      , [ name := "wrd:auth.domainsecret", value := testfw->GetWRDSchema()->GetSchemaSetting("wrd:auth.domainsecret") ]
      , [ name := "wrd:debug.answer", value := 42 ]
      , [ name := "wrd:payments.paymentrefstate", value := testfw->GetWRDSchema()->GetSchemaSetting("wrd:payments.paymentrefstate") ]
      , [ name := "wrd:sync.history", value :=  [ [ type :=               "fullsync"
                                                  , creationsource :=     testfw->GetWRDSchema()->creationsource
                                                  , remoteschema :=       `local schema ${testfw->GetWRDSchema()->tag}`
                                                  , excludetypes :=       STRING[]
                                                  , includetypes :=       STRING[]
                                                  , remotesynchistory :=  RECORD[]
                                                  ]
                                                ]
        ]
      ], (SELECT * FROM synctarget->ListSchemaSettings() WHERE name NOT LIKE "wrd:migrations.*"), "*");

  syncres := RunSync(synctarget, DEFAULT OBJECT, testfw->GetWRDSchema()->tag);
  TestEq(FALSE, syncres.anychanges, "Settings shouldn't change after re-sync");
  TestEQ(
      [ [ name := "webhare_testsuite:a", value := 1 ]
      , [ name := "webhare_testsuite:c", value := "f" ]
      , [ name := "wrd:auth.domainsecret", value := testfw->GetWRDSchema()->GetSchemaSetting("wrd:auth.domainsecret") ]
      , [ name := "wrd:debug.answer", value := 42 ]
      , [ name := "wrd:payments.paymentrefstate", value := testfw->GetWRDSchema()->GetSchemaSetting("wrd:payments.paymentrefstate") ]
      ], SELECT * FROM testfw->GetWRDSchema()->ListSchemaSettings() WHERE name NOT LIKE "wrd:migrations.*" AND name NOT IN [ "wrd:schemaresources" ]);
}

MACRO TestSyncHistory()
{
  // Clean schema for clean sync history
  testfw->BeginWork();
  IF (ObjectExists(OpenWRDSchema("webhare_testsuite:synctarget")))
    OpenWRDSchema("webhare_testsuite:synctarget")->DeleteSelf();
  IF (ObjectExists(OpenWRDSchema("webhare_testsuite:synctarget2")))
    OpenWRDSchema("webhare_testsuite:synctarget2")->DeleteSelf();

  OBJECT synctarget := CreateWRDSchema("webhare_testsuite:synctarget",
        [ title := "webhare_testsuite schema, sync target"
        , description := "The webhare_testsuite WRD schema sync target"
        ]);

  OBJECT synctarget2 := CreateWRDSchema("webhare_testsuite:synctarget2",
        [ title := "webhare_testsuite schema, sync target2"
        , description := "The webhare_testsuite WRD schema 2nd sync target"
        ]);

  //done with schema-specific grants, we'll just give our accounts access to all schemas now
  testfw->GetUserObject("wrd_metadatarights")->GrantRightToOn("wrd:metadata", testfw->GetUserObject("wrd_metadatarights"), 0, FALSE, TRUE);
  testfw->GetUserObject("wrd_readrights")->GrantRightToOn("wrd:read", testfw->GetUserObject("wrd_readrights"), 0, FALSE, TRUE);
  testfw->CommitWork();

  STRING org_creationsource := synctarget->creationsource;
  DATETIME org_creationdate := synctarget->creationdate;

  // Run a partial sync
  RECORD syncres := RunSync(synctarget, DEFAULT OBJECT, testfw->GetWRDSchema()->tag, [ excludetypes := [ "DOESNOTEXIST"]]);

  TestEQMembers(
      [ [ type :=               "existingschema"
        , creationsource :=     org_creationsource
        , creationdate :=       org_creationdate
        ]
      , [ type :=               "partialsync"
        , creationsource :=     testfw->GetWRDSchema()->creationsource
        , creationdate :=       testfw->GetWRDSchema()->creationdate
        , remoteschema :=       `local schema ${testfw->GetWRDSchema()->tag}`
        , excludetypes :=       STRING[ "DOESNOTEXIST" ]
        , includetypes :=       STRING[]
        , remotesynchistory :=  RECORD[]
        , user :=               [ login := "wrd_metadatarights@beta.webhare.net" ]
        ]
      ], synctarget->GetSchemaSetting("wrd:sync.history"), "*");

  TestEQLike(
      `*testsynchistory*partial*sync*${testfw->GetWRDSchema()->tag}*${testfw->GetWRDSchema()->creationsource}*`,
      synctarget->creationsource);

  STRING org_creationsource2 := synctarget2->creationsource;

  RECORD syncres2 := RunSync(synctarget2, DEFAULT OBJECT, synctarget->tag, [ excludetypes := [ "DOESNOTEXIST2"]]);
  TestEQMembers(
      [ [ type :=               "existingschema"
        , creationsource :=     org_creationsource2
        ]
      , [ type :=               "partialsync"
        , creationsource :=     synctarget->creationsource
        , creationdate :=       synctarget->creationdate
        , remoteschema :=       `local schema ${synctarget->tag}`
        , excludetypes :=       STRING[ "DOESNOTEXIST2" ]
        , includetypes :=       STRING[]
        , remotesynchistory :=  synctarget->GetSchemaSetting("wrd:sync.history")
        , user :=               [ login := "wrd_metadatarights@beta.webhare.net" ]
        ]
      ], synctarget2->GetSchemaSetting("wrd:sync.history"), "*");

  TestEQLike(
      `*testsynchistory*partial*sync*${synctarget->tag}*${synctarget->creationsource}*`,
      synctarget2->creationsource);

  // full sync clears the history
  RECORD syncres3 := RunSync(synctarget2, DEFAULT OBJECT, synctarget->tag);
  TestEQMembers(
      [ [ type :=               "fullsync"
        , creationsource :=     synctarget->creationsource
        , creationdate :=       synctarget->creationdate
        , remoteschema :=       `local schema ${synctarget->tag}`
        , excludetypes :=       STRING[]
        , includetypes :=       STRING[]
        , remotesynchistory :=  synctarget->GetSchemaSetting("wrd:sync.history")
        , user :=               [ login := "wrd_metadatarights@beta.webhare.net" ]
        ]
      ], synctarget2->GetSchemaSetting("wrd:sync.history"), "*");

  TestEQLike(
      `Sync*${synctarget->tag}*${synctarget->creationsource}*`,
      synctarget2->creationsource);

  // rmote peer
  RECORD syncres4 := RunSync(synctarget2, syncpeer, synctarget->tag);
  TestEQMembers(
      [ [ type :=               "fullsync"
        , creationsource :=     synctarget->creationsource
        , creationdate :=       synctarget->creationdate
        , remoteschema :=       `${syncpeer->url}#${synctarget->tag}`
        , excludetypes :=       STRING[]
        , includetypes :=       STRING[]
        , remotesynchistory :=  synctarget->GetSchemaSetting("wrd:sync.history")
        , user :=               [ login := "wrd_metadatarights@beta.webhare.net" ]
        ]
      ], synctarget2->GetSchemaSetting("wrd:sync.history"), "*");

  TestEQLike(
      `Sync*${syncpeer->url}*${synctarget->tag}*${synctarget->creationsource}*`,
      synctarget2->creationsource);
}

MACRO TestLocalBlobUsage()
{
  __sync_reusedblobs := 0;

  // Clean schema for clean sync history
  testfw->BeginWork();
  IF (ObjectExists(OpenWRDSchema("webhare_testsuite:synctarget")))
    OpenWRDSchema("webhare_testsuite:synctarget")->DeleteSelf();

  OBJECT synctarget := CreateWRDSchema("webhare_testsuite:synctarget",
        [ title := "webhare_testsuite schema, sync target"
        , description := "The webhare_testsuite WRD schema sync target"
        ]);

  OBJECT entity := testfw->GetWRDSchema()->^wrd_person->CreateEntity(
      [ test_file :=    WrapBlob(StringToBlob("string file"), "filename.text")
      , test_image :=   WrapBlob(GetHarescriptResource("mod::system/web/tests/snowbeagle.jpg"), "bob.jpg")
      , richie :=       [ htmltext := StringToBlob('<html><body>'
                                          || '<p class="normal">Ik ben een <b>&lt;normale&gt;</b> <a href="http://webhare.nl/">webhare</a> <i>[]paragraaf[]</i><br/>met\neen      soft-break en een afbeelding: <img src="cid:imagecid-81400" class="wh-rtd__img--floatright" width="160" height="120" alt="I&amp;G" /></p>'
                                          || '</body></html>')
                        , embedded := [ CELL[...WrapBlob(GetHarescriptResource("mod::system/web/tests/snowbeagle.jpg"), "bob.jpg")
                                        , contentid := "imagecid-81400"
                                        ]
                                      ]
                        ]
      , wrd_tag :=      "PERSON1"
      , whuser_unit :=  testfw->testunit
      ]);

  testfw->CommitWork();

  // Run a fill sync
  RunSync(synctarget, DEFAULT OBJECT, testfw->GetWRDSchema()->tag);

  // No blob reusage, we had an empty schema
  TestEQ(0, __sync_reusedblobs);

  // Update the remote entity, triggers reync of that entity
  testfw->BeginWork();
  entity->UpdateEntity([ test_integer := 1 ]);
  testfw->CommitWork();

  // Run a second sync - should re-use 3 of the 4 blobs (rtd htmltext has no hash to compare)
  RunSync(synctarget, DEFAULT OBJECT, testfw->GetWRDSchema()->tag);
  TestEQ(3, __sync_reusedblobs);

  // Test if the data is equal
  RECORD syncedfields := synctarget->^wrd_person->GetEntityFields(synctarget->^wrd_person->Search("WRD_TAG", "PERSON1"), [ "test_file", "test_image", "richie" ]);
  TestEQ(DEFAULT RECORD, entity->FilterFieldUpdates(syncedfields));
}

