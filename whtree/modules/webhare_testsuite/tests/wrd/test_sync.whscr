  OBJECT linktome1 := linktometype->CreateEntity([wrd_tag := "LINKTOME1"]);

  testfw->CommitWork();

  RECORD port := testfw->GetLocalhostWebinterface();

  syncpeer := OpenMarshalledWebHarePeer(
      [ __marshall__remotewebhareconnection :=
            [ url :=          port.baseurl
