MACRO TestSync()
{
  OBJECT userapi := GetWRDAuthUserAPI(testfw->wrdschema);

  RECORD tokenrec := userapi->GenerateOAuthAccessToken(testfw->GetUserObject("wrd_readrights")->entityid, STRING[]);

