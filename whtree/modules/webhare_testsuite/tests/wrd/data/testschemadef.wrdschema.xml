<schemadefinition xmlns="http://www.webhare.net/xmlns/wrd/schemadefinition">

  <object tag="test_type">
    <!-- Domain for configuration apps. Used to attach rights -->
    <attributes>
      <enum tag="enum1" allowedvalues="a b c" />
      <enum tag="enum2" allowedvalues="a ?:? c:*" />
    </attributes>
    <values matchattribute="wrd_tag">
      <value>
        <field tag="wrd_tag">TESTENTRY</field>
      </value>
    </values>
  </object>

  <domain tag="test_array_fields">
    <attributes>
      <array tag="translated" title="Translated values">
        <free tag="langcode" title="Language code for this translation" />
        <free tag="title" title="Title" />
        <free tag="contact_name" title="Contact name" />
      </array>
    </attributes>

    <values matchattribute="wrd_tag">
      <value>
        <field tag="wrd_tag">HOVI_UT_ENSCHEDE</field>
        <arrayfield tag="translated">
          <element>
            <field tag="langcode">en</field>
            <field tag="title">University of Twente, location Enschede</field>
          </element>
          <element>
            <field tag="langcode">nl</field>
            <field tag="title">University of Twente, vestiging Enschede</field>
          </element>
        </arrayfield>
      </value>
    </values>
  </domain>

</schemadefinition>
