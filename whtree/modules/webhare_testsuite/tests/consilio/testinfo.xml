<group xmlns="http://www.webhare.net/xmlns/system/testinfo">
  <param name="consilio_binary" value="$webhare_dir$bin/consilio$binary_extension$"/>
  <param name="indexdir" value="$temp_dir$testindex"/>
  <param name="listenport" value="35000"/>

  <test script="test_queryparser.whscr" />
  <test script="test_tika.whscr" />

  <!-- test ES parsers (and other internal stuff later?) - does not actually require an ES to communicate with, so we can always run this test -->
  <test script="test_elasticsearch_internal.whscr" />

  <test script="test_indexmanager.whscr" ifenvironset="WEBHARE_PREFERINDEXMANAGER">
    <arg param="consilio_binary"/>
    <arg param="listenport"/>
    <arg param="indexdir"/>
  </test>

  <!-- API tests should go before other tests -->
  <test script="test_moduleindices.whscr" />
  <test script="test_multiindex.whscr" />
  <test script="test_catalogapp.whscr" unlessenvironset="WEBHARE_PREFERINDEXMANAGER"/>

  <test script="test_siteprofile_indices.whscr" />
  <test script="test_consilioapi.whscr" />
  <test script="test_robots.whscr" />
  <test script="test_customcontent.whscr" />
  <test script="test_suggestfields.whscr" />
  <test script="test_thesaurus.whscr" />
  <test script="test_boostwords.whscr" />
  <test script="test_parsers.whscr" />
  <test script="test_publishersearch.whscr" />
  <test script="test_linkcheck.whscr"/>
  <test script="test_publisher_linkcheck.whscr"/>
  <test script="test_cleanup.whscr" />
  <test script="test_pagelists.whscr" />

  <jstest file="test_pxl.es" />
  <jstest file="test_backendapi.es" />

  <test name="indextypes" path="indextypes/" />

</group>
