<?xml version="1.0" encoding="UTF-8" ?>
<siteprofile xmlns="http://www.webhare.net/xmlns/publisher/siteprofile"
             xmlns:t="http://www.webhare.net/xmlns/tollium/screens"
             xmlns:m="http://www.webhare.net/xmlns/system/moduledefinition"
             xmlns:p="http://www.webhare.net/xmlns/publisher/components"
             xmlns:w="http://www.webhare.net/xmlns/wrd/components"
             xmlns:ut="http://www.utwente.nl/xmlns/components"
             >

<!-- Side widgets -->
  <widgettype namespace="urn::testnamespace/widgets/yourbenefits"
              editfragment=".edityourbenefits"

              >
    <members>
      <member name="title" type="string" />
      <member name="subtitle" type="string" />
      <member name="items" type="array">
        <member name="title" type="string" />
        <member name="subtitle" type="string" />
        <member name="subtitle_type" type="string" />
        <member name="link" type="intextlink" />
      </member>
    </members>
  </widgettype>
  <fragment name="edityourbenefits" xmlns="http://www.webhare.net/xmlns/tollium/screens" implementation="none" gid="testtids.gid1">
    <contents gid=".gid2">
      <textedit composition="fsinstance" width="1pr" cellname="title" required="true" />
      <textedit composition="fsinstance" width="1pr" cellname="subtitle" />
      <arrayedit rowselect="true"
                 composition="fsinstance"
                 cellname="items"
                 roweditscreen=".edityourbenefitlink"
                 width="1pr"
                 minrows="1"
                 height="1pr"
                 minwidth="450px"
                 orderable="true"
                 >
        <column name="title" type="text" width="120px"/>
        <p:intextlinkcolumn name="link" width="2pr" />
      </arrayedit>
    </contents>
  </fragment>


  <!-- Do not rewrite, has implementation -->
  <widgettype namespace="urn::testnamespace/widgets/donotrewrite"
              editfragment=".donotrewrite"
              >
    <members>
      <member name="title" type="string" />
      <member name="subtitle" type="string" />
      <member name="items" type="array">
        <member name="title" type="string" />
        <member name="subtitle" type="string" />
        <member name="subtitle_type" type="string" />
        <member name="link" type="intextlink" />
      </member>
    </members>
  </widgettype>
  <fragment name="donotrewrite" xmlns="http://www.webhare.net/xmlns/tollium/screens" library="lib/dummy.whlib">
    <contents >
      <textedit composition="fsinstance" width="1pr" cellname="title" required="true" />
      <textedit composition="fsinstance" width="1pr" cellname="subtitle" />
      <arrayedit rowselect="true"
                 composition="fsinstance"
                 cellname="items"
                 roweditscreen=".edityourbenefitlink"
                 width="1pr"
                 minrows="1"
                 height="1pr"
                 minwidth="450px"
                 orderable="true">
        <column name="title" type="text" width="120px"/>
        <p:intextlinkcolumn name="link" width="2pr" />
      </arrayedit>
    </contents>
  </fragment>


</siteprofile>
