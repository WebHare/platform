MACRO NeedsTemplateProfileTest()
{
  testfw->BeginWork();
  OBJECT testfolderobj := testfw->GetWHFSTestRoot();

  OBJECT templfile := testfolderobj->CreateFile([name := "needstest.tpl",type:=28]);
  OBJECT profilefile := testfolderobj->CreateFile([name := "needstest.prl",type:=29]);

  OBJECT worddoc := testfolderobj->CreateFile([name := "needstest.doc",type:=4]);
  TestEq(TRUE,worddoc->needstemplate);
  TestEq(TRUE,worddoc->needsprofile);

  OBJECT htmldoc := testfolderobj->CreateFile([name := "needstest.html",type:=7]);
  TestEq(TRUE,htmldoc->needstemplate);
  TestEq(FALSE,htmldoc->needsprofile);

  OBJECT worddoc_intlink := testfolderobj->CreateFile([name := "needstest.doc.intlink",type:=19,filelink:=worddoc->id]);
  TestEq(FALSE,worddoc_intlink->needstemplate);
  TestEq(FALSE,worddoc_intlink->needsprofile);

  OBJECT htmldoc_intlink := testfolderobj->CreateFile([name := "needstest.html.intlink",type:=19,filelink:=htmldoc->id]);
  TestEq(FALSE,htmldoc_intlink->needstemplate);
  TestEq(FALSE,htmldoc_intlink->needsprofile);

  OBJECT worddoc_contentlink := testfolderobj->CreateFile([name := "needstest.doc.clink",type:=20,filelink:=worddoc->id]);
  TestEq(TRUE,worddoc_contentlink->needstemplate);
  TestEq(TRUE,worddoc_contentlink->needsprofile);

  OBJECT htmldoc_contentlink := testfolderobj->CreateFile([name := "needstest.html.clink",type:=20,filelink:=htmldoc->id]);
  TestEq(TRUE,htmldoc_contentlink->needstemplate);
  TestEq(FALSE,htmldoc_contentlink->needsprofile);

  worddoc_contentlink->UpdateMetadata([profile := profilefile->id, template := templfile->id]);
  TestEq(profilefile->id, worddoc_contentlink->profile);
  TestEq(templfile->id, worddoc_contentlink->template);
  worddoc_contentlink->UpdateMetadata([profile := 0, template := 0]);
  TestEq(0, worddoc_contentlink->profile);
  TestEq(0, worddoc_contentlink->template);

  htmldoc_contentlink->UpdateMetadata([profile := profilefile->id, template := templfile->id]);
  TestEq(0, htmldoc_contentlink->profile);
  TestEq(templfile->id, htmldoc_contentlink->template);
  htmldoc_contentlink->UpdateMetadata([profile := 0, template := 0]);
  TestEq(0, htmldoc_contentlink->profile);
  TestEq(0, htmldoc_contentlink->template);

  worddoc_intlink->UpdateMetadata([profile := profilefile->id, template := templfile->id]);
  TestEq(0, worddoc_intlink->profile);
  TestEq(0, worddoc_intlink->template);
  worddoc_intlink->UpdateMetadata([profile := 0, template := 0]);
  TestEq(0, worddoc_intlink->profile);
  TestEq(0, worddoc_intlink->template);

  htmldoc_intlink->UpdateMetadata([profile := profilefile->id, template := templfile->id]);
  TestEq(0, htmldoc_intlink->profile);
  TestEq(0, htmldoc_intlink->template);
  htmldoc_intlink->UpdateMetadata([profile := 0, template := 0]);
  TestEq(0, htmldoc_intlink->profile);
  TestEq(0, htmldoc_intlink->template);

  //repoint worddoclink to a htmlfile while setting profile/template
  worddoc_contentlink->UpdateMetadata([profile := profilefile->id, template := templfile->id, filelink := htmldoc->id]);
  TestEq(0, worddoc_contentlink->profile);
  TestEq(templfile->id, worddoc_contentlink->template);
  worddoc_contentlink->UpdateMetadata([profile := 0, template := 0 ]);
  TestEq(0, worddoc_contentlink->profile);
  TestEq(0, worddoc_contentlink->template);

  //repoint worddoclink back to the worddoc while setting profile/template
  worddoc_contentlink->UpdateMetadata([profile := profilefile->id, template := templfile->id, filelink := worddoc->id]);
  TestEq(profilefile->id, worddoc_contentlink->profile);
  TestEq(templfile->id, worddoc_contentlink->template);
  worddoc_contentlink->UpdateMetadata([profile := 0, template := 0 ]);
  TestEq(0, worddoc_contentlink->profile);
  TestEq(0, worddoc_contentlink->template);

  testfw->CommitWork();
}

MACRO TestWHFSResourceNameMapper()
{
  OBJECT mapper := NEW WHFSResourceNameMapper;

  TestEQ(``, mapper->MapWHFSRef(0));

  OBJECT testsuite_site := OpenTestsuiteSite();
  TestEQ(`site::${testsuite_site->name}/index.rtd`, mapper->MapWHFSRef(testsuite_site->OpenByPath("index.rtd")->id));
