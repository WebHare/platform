MACRO ExtendedZipTest()
{
  BLOB testzip_no_metadata := testfw->GetModuleTestBlob("webhare_testsuite","system/testdata/no_metadata.zip");

  testfw->BeginWork();
  OBJECT testfolderobj := testfw->GetWHFSTestRoot();

