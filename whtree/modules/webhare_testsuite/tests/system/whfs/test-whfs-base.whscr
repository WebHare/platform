MACRO TemplateProfileTest()
{
  testfw->BeginWork();

  OBJECT firstfolder := testfw->GetWHFSTestRoot();
  OBJECT templprofbase := firstfolder->CreateFolder([name := "activetest"]);
  OBJECT templprofbase2 := firstfolder->CreateFolder([name := "activetest2"]);
  OBJECT testtemplate := firstfolder->CreateFile([name := "testtemplate", type := 28]);
  OBJECT testprofile := firstfolder->CreateFile([name := "testprofile", type := 29]);
  OBJECT testtemplate2 := firstfolder->CreateFile([name := "testtemplate2", type := 28]);
  OBJECT testprofile2 := firstfolder->CreateFile([name := "testprofile2", type := 29]);

  OBJECT testdoc, testhtml, testsub;

  testdoc := templprofbase->CreateFile([name := "fake.doc", type := 4]);
  TestEq(0, testdoc->template);
  TestEq(0, testdoc->profile);
  testdoc->DeleteSelf();

  //Set the template & profile as defaults
  templprofbase->UpdateMetadata([template := testtemplate->id, profile := testprofile->id]);

  //DOCs should pick up both template&profile defaults
  testdoc := templprofbase->CreateFile([name := "fake.doc", type := 4]);
  TestEq(testtemplate->id, testdoc->template);
  TestEq(testprofile->id, testdoc->profile);
  testdoc->DeleteSelf();

  //HTML documents should remain unaffected by profile, but affected by template
  testhtml := templprofbase->CreateFile([name := "fake.html", type := 7]);
  TestEq(testtemplate->id, testhtml->template);
  TestEq(0, testhtml->profile);
  testhtml->DeleteSelf();

  //New folder should pick 'm up too
  testsub := templprofbase->CreateFolder([name := "subdir"]);
  TestEq(testtemplate->id, testsub->template);
  TestEq(testprofile->id, testsub->profile);

  //Explicitly set them, the defaults should be ignored now
  testdoc := templprofbase->CreateFile([name := "fake.doc", type := 4, template := 0, profile := 0]);
  TestEq(0, testdoc->template);
  TestEq(0, testdoc->profile);

  //Now mark the template&profile as required
  templprofbase->UpdateMetadata([requiretemplate := TRUE, requireprofile := TRUE]);
  testdoc->Refresh();
  TestEq(testtemplate->id, testdoc->template);
  TestEq(testprofile->id, testdoc->profile);

  //Try to change the template&profile
  testdoc->UpdateMetadata([template := testtemplate2->id, profile := testprofile2->id]);
  testdoc->Refresh();
  TestEq(testtemplate->id, testdoc->template);
  TestEq(testprofile->id, testdoc->profile);

  //Try to create a new file with a forced different template
  OBJECT testdoc2 := templprofbase->CreateFile([name := "fake2.doc", type := 4, template := testtemplate2->id, profile := testprofile2->id]);
  TestEq(testtemplate->id, testdoc2->template);
  TestEq(testprofile->id, testdoc2->profile);

  //Now we test auto-reapply and auto-removal of templates/profiles
  testdoc->UpdateMetadata( [ type := 5 ]); //turn it into a HTML file.
  TestEq(0, testdoc->profile);
  TestEq(testtemplate->id, testdoc->template);

  //Even forcing a profile should be ignored
  testdoc->UpdateMetadata( [ profile := testprofile->id ]);
  TestEq(0, testdoc->profile);

  //turn it into an unknown file (should want neither template nor profile)
  testdoc->UpdateMetadata( [ type := 0, template := testtemplate->id ]);
  TestEq(0, testdoc->profile);
  TestEq(0, testdoc->template);

  //test the 'we suddenly detected a 0 byte files type' scenario (webdav often does this)
  OBJECT laterdetectfile := templprofbase->CreateFile( [name := "xxxxx"]);
  TestEq(0, laterdetectfile->type);
  TestEq(0, laterdetectfile->template);
  laterdetectfile->UpdateData(StringToBlob('<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> <HTML><TITLE>I am html!</TITLE></HTML>'));
  TestEq(5, laterdetectfile->type);
  TestEq(testtemplate->id, laterdetectfile->template);

  /* regression test:
     - Heb map met een bestand, vanuit site A met template A, gekopieerd naar site B
     - Na kopieren is bestand geforceerd aan template A gekoppeld, en wordt geforceerd door zijn map
     - Echter, zijn map is geforceerd gekoppeld aan template B
  */
  OBJECT folder_with_template_a := templprofbase->CreateFolder([ name := "sub_a" ]);
  OBJECT testdoc_a := folder_with_template_a->CreateFile( [name := "sub_a.doc", type := 4 ]);
  TestEq(testtemplate->id, testdoc_a->template);
  TestEq(FALSE, folder_with_template_a->requiretemplate);
  TestEq(FALSE, folder_with_template_a->requiretemplateinsubfolders);

  templprofbase2->UpdateMetadata( [ template := testtemplate2->id, requiretemplateinsubfolders := TRUE ]);
  OBJECT folder_with_template_b := templprofbase2->CreateFolder([ name := "sub_b" ]);
  TestEq(TRUE, folder_with_template_b->requiretemplate);
  TestEq(TRUE, folder_with_template_b->requiretemplateinsubfolders);
  OBJECT copied_folder := folder_with_template_a->CopyTo(folder_with_template_b,"copy_sub_a");

  //should have adapted to templprofbase2 requiremtents now
  TestEq(testtemplate2->id, copied_folder->template);
  TestEq(TRUE, copied_folder->requiretemplate);
  TestEq(TRUE, copied_folder->requiretemplateinsubfolders);

  OBJECT copy_of_testdoc_a := copied_folder->OpenByPath("sub_a.doc");
  TestEq(testtemplate2->id, copy_of_testdoc_a->template);

  /* copying fixed template/profile requirements, but moving didn't! */
  folder_with_template_a->MoveTo(folder_with_template_b,"move_sub_a");

  //should have adapted to templprofbase2 requiremtents now
  TestEq(testtemplate2->id, folder_with_template_a->template);
  TestEq(TRUE, folder_with_template_a->requiretemplate);
  TestEq(TRUE, folder_with_template_a->requiretemplateinsubfolders);

  OBJECT moved_testdoc_a := folder_with_template_a->OpenByPath("sub_a.doc");
  TestEq(testtemplate2->id, moved_testdoc_a->template);

  //issue 6829: template not forced on a new contentlink.
  testdoc := firstfolder->CreateFile([name := "fake.doc", type := 4]);
  TestEq(0,testdoc->template); //no template yet (so no accidental copying)

  OBJECT testlink := folder_with_template_a->CreateFile([name := "linktodoc.doc", type := 20, filelink := testdoc->id]);
  TestEq(folder_with_template_a->template, testlink->template);

  testfw->CommitWork();
}

MACRO GetSetTest()
{
  testfw->BeginWork();

  OBJECT firstfolder := testfw->GetWHFSTestRoot();
  OBJECT testfile := firstfolder->CreateFile([name:="getsettest"]);

  OBJECT betatype := OpenWHFSType("http://www.webhare.net/xmlns/beta/test");

  betatype->SetInstanceData(testfile->id, [ stringtest := "a" ] );

  testfw->CommitWork();
  testfw->BeginWork();

  TestEq("a", betatype->GetInstanceData(testfile->id).stringtest);

  testfw->CommitWork();
  testfw->BeginWork();

  testfile->SetInstanceData("http://www.webhare.net/xmlns/beta/test", [ stringtest := "b" ] );

  testfw->CommitWork();
  testfw->BeginWork();

  TestEq("b", testfile->GetInstanceData("http://www.webhare.net/xmlns/beta/test").stringtest);

  testfw->CommitWork();
  testfw->BeginWork();

  testfile->SetInstanceDataByType(betatype, [ stringtest := "c" ] );

  testfw->CommitWork();
  testfw->BeginWork();

  TestEq("c", testfile->GetInstanceDataByType(betatype).stringtest);

  //Setting a nonexisting field should crash
  TRY
  {
    testfile->SetInstanceDataByType(betatype, [ bestaatniet := "d" ] );
    ABORT("Did not get the expected exception while setting a non-existant member");
  }
  CATCH(OBJECT<WHFSException> e)
  {
    TestEq(TRUE, e->IsInvalidArgument());
  }

  testfw->CommitWork();
}

MACRO MoveTest()
{
  BLOB testzip_no_metadata := testfw->GetModuleTestBlob("webhare_testsuite","system/testdata/no_metadata.zip");

  testfw->BeginWork();

  OBJECT testfolderobj := testfw->GetWHFSTestRoot();
  OBJECT testsite := testfolderobj->CreateFolder([ name := "webhare_testsuite_movetest" ]);
  TestEq([INTEGER(testfolderobj->id), testsite->id], testsite->GetWHFSTree());
  TestEq(DEFAULT INTEGER ARRAY, testsite->GetFullTree());
  //CreateSiteFromFolder(testsite->id);

  testsite := OpenWHFSObject(testsite->id);
  TestEq([INTEGER(testfolderobj->id), testsite->id], testsite->GetWHFSTree());
  //TestEq([INTEGER(testsite->id)], testsite->GetFullTree());

  //TestEq(testsite->id, OpenWHFSObject(testsite->id)->highestparent);

  TestEq(testsite->id, OpenWHFSObjectByPath("whfs::/webhare_testsuite.testfolder/" || "webhare_testsuite_movetest")->id);
  TestEq(FALSE, ObjectExists(OpenWHFSObjectByPath("filebyid::" || testsite->id)));

