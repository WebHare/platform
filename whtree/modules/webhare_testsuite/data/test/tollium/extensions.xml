<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:p="http://www.webhare.net/xmlns/publisher/components">

  <tabsextension name="TabsExtension">
    <compositions>
      <radiogroup name="addedgroup" />
    </compositions>
    <newtab title="First tab">
      <arrayedit name="arrayedit" roweditscreen=".extendededitor">
        <column name="text" type="text" />
      </arrayedit>
      <richdocument name="rte" height="1pr" minheight="300px" />
    </newtab>
    <newtab name="extratab" title="Extra tab">
      <arrayedit roweditscreen=".extendededitor">
        <!-- Do NOT 'name' this arrayedit. this is specifically about testing that unnamed arrayedit (anonymous, not injected into scope) do not prevent their submembers ('list') from being injected into scope -->
        <column name="text" type="text" />
      </arrayedit>
      <text name="text1" title="Intoxication" value="0.8â€°" />
      <radiobutton name="addedgroup_k1" group="addedgroup" label="Radio button shared with the next tab" rowkey="k1" />
      <radiobutton name="externalgroup_k1" group="externalradiogroup" label="Radio button shared with main tab" rowkey="k1" />
      <imgedit name="imgedit" />
    </newtab>
    <newtab name="yattab" gid="test" public="true">
      <radiobutton name="addedgroup_k2"
                   group="addedgroup"
                   label="Radio button shared with the previous tab"
                   rowkey="k2"
                   value="true" />
      <imgedit name="mainedit" />
      <select name="beschikbaarheid" type="radio" public="true">
        <option rowkey="beschikbaar" />
        <option rowkey="verkocht" />
        <option rowkey="binnenkort" />
      </select>
      <includefragment fragment=".testfragment" />
    </newtab>
  </tabsextension>

  <tabsextension name="extensionwithcode"
                 implementation="lib"
                 lib="module::webhare_testsuite/screens/tests/tabextensions.whlib">
    <insert position="thefirsttab" where="atend">
      <p:intextlink name="intextlink" />
    </insert>
    <newtab title="Third tab">
      <text title="" value="Text" />
    </newtab>
  </tabsextension>

  <screen name="extendededitor" implementation="rowedit">
    <compositions>
      <record name="row" />
    </compositions>

    <body>
      <textedit composition="row" cellname="text" />
      <defaultformbuttons buttons="ok cancel" />
    </body>
  </screen>

  <fragment name="testfragment" implementation="none">
    <contents>
      <text value="Text from loaded fragment" />
    </contents>
  </fragment>

</screens>
