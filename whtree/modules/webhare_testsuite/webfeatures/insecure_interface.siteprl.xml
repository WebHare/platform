<siteprofile xmlns="http://www.webhare.net/xmlns/publisher/siteprofile">

  <apply>
    <to type="all" pathmask="/portal" />
    <wrdauth xmlns="http://www.webhare.net/xmlns/wrd" samesitecookie="none" />  <!-- to get the cookies to work in the iframe -->
  </apply>

  <sitesettings sitename="WebHare Backend">
    <webruleset xmlns="http://www.webhare.net/xmlns/system/moduledefinition" >
      <webrule path="/" match="initial">
        <addheader header="X-Frame-Options" value=""/>
        <csp policy="" />
      </webrule>
    </webruleset>
  </sitesettings>

</siteprofile>
