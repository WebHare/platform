<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:socialite="http://www.webhare.net/xmlns/socialite/components"
         gid="commondialogs"
         library="/lib/screens/commondialogs.whlib">

  <screen name="location"
          minwidth="500px"
          minheight="500px"
          allowresize="true"
          footerbuttons="ok cancel"
          gid=".location"
          savestate="size"
          tid=".title">
    <actions>
      <action name="search" onexecute="dosearch" title="" />
    </actions>

    <body layout="left" spacers="none">
      <panel spacers="top bottom left right">
        <heading tid=".searchbox" />
        <line>
          <textedit name="query" width="1pr" defaultbutton="searchbutton" title="" />
          <button name="searchbutton" action="search" />
        </line>
        <text labelfor="results" tid=".results" value="" wordwrap="true" />
        <line>
          <select name="results" type="pulldown" emptytid=".noresults" onchange="onresultselect" title="" />
        </line>
        <heading height="1pr" tid=".mapbox" />
      </panel>
      <panel width="1pr" height="1pr" borders="top bottom">
        <socialite:map name="map"
                       width="1pr"
                       height="1pr"
                       minwidth="200px"
                       minheight="150px"
                       center="40,0"
                       onclick="onclick"
                       onmoveoverlay="onmoveoverlay"
                       zoom="1" />
      </panel>
    </body>
  </screen>

</screens>
