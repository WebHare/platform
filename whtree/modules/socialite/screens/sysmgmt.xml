<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         lib="screens/sysmgmt.whlib"
         xmlns:s="http://www.webhare.net/xmlns/system/components"
         gid="sysmgmt.googleapikeys">

  <screen name="googleapikeys"
          allowresize="true"
          icon="socialite:favicon"
          width="130x" height="25x">
    <compositions>
      <s:registrynode name="localoverrides" node="socialite.localoverrides" />
    </compositions>
    <body spacers="none">
      <tabs height="1pr" savestate="selectedtab">
        <tab tid=".overrides">
          <line layout="left">
            <text valuetid=".aboutoverrides" wordwrap="true"/>
          </line>
          <line>
            <textedit composition="localoverrides" cellname="universalanalytics" title="Universal Analytics"/>
            <text value="(UA-NNNNNNN-NN)" />
          </line>
          <line>
            <textedit composition="localoverrides" cellname="tagmanager" title="Google Tag Manager" />
            <text value="(GTM-XXXXXX)" />
          </line>
        </tab>
        <tab tid=".apitab">
          <listedit name="keys"
                    ongetrows="getapikeys"
                    onrowedit="editapikey"
                    onrowdelete="deleteapikeys"
                    emptytid=".nokeys"
                    width="1pr" height="1pr"
                    minwidth="80x" minheight="5x">
            <column name="creationdate" tid="~creationdate" width="15x" type="datetime" storeutc="true" precision="minutes" />
            <column name="keytype" type="text" width="1pr" />
            <column name="scopetype" type="text" width="1pr" />
            <column name="domain" type="text" width="1pr" />
            <column name="comment" type="text" width="3pr" tid="~comments"/>
          </listedit>
        </tab>
      </tabs>
    </body>
    <footer>
      <defaultformbuttons buttons="ok cancel" />
    </footer>
  </screen>

  <screen name="editapikey" minwidth="80x">
    <compositions>
      <record name="apikey" />
    </compositions>
    <body>
      <select composition="apikey" cellname="keytype" name="keytype" type="radio" flags="isgoogle isgooglerecapcta" onchange="ontypechange" rowkeytype="integer">
        <option rowkey="0" tid=".keytype-google" flags="isgoogle" />
        <option rowkey="1" tid=".keytype-google-recaptcha" flags="isgooglerecaptcha" />
      </select>
      <select composition="apikey" cellname="scopetype" type="radio" onchange="ontypechange" rowkeytype="integer">
        <option rowkey="0" tid=".scopetype-any" />
        <option rowkey="1" tid=".scopetype-client" />
        <option rowkey="2" tid=".scopetype-server" />
      </select>
      <textedit composition="apikey" cellname="domain" required="true" width="1pr" />
      <textedit composition="apikey" cellname="apikey" required="true" width="1pr" />
      <textedit composition="apikey" cellname="privatekey" required="true" width="1pr" />
      <textarea composition="apikey" cellname="comment" width="1pr" tid="~comments" />
    </body>
    <footer>
      <defaultformbuttons buttons="ok cancel" />
    </footer>
  </screen>

</screens>
