<?wh
LOADLIB "mod::system/lib/database.whlib";


/** @schemadef socialite
*/
PUBLIC SCHEMA
  < TABLE
    < INTEGER "id" NULL := 0
    , STRING "title"
    , STRING "tag"
    ; KEY id
    > accounts
  , TABLE
    < INTEGER "id" NULL := 0
    , INTEGER "account" NULL := 0
    , STRING "title"
    , STRING "tag"
    , STRING "type"
    , STRING "remarks"
    , BOOLEAN "logrpc"
    ; KEY id
    > applications
  , TABLE
    < INTEGER "id" NULL := 0
    , INTEGER "application" NULL := 0
    , STRING "tag"
    , STRING "value"
    ; KEY id
    > applicationkeys
  > socialite;

MACRO BindSocialiteTables(INTEGER transaction)
{
  socialite := BindTransactionToSchema(transaction, "socialite");
}

SetupPrimaryTransactionBinder(PTR BindSocialiteTables);
