<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:publisher="http://www.webhare.net/xmlns/publisher/components"
         gid="tolliumapps.objectprops.tasks"
         library="tasks.whlib">

  <screen name="taskprops" footerbuttons="ok cancel" title="">
    <compositions>
      <radiogroup name="event" />
    </compositions>

    <body>
      <radiobutton name="start" group="event" labeltid=".event-start" rowkey="1" tid=".event" />
      <radiobutton name="end" group="event" labeltid=".event-end" rowkey="2" title="" />
      <line>
        <radiobutton name="move" enablecomponents="folder" group="event" labeltid=".event-move" rowkey="3" title="" />
        <publisher:browseforobject name="folder"
                                   acceptfiles="false"
                                   errorlabeltid=".event-move"
                                   required="true"
                                   showclear="false"
                                   title="" />
      </line>
      <radiobutton name="delete" group="event" labeltid=".event-delete" rowkey="4" title="" />
      <radiobutton name="setindexdoc" group="event" labeltid=".event-setindexdoc" rowkey="5" title="" />
      <line>
        <radiobutton name="button_replacewith"
                     enablecomponents="replacewith"
                     group="event"
                     labeltid=".event-replacewith"
                     rowkey="6"
                     title="" />
        <publisher:browseforobject name="replacewith"
                                   acceptfolders="false"
                                   errorlabeltid=".event-replacewith"
                                   required="true"
                                   showclear="false"
                                   title="" />
      </line>
      <datetime name="when" type="datetime" precision="minutes" required="true" storeutc="true" />
    </body>
  </screen>

</screens>
