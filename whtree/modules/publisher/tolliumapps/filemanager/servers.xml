<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
    library="servers.whlib"
    gid="blit.servers">

  <messageboxes>
    <messagebox name="confirmdeleteserver" buttons="yes no" />
    <messagebox name="confirmnonsecureserver" buttons="yes no" />
    <messagebox name="confirmfailedserver" buttons="yes no" />
  </messageboxes>

  <screen name="serverlist"
          gid=".serverlist"
          tid=".screentitle"
          allowresize="true"
          savestate=""
          minwidth="100x"
          minheight="30x">
    <actions>
      <action name="additem" tid="tollium:common.actions.add" onexecute="doadditem" />
      <action name="edititem" tid="tollium:common.actions.edit" onexecute="doedititem">
        <enableon source="serverlist" min="1" max="1" />
      </action>
      <action name="deleteitem" tid="tollium:common.actions.delete" onexecute="dodeleteitem">
        <enableon source="serverlist" min="1" max="1" />
      </action>
    </actions>
    <menus>
      <menu name="serverlistselection">
        <item action="edititem" disablemode="hidden" />
        <item action="deleteitem" disablemode="hidden" />
      </menu>
      <menu name="serverlistnoselection">
        <item action="additem" disablemode="hidden" />
      </menu>
    </menus>
    <body>
      <grid height="1pr">
        <col width="1pr" />
        <col />
        <row height="1pr">
          <cell>
            <list name="serverlist"
                  selectmode="single"
                  height="1pr"
                  openaction="edititem"
                  selectcontextmenu="serverlistselection"
                  newcontextmenu="serverlistnoselection"
                  >
              <column name="url" type="text" width="3pr" />
              <column name="username" type="text" width="1pr" />
              <column name="password" type="text" width="1pr" />
            </list>
          </cell>
          <cell>
            <button action="additem" width="1pr" tid="tollium:common.actions.add"/>
            <button action="edititem" width="1pr" tid="tollium:common.actions.edit"/>
            <button action="deleteitem" width="1pr" tid="tollium:common.actions.delete"/>
          </cell>
        </row>
      </grid>
    </body>
    <footer>
      <defaultformbuttons buttons="close"/>
    </footer>
  </screen>


  <screen name="updateserver" gid=".servers.server" onunload="onunload">
    <body>
      <box tid=".serversettings">
        <textedit name="url" required="true" validationchecks="http-url" />
        <textedit name="username" required="true" />
        <textedit name="password" required="true" password="true" />
        <!-- fields -->
      </box>
    </body>
    <footer>
      <defaultformbuttons buttons="ok cancel"/>
    </footer>
  </screen>

</screens>
