<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:system="http://www.webhare.net/xmlns/system/components"
         gid="filemanager.recyclebin"
         library="recyclebin.whlib">

  <screen name="filterpanel" gid=".filterpanel" title="">
    <body>
      <grid>
        <col />
        <col width="1pr" />
        <row>
          <cell>
            <checkbox name="searchnameon" enablecomponents="searchname" labeltid=".searchoptions-searchname" title="" />
          </cell>
          <cell>
            <textedit name="searchname" width="1pr" title="" />
          </cell>
        </row>
        <row>
          <cell>
            <checkbox name="searchsiteon" enablecomponents="searchsite" labeltid=".searchoptions-searchsite" title="" />
          </cell>
          <cell>
            <browsecustom name="searchsite"
                          width="1pr"
                          onbrowse="onselectsite"
                          onmapvalue="onmapsite"
                          title=""
                          valuetype="integer" />
          </cell>
        </row>
        <row>
          <cell>
            <checkbox name="searchuseron" enablecomponents="searchuser" labeltid=".searchoptions-searchuser" title="" />
          </cell>
          <cell>
            <system:selectuser name="searchuser"
                               width="1pr"
                               enabled="false"
                               inputkind="AUTHOBJECT_ID"
                               onchange="onuserselected"
                               title="" />

            <!--
            <line>
              <textedit name="searchuser" title="" enabled="false" />
              <button action="selectsearchuser" name="selectsearchuserbtn" tid="~select" />
            </line>
            -->
          </cell>
        </row>
        <row>
          <cell>
            <checkbox name="searchstartdateon"
                      enablecomponents="searchstartdate"
                      labeltid=".searchoptions-searchstartdate"
                      title="" />
          </cell>
          <cell>
            <datetime name="searchstartdate" type="date" title="" />
          </cell>
        </row>
        <row>
          <cell>
            <checkbox name="searchenddateon"
                      enablecomponents="searchenddate"
                      labeltid=".searchoptions-searchenddate"
                      title="" />
          </cell>
          <cell>
            <datetime name="searchenddate" type="date" title="" />
          </cell>
        </row>
      </grid>
    </body>
  </screen>

</screens>
