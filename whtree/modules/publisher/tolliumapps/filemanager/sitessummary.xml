<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="sysmgmt.sitessummary" library="sitessummary.whlib">

  <screen name="sitessummary"
          width="130x"
          height="25x"
          allowresize="true"
          footerbuttons="close"
          gid=".sitessummary"
          icon="tollium:filemgr/mydocuments"
          tid=".title">
    <actions>
      <action name="editsite" onexecute="doeditsite" title="" />
    </actions>

    <body>
      <panel width="1pr" height="1pr">
        <list name="summary"
              width="1pr"
              height="1pr"
              minwidth="80x"
              minheight="5x"
              emptytid=".nosites"
              openaction="editsite"
              selectmode="single">
          <column name="name" type="text" />
          <column name="files" type="integer" width="10x" align="right" sortkeyname="files_sort" />
          <column name="folders" type="integer" width="10x" align="right" sortkeyname="folders_sort" />
          <column name="inputsize" type="text" width="15x" align="right" sortkeyname="inputsize_sort" />
          <column name="outputsize" type="text" width="15x" align="right" sortkeyname="outputsize_sort" />
          <column name="puberrors" type="integer" width="10x" align="right" emptyvalue="-1" sortkeyname="puberrors_sort" />
          <column name="pubwarnings" type="integer" width="10x" align="right" emptyvalue="-1" sortkeyname="pubwarnings_sort" />
          <column name="brokenlinks" type="integer" width="10x" align="right" emptyvalue="-1" sortkeyname="brokenlinks_sort" />
        </list>
      </panel>
    </body>
  </screen>

</screens>
