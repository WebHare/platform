<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="filemanager.worklists" library="worklists.whlib">

  <screen name="worklistusers" width="60x" height="20x" footerbuttons="ok cancel">
    <body spacers="none">
      <tabs height="1pr">
        <tab tid=".worklist">
          <textedit name="name" width="1pr" required="true" tid="~name" />
        </tab>
        <tab tid=".participants">
          <text width="1pr" title="" valuetid=".worklistusers-desc" wordwrap="true" />
          <arrayedit name="users" height="1pr" buttons="add delete" onrowedit="onedituser">
            <column name="name" type="text" />
            <column name="email" type="email" />
          </arrayedit>
        </tab>
      </tabs>
    </body>
  </screen>

</screens>
