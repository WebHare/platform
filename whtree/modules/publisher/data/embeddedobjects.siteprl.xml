<siteprofile xmlns="http://www.webhare.net/xmlns/publisher/siteprofile">

  <grouptype namespace="http://www.webhare.net/xmlns/publisher/generalwidgets" tid="siteprofile.widgets.general" />

  <tabsextension xmlns="http://www.webhare.net/xmlns/tollium/screens"
                 name="embedhtml"
                 allowresize="true"
                 gid="widgets.htmlwidget"
                 implementation="lib"
                 lib="components/embedhtml.whlib">
    <newtab>
      <textarea name="html"
                width="1pr"
                height="1pr"
                minwidth="70x"
                minheight="10x"
                maxlength="4096"
                maxlengthmeasure="bytes"
                showcounter="true" />
      <textarea composition="contentdata" cellname="html" name="actualhtml" visible="false" />
    </newtab>
  </tabsextension>

  <widgettype namespace="http://www.webhare.net/xmlns/publisher/embedhtml"
              editextension="#embedhtml"
              renderobjectname="mod::publisher/lib/components/embedhtml.whlib#EmbeddedHTMLObject"
              tid="widgets.htmlwidget.title">
    <members>
      <member name="html" type="string" />
    </members>
  </widgettype>

  <widgettype namespace="http://www.webhare.net/xmlns/publisher/widgets/inlinehtml"
              editextension="#embedhtml"
              embedtype="inline"
              renderobjectname="mod::publisher/lib/widgets/htmlwidget.whlib#InlineHTMLWidgetBase"
              tid="widgets.htmlwidget.title-inline">
    <members>
      <member name="html" type="string" />
    </members>
  </widgettype>

  <!-- RTD Video component -->
  <widgettype namespace="http://www.webhare.net/xmlns/publisher/embedvideo"
              editfunctionname="mod::publisher/widgets/video/video.whlib#EditEmbeddedVideoInstance"
              renderobjectname="mod::publisher/lib/internal/embedvideo.whlib#EmbedVideoObject"
              tid="siteprofile.widgets.embedvideo">
    <members>
      <member name="network" type="string" />
      <member name="videoid" type="string" />
      <member name="thumbnail" type="file" />
      <member name="creationdate" type="datetime" />
      <member name="title" type="string" />
      <member name="description" type="string" />
      <member name="duration" type="integer" />
      <member name="starttime" type="integer" />
      <member name="endtime" type="integer" />
      <member name="location" type="string" />
      <member name="playratio" type="float" />
      <member name="loop" type="boolean" />
      <member name="mute" type="boolean" />
      <member name="autoplay" type="boolean" />
    </members>
  </widgettype>

  <apply>
    <to type="all" />
    <setwidget contenttype="http://www.webhare.net/xmlns/publisher/embedvideo"
               renderobjectname="mod::publisher/lib/widgets/videowidget.whlib#VideoWidgetBase" />
    <setwidget contenttype="http://www.webhare.net/xmlns/publisher/embedhtml"
               renderobjectname="mod::publisher/lib/widgets/htmlwidget.whlib#HTMLWidgetBase" />
  </apply>

</siteprofile>
