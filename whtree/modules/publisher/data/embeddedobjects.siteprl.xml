<siteprofile
  xmlns="http://www.webhare.net/xmlns/publisher/siteprofile"
  xmlns:p="http://www.webhare.net/xmlns/publisher/components"
  xmlns:t="http://www.webhare.net/xmlns/tollium/screens">

  <grouptype namespace="http://www.webhare.net/xmlns/publisher/generalwidgets" tid="siteprofile.widgets.general" />

  <tabsextension xmlns="http://www.webhare.net/xmlns/tollium/screens"
                 name="embedhtml"
                 gid="widgets.htmlwidget"
                 implementation="lib"
                 lib="components/embedhtml.whlib"
                 allowresize="true">
    <newtab>
      <textarea name="html" minwidth="70x" minheight="10x" width="1pr" height="1pr" maxlength="4096" maxlengthmeasure="bytes" showcounter="true" />
      <textarea composition="contentdata" cellname="html" name="actualhtml" visible="false" />
    </newtab>
  </tabsextension>

  <embeddedobjecttype editextension="#embedhtml"
                      namespace="http://www.webhare.net/xmlns/publisher/embedhtml"
                      renderobjectname="mod::publisher/lib/components/embedhtml.whlib#EmbeddedHTMLObject"
                      tid="widgets.htmlwidget.title">
    <member name="html" type="string" />
    <ingroup type="http://www.webhare.net/xmlns/publisher/generalwidgets" />
  </embeddedobjecttype>

  <widgettype editextension="#embedhtml"
              embedtype="inline"
              namespace="http://www.webhare.net/xmlns/publisher/widgets/inlinehtml"
              renderobjectname="mod::publisher/lib/widgets/htmlwidget.whlib#InlineHTMLWidgetBase"
              tid="widgets.htmlwidget.title-inline">
    <members>
      <member name="html" type="string" />
    </members>
  </widgettype>

  <!-- RTD Video component -->
  <embeddedobjecttype
    namespace="http://www.webhare.net/xmlns/publisher/embedvideo"
    editlibrary="mod::publisher/lib/screens/components/embedvideo.whlib"
    editfunctionname="EditEmbeddedVideoInstance"
    renderlibrary="mod::publisher/lib/internal/embedvideo.whlib"
    tid="siteprofile.widgets.embedvideo"
    renderobjectname="EmbedVideoObject">
    <member name="network" type="string" />
    <member name="videoid" type="string" />
    <member name="thumbnail" type="file" />
    <member name="creationdate" type="datetime" />
    <member name="title" type="string" />
    <member name="description" type="string" />
    <member name="duration" type="integer" />
    <member name="location" type="string" />
    <member name="playratio" type="float" />
    <ingroup type="http://www.webhare.net/xmlns/publisher/generalwidgets" />
  </embeddedobjecttype>

  <apply>
    <to type="all" />
    <setwidget contenttype="http://www.webhare.net/xmlns/publisher/embedvideo" renderlibrary="mod::publisher/lib/widgets/videowidget.whlib" renderobjectname="VideoWidgetBase" />
    <setwidget contenttype="http://www.webhare.net/xmlns/publisher/embedhtml"
               renderlibrary="mod::publisher/lib/widgets/htmlwidget.whlib"
               renderobjectname="HTMLWidgetBase" />
  </apply>

</siteprofile>
