    <xs:attribute name="lazyloadcss" type="xs:boolean" />
    <xs:attribute name="assetpack" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          The assetpack to use
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="supportserrors" type="xs:boolean">
      <xs:annotation>
        <xs:documentation>
          If false, errors are not handled by the webdesign (default to true)
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="supportsaccessdenied" type="xs:boolean">
      <xs:annotation>
        <xs:documentation>
          If true, also handle access denied errors (401 and 403) - this defaults to false, because usually we set up HTTP authentication for complete sites, and the error page would be trying to access inacessible assets
        </xs:documentation>
      </xs:annotation>
