                <xs:attribute name="split" />
                <xs:attribute name="toclevel" />
                <xs:attribute name="hide" />
                <xs:attribute name="fgcolor" />
                <xs:attribute name="bgcolor" />
                <xs:attribute name="fontsize" />
                <xs:attribute name="fontfamily" />
                <xs:attribute name="bold" />
                <xs:attribute name="italic" />
                <xs:attribute name="underline" />
                <xs:attribute name="showhiddentext" />
                <xs:attribute name="vertspacebefore" />
                <xs:attribute name="vertspaceafter" />
                <xs:attribute name="leftindent" />
                <xs:attribute name="rightindent" />
                <xs:attribute name="firstindent" />
                <xs:attribute name="hidenumbering" />
                <xs:attribute name="smallcaps" />
                <xs:attribute name="align" />
