  <xs:complexType name="CaptchaIntegration">
    <xs:attribute name="skipfunction">
      <xs:annotation>
        <xs:documentation>
          Reference to function of type BOOLEAN SkipFunction(OBJECT webcontext) which will return 'TRUE' if the captcha check can be skipped
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="GTMPlugin">
