<?xml version="1.0" encoding="UTF-8"?>

<xs:schema
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:sp="http://www.webhare.net/xmlns/publisher/siteprofile"
  xmlns:w="http://www.webhare.net/xmlns/wrd/siteprofile"
  xmlns:s="http://www.webhare.net/xmlns/tollium/screens"
  xmlns:m="http://www.webhare.net/xmlns/system/moduledefinition"
  xmlns:c="http://www.webhare.net/xmlns/consilio"
  xmlns:tai="http://www.webhare.net/xmlns/tollium/appinfo"
  xmlns:fn="http://www.w3.org/2005/02/xpath-functions"
  xmlns:sc="http://www.webhare.net/xmlns/system/common"
  xmlns:tc="http://www.webhare.net/xmlns/tollium/common"
  xmlns:html="http://www.w3.org/1999/xhtml"
  targetNamespace="http://www.webhare.net/xmlns/publisher/siteprofile"
  xmlns="http://www.webhare.net/xmlns/publisher/siteprofile"
  elementFormDefault="qualified"
  xml:lang="en">

  <xs:annotation>
    <xs:documentation>
      Site profiles XML file schema specification.
    </xs:documentation>
  </xs:annotation>

  <xs:import namespace="http://www.w3.org/XML/1998/namespace" schemaLocation="http://www.w3.org/2001/xml.xsd" />
  <xs:import namespace="http://www.webhare.net/xmlns/tollium/screens" schemaLocation="x-webhare-builtin-xsd:components.xsd?type=tolliumcomponents&amp;skipns=http://www.webhare.net/xmlns/publisher/siteprofile" />
  <xs:import namespace="http://www.webhare.net/xmlns/system/moduledefinition" schemaLocation="mod::system/data/moduledefinition.xsd" />
  <xs:import namespace="http://www.webhare.net/xmlns/wrd" schemaLocation="mod::wrd/data/siteprofile.xsd" />
  <xs:import namespace="http://www.webhare.net/xmlns/consilio" schemaLocation="mod::consilio/data/siteprofile.xsd" />
  <xs:import namespace="http://www.webhare.net/xmlns/system/common"  schemaLocation="mod::system/data/common.xsd" />
  <xs:import namespace="http://www.webhare.net/xmlns/tollium/common" schemaLocation="mod::tollium/data/common.xsd" />

  <xs:simpleType name="PixelWidth">
    <xs:restriction base="xs:string">
      <xs:pattern value="[0-9]+px"/> <!-- requiring px to allow future %/em etc support to be added without having to deal with naked '450's -->
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="ModuleNamespacedName">
    <xs:restriction base="xs:string">
      <xs:pattern value="...+:.+" />
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="siteprofile">
    <xs:complexType>
      <xs:sequence>
        <xs:choice minOccurs="0" maxOccurs="unbounded">
          <xs:group ref="s:ScreenParts" />
          <xs:element name="contenttype" type="ContentType" />
          <xs:element name="rtdtype" type="RTDType" />
          <xs:element ref="propertyeditor" />
          <xs:element name="filetype" type="FileType" />
          <xs:element name="foldertype" type="FolderType" />
          <xs:element name="grouptype" type="GroupType" />
          <xs:element name="widgettype" type="WidgetType" />
          <xs:element name="apply" type="Apply" />
          <xs:element ref="s:imgsizepreset" />
        </xs:choice>
        <xs:element name="applysiteprofile" type="ApplySiteProfile" minOccurs="0" maxOccurs="unbounded" />
        <xs:element name="sitesettings" type="SiteSettings" minOccurs="0" maxOccurs="unbounded" />
        <xs:any minOccurs="0" maxOccurs="unbounded" namespace="##other" processContents="lax" />
      </xs:sequence>
      <xs:attributeGroup ref="sc:Gid" />
    </xs:complexType>

    <xs:key name="TabExtensions">
      <xs:selector xpath="./s:tabsextension" />
      <xs:field xpath="@name" />
    </xs:key>
    <xs:key name="Fragments">
    <xs:selector xpath="./s:fragment" />
      <xs:field xpath="@name" />
    </xs:key>
    <xs:keyref name="embeddededitors" refer="sp:TabExtensions">
      <xs:selector xpath=".//sp:embeddededitor" />
      <xs:field xpath="@extension" />
    </xs:keyref>


    <xs:key name="PropertyEditors">
      <xs:selector xpath="./sp:propertyeditor" />
      <xs:field xpath="@name" />
    </xs:key>
    <xs:keyref name="propertyeditorrefs" refer="sp:PropertyEditors">
      <xs:selector xpath="./sp:apply/sp:extendproperties" />
      <xs:field xpath="@name" />
    </xs:keyref>

  </xs:element>

  <xs:complexType name="ContentType">
    <xs:complexContent>
      <xs:extension base="Members">
        <xs:attribute name="namespace" type="xs:anyURI" use="required" />
        <xs:attribute name="cloneoncopy" type="xs:boolean" default="true" />
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="RTDType">
    <xs:sequence>
      <xs:element name="css" minOccurs="0" maxOccurs="unbounded">
        <xs:complexType>
          <xs:attribute name="path" />
        </xs:complexType>
      </xs:element>
      <xs:element name="blockstyles" minOccurs="1" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="textstyle" type="TextStyle" maxOccurs="unbounded" />
            <xs:element name="tablestyle" type="TableStyle" minOccurs="0" maxOccurs="unbounded" />
            <xs:element name="cellstyle" type="CellStyle" minOccurs="0" maxOccurs="unbounded" />
          </xs:sequence>
          <xs:attribute name="defaultstyle" type="xs:string" use="required" />
        </xs:complexType>
        <!-- All root-level block text styles -->
        <xs:key name="TextStylesKey">
          <xs:selector xpath="./sp:textstyle" />
          <xs:field xpath="@tag" />
        </xs:key>
        <!-- The global default style refers to a root block text style -->
        <xs:keyref name="DefaultBlockStyle" refer="TextStylesKey">
          <xs:selector xpath="."/>
          <xs:field xpath="@defaultstyle"/>
        </xs:keyref>
        <!-- The default table style refers to a root block text style -->
        <xs:keyref name="DefaultTableStyle" refer="TextStylesKey">
          <xs:selector xpath="./sp:tablestyle"/>
          <xs:field xpath="@defaultstyle"/>
        </xs:keyref>
        <!-- All root-level block text and table styles -->
        <xs:key name="BlockStylesKey">
          <xs:selector xpath="./sp:textstyle|./sp:tablestyle" />
          <xs:field xpath="@tag" />
        </xs:key>
      </xs:element>
      <xs:element name="widgets" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="allowtype" minOccurs="0" maxOccurs="unbounded" type="sc:AllowWidgetType"/>
          </xs:sequence>
          <xs:attribute name="ignoresiteprofilewidgets" type="xs:boolean">
            <xs:annotation>
              <xs:documentation>Ignore widget modifications made by siteprofiles (ie allowwidgettype). Often used for email-contents RTDs</xs:documentation>
            </xs:annotation>
          </xs:attribute>
        </xs:complexType>
      </xs:element>
      <xs:element ref="s:linkhandlers" minOccurs="0" maxOccurs="1" />
    </xs:sequence>
    <xs:attribute name="namespace" type="xs:anyURI" use="required" />
    <xs:attribute name="htmlclass" />
    <xs:attribute name="bodyclass" />
    <xs:attribute name="allownewwindowlinks" type="xs:boolean" />
    <xs:attribute name="b"> <!-- we only support b=b and b=strong for now, but we leave the option open to support eg 'b=b.bold' to get <b class="bold" /> -->
      <xs:annotation>
        <xs:documentation>How to present `&lt;b>` in the output ('b' or 'strong')</xs:documentation>
      </xs:annotation>
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="b"/>
          <xs:enumeration value="strong"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="i">
      <xs:annotation>
        <xs:documentation>How to present `&lt;i>` in the output ('i' or 'em')</xs:documentation>
      </xs:annotation>
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="i"/>
          <xs:enumeration value="em"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>

  <xs:simpleType name="WittyEncoding">
    <xs:restriction base="xs:string">
      <xs:enumeration value="HTML"/>
      <xs:enumeration value="HTML-NI"/>
      <xs:enumeration value="XML"/>
      <xs:enumeration value="XML-NI"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="BlockstyleContainerTag">
    <xs:restriction base="xs:string">
      <!-- The subset of the flow elements in http://www.w3.org/TR/html-markup/common-models.html#common.elem.phrasing
           that may hold phrasing elements -->
      <xs:enumeration value="p"/>
      <xs:enumeration value="div"/>
      <xs:enumeration value="h1"/>
      <xs:enumeration value="h2"/>
      <xs:enumeration value="h3"/>
      <xs:enumeration value="h4"/>
      <xs:enumeration value="h5"/>
      <xs:enumeration value="h6"/>
      <xs:enumeration value="pre"/>
      <xs:enumeration value="address"/>
      <xs:enumeration value="blockquote"/>
      <xs:enumeration value="section"/>
      <xs:enumeration value="nav"/>
      <xs:enumeration value="article"/>
      <xs:enumeration value="aside"/>
      <xs:enumeration value="header"/>
      <xs:enumeration value="footer"/>

      <xs:enumeration value="ol"/>
      <xs:enumeration value="ul"/>

      <xs:enumeration value="code"/> <!-- code is multiuse and should be allowed too... TODO figure out if this needs we need to d more than phrasing explained above -->

      <!-- ADDME: dl? it's like ol/ul, has a specific form -->
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="Tag">
    <xs:restriction base="xs:string">
      <xs:pattern value="[A-Z][-A-Z0-9_]*"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="AllowTextStyles">
    <xs:list itemType="TextStyleType" />
  </xs:simpleType>

  <xs:simpleType name="TextStyleType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="b"/>
      <xs:enumeration value="i"/>
      <xs:enumeration value="u"/>
      <xs:enumeration value="sub"/>
      <xs:enumeration value="sup"/>
      <xs:enumeration value="a-href"/>
      <xs:enumeration value="strike"/>
      <xs:enumeration value="img"/>
      <xs:enumeration value="code"/>
      <xs:enumeration value="ins"/>
      <xs:enumeration value="del"/>
    </xs:restriction>
  </xs:simpleType>


  <xs:complexType name="TextStyle">
    <xs:attribute name="tag" type="Tag" use="required" />
    <xs:attribute name="importfrom" type="xs:string" />
    <xs:attribute name="title" type="xs:string" />
    <xs:attribute name="split" type="xs:boolean" />
    <xs:attribute name="containertag" type="BlockstyleContainerTag" />
    <xs:attribute name="textstyles" type="AllowTextStyles" use="required"/>
    <xs:attribute name="nextstyle" type="Tag" />
  </xs:complexType>

  <xs:complexType name="TableStyle">
    <xs:attribute name="tag" type="Tag" use="required" />
    <xs:attribute name="title" type="xs:string" />
    <xs:attribute name="defaultstyle" type="xs:string" />
    <xs:attribute name="resizing" default="all">
      <xs:annotation>
        <xs:documentation>
          Either "all" or zero or more of "rows", "columns", "table". "table" only has effect when combined with "rows" or
          "columns".
        </xs:documentation>
      </xs:annotation>
      <xs:simpleType>
        <xs:union>
          <xs:simpleType>
            <xs:restriction base="xs:string">
              <xs:enumeration value="all" />
            </xs:restriction>
          </xs:simpleType>
          <xs:simpleType>
            <xs:list>
              <xs:simpleType>
                <xs:restriction base="xs:string">
                  <xs:enumeration value="rows" />
                  <xs:enumeration value="columns" />
                  <xs:enumeration value="table" />
                </xs:restriction>
              </xs:simpleType>
            </xs:list>
          </xs:simpleType>
        </xs:union>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="CellStyle">
    <xs:attribute name="tag" type="Tag" use="required" />
    <xs:attribute name="title" type="xs:string" />
  </xs:complexType>

  <xs:attributeGroup name="IndexTypeAttrs">
    <xs:attribute name="indexversion" />
  </xs:attributeGroup>

  <xs:attributeGroup name="WidgetSettings">
    <xs:attribute name="editextension" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          Reference to a tabs extension to edit this widget. The extension should derive from %TolliumTabsExtensionBase and receive a composition named 'contentdata'
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="editlibrary" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          Reference to the library containing the function referenced in editfunctioname.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="editfunctionname" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          Name of the function in the library referenced in editlibrary.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="editfragment" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          Deprecated!
          Use editextension or editlibrary/editfunctionname instead.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="editscreen" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          Deprecated!
          Use editextension or editlibrary/editfunctionname instead.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="renderlibrary" type="xs:string" />
    <xs:attribute name="renderobjectname" type="xs:string" />
  </xs:attributeGroup>

  <xs:attributeGroup name="WidgetBaseAttrs">
    <xs:attribute name="namespace" type="xs:anyURI" use="required" />
    <xs:attributeGroup ref="sc:TidOrTitle" />
    <xs:attributeGroup ref="WidgetSettings" />
    <xs:attribute name="icon" /> <!-- TODO type="sc:ImageSrc" once everyone is 4.30 and we can start deprecating tolliumicon -->
    <xs:attribute name="tolliumicon" type="sc:ImageSrc" />
    <xs:attribute name="requiremergefieldscontext" type="xs:boolean">
      <xs:annotation>
        <xs:documentation>
          Indicates that this widget/embedded object expects a MergeFieldsContext to be available within the rendering context.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:attributeGroup>

  <xs:complexType name="WidgetType">
    <xs:complexContent>
      <xs:extension base="sp:ObjectType">
        <xs:sequence>
          <xs:element ref="members" minOccurs="0" maxOccurs="1" />
          <xs:group ref="ApplyItem" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attributeGroup ref="WidgetSettings" />
        <xs:attribute name="requiremergefieldscontext" type="xs:boolean">
          <xs:annotation>
            <xs:documentation>
              Indicates that this widget/embedded object expects a MergeFieldsContext to be available within the rendering context.
            </xs:documentation>
          </xs:annotation>
        </xs:attribute>
        <xs:attribute name="wittycomponent" />
        <xs:attribute name="previewcomponent" />
        <xs:attribute name="ingroup" type="xs:anyURI" />
        <xs:attribute name="embedtype">
          <xs:annotation>
            <xs:documentation>
              Widget type, either block or inline. Defaults to block
            </xs:documentation>
          </xs:annotation>
          <xs:simpleType>
            <xs:restriction base="xs:string">
              <xs:enumeration value="block"/>
              <xs:enumeration value="inline"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attributeGroup ref="IndexTypeAttrs" />
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="UploadTypeMapping">
    <xs:annotation>
      <xs:documentation>Change the mimetype-based filetype detection in the Publisher. Must be applied to a folder, not the files themselves</xs:documentation>
    </xs:annotation>
    <xs:attribute name="filenamemask" type="xs:string">
      <xs:annotation>
        <xs:documentation>case insensitive wildcard match to apply to filename</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="mimetypemask" type="xs:string">
      <xs:annotation>
        <xs:documentation>case insensitive wildcard match to apply to the mimetype (as returned by ScanBlob)</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="filetype" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>xml namespace of filetype to map to</xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="TagSource">
    <xs:attribute name="contenttype" type="xs:anyURI" use="required" />
    <xs:attribute name="member" type="Name" use="required" />
    <xs:attribute name="tagfolder" type="xs:string" use="required" />
    <xs:attribute name="repository" type="xs:string" />
    <xs:attribute name="allowcreate" type="xs:boolean" />
  </xs:complexType>

  <xs:complexType name="Source">
    <xs:attribute name="path" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>
          The path can either be an absolute path like "site::path/to/folder" or "whfs::/path/to/folder" or a path relative to
          either the current site profile or the target object, based on the 'relativeto' setting. If the relative path starts
          with a slash ('/'), it is resolved to the the root of the site or module that contains the site profile or the site
          containing the target object.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="relativeto" default="siteprofile">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="siteprofile"/>
          <xs:enumeration value="targetobject"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="SetLibrary">
    <xs:sequence>
      <xs:element name="source" type="Source" minOccurs="0" maxOccurs="unbounded" />
    </xs:sequence>
    <xs:attribute name="name" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>
          The name for this library. Commonly used names are 'media' (for image edits) and 'widgets'
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="MailTemplate">
    <xs:sequence>
      <xs:element name="source" type="Source" minOccurs="0" maxOccurs="unbounded" />
    </xs:sequence>
    <xs:attribute name="path" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          (relative) path to template
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="ordering" type="xs:integer">
      <xs:annotation>
        <xs:documentation>
          ordering for sort order of this template in selections. also determines the 'default' template. negative numbers generally sort before any fs object sources
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attributeGroup ref="sc:TidOrTitle" />
  </xs:complexType>

  <xs:complexType name="DebugSettings">
    <xs:sequence>
      <xs:element name="option" minOccurs="0" maxOccurs="unbounded">
        <xs:complexType>
          <xs:attribute name="tag" type="xs:string" use="required">
            <xs:annotation>
              <xs:documentation>
                Debug option tag (three-letter debug flag)
              </xs:documentation>
            </xs:annotation>
          </xs:attribute>
          <xs:attribute name="title" type="xs:string" use="required">
            <xs:annotation>
              <xs:documentation>
                Debug option title
              </xs:documentation>
            </xs:annotation>
          </xs:attribute>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="title" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          Debug settings option group title
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="userwarning" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          Warning to show users visiting this page
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="CustomPlugin">
    <xs:attribute name="library" type="xs:string" />
    <xs:attribute name="objectname" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>Path to the plugin objecte (must derive from %WebdesignPluginBase)</xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="FormDefinitions">
    <xs:attribute name="path" type="xs:string" use="required" />
    <xs:attribute name="name" type="ModuleNamespacedName" />
  </xs:complexType>

  <xs:complexType name="DynamicExecution">
    <xs:sequence>
      <xs:sequence />  <!-- prevents us from suddenly breaking <dynamicexecution>  </dynamicexecution> -->
    </xs:sequence>

    <xs:attribute name="library" type="xs:string" />
    <xs:attribute name="startmacro" type="xs:string" />
    <xs:attribute name="webpageobjectname" type="xs:string" />
    <xs:attribute name="routerfunction" type="xs:string" />

    <xs:attribute name="cachettl" type="xs:integer">
      <xs:annotation>
        <xs:documentation>
          If set to a value > 0, cache responses to GET and HEAD requests. cachettl is in seconds.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="cachewebvariables" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          A list of web variables that will be used as the cache key. If "*", all webvariables will be considered.
          You should probably set this unless you're sure that no webvariable ever affects the content
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="cacheblacklistvariables" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          A list of web variables that, if set, will prevent caching. (These variables are not ignored for caching - they completely block it!)
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="cachewebcookies" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          A list of cookies that will be used as the cache key. If "*", all cookies will be considered.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="cacheblacklistcookies" type="xs:string">
      <xs:annotation>
        <xs:documentation>
          A list of web cookies that, if set, will prevent caching. You might want to set this to eg 'webharelogin'
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="PrebuiltPage">
    <xs:annotation>
      <xs:documentation>
        Deprecated!
      </xs:documentation>
    </xs:annotation>

    <xs:complexContent>
      <xs:extension base="DynamicExecution">
        <xs:attribute name="tag" type="xs:string" use="required" />
        <xs:attribute name="type">
          <xs:simpleType>
            <xs:restriction base="xs:string">
              <xs:enumeration value="static"/>
              <xs:enumeration value="dynamic"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attributeGroup ref="sc:TidOrTitle" />
        <xs:attributeGroup ref="CaptureSubPaths" />
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <!-- ADDME: Can we clean this up? -->
  <!-- duplicated propertyeditor in sitepropfilecomponentes.xsd to break a recursive import causing two imports for tollium components
       without it siteprofile extensions in the publisher won't work -->
  <xs:element name="propertyeditor">
    <xs:complexType>
      <xs:annotation>
        <xs:appinfo>
          <tai:tolliumcomponent placement="screens"/>
          <tai:childcomponents field="compositions" target="./sp:compositions" adoptfields="compositions" />
          <tai:childcomponents field="newtabs" target="./sp:newtab" />
          <tai:childcomponents field="inserts" target="./sp:insert" adoptfields="lines position where" />
        </xs:appinfo>
      </xs:annotation>
      <xs:sequence>
        <xs:element ref="compositions" minOccurs="0" maxOccurs="1" />
        <xs:element ref="insert" minOccurs="0" maxOccurs="unbounded" />
        <xs:element ref="newtab" minOccurs="0" maxOccurs="unbounded" />
      </xs:sequence>
      <xs:attribute name="name" type="xs:string" />
    </xs:complexType>
  </xs:element>

  <xs:element name="compositions" type="s:Compositions" />
  <xs:element name="newtab" type="s:NewTab" />
  <xs:element name="insert" type="s:TabsExtensionInsert" />

  <!-- FIXME: enforce no duplicate names between extensions inside a propeditor, even though we don't actually support xrefs yet -->

  <xs:element name="members" type="Members">
    <xs:unique name="membernames_members">
      <xs:selector xpath="./sp:member" />
      <xs:field xpath="@name" />
    </xs:unique>
  </xs:element>

  <xs:complexType name="Members">
    <xs:choice>
      <xs:element name="member" minOccurs="0" maxOccurs="unbounded" type="Member" />
      <xs:sequence minOccurs="0" maxOccurs="unbounded">
        <xs:choice>
          <xs:element type="SimpleMember" name="boolean" />
          <xs:element type="SimpleMember" name="datetime" />
          <xs:element type="SimpleMember" name="integer" />
          <xs:element type="SimpleMember" name="file" />
          <xs:element type="SimpleMember" name="float" />
          <xs:element type="SimpleMember" name="money" />
          <xs:element type="SimpleMember" name="string" />
          <xs:element type="RecordMember" name="array" />
          <xs:element type="SimpleMember" name="whfsref" />
          <xs:element type="SimpleMember" name="whfsrefarray" />
          <xs:element type="SimpleMember" name="stringarray" />
          <xs:element type="SimpleMember" name="richdocument" />
          <xs:element type="SimpleMember" name="formdefinition" />
          <xs:element type="SimpleMember" name="formcondition" />
          <xs:element type="SimpleMember" name="intextlink" />
          <xs:element type="SimpleMember" name="instance" />
          <xs:element type="SimpleMember" name="url" />
          <xs:element type="RecordMember" name="record" />
        </xs:choice>
      </xs:sequence>
    </xs:choice>
  </xs:complexType>

  <xs:complexType name="SimpleMember">
    <xs:attribute name="name" type="Name" use="required"/>
  </xs:complexType>

  <xs:complexType name="RecordMember">
    <xs:complexContent>
      <xs:extension base="Members">
        <xs:attribute name="name" type="Name" use="required"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Member">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element name="value">
        <xs:complexType>
          <xs:attribute name="name" type="xs:string" use="required" />
        </xs:complexType>
      </xs:element>
      <xs:element name="member" type="Member">
        <xs:unique name="membernames3">
          <xs:selector xpath="./sp:member" />
          <xs:field xpath="@name" />
        </xs:unique>
      </xs:element>
    </xs:choice>
    <xs:attribute name="name" type="Name" use="required"/>
    <xs:attribute name="type" type="MemberTypes" use="required" />
    <xs:attribute name="publish" type="xs:boolean">
      <xs:annotation>
        <xs:documentation>
          Deprecated!
          Use the image/file cache to expose the content's of a "file" member.
          For "richdocument" members webdesign->MakeRTD will already use the image cache. (FIXME: what about GetRichDocumentFragment?)
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:simpleType name="MemberTypes">
    <xs:restriction base="xs:string">
      <xs:enumeration value="boolean" />
      <xs:enumeration value="datetime" />
      <xs:enumeration value="integer" />
      <xs:enumeration value="file" />
      <xs:enumeration value="float" />
      <xs:enumeration value="money" />
      <xs:enumeration value="string" />
      <xs:enumeration value="array" />
      <xs:enumeration value="whfsref" />
      <xs:enumeration value="whfsrefarray" />
      <xs:enumeration value="stringarray" />
      <xs:enumeration value="richdocument" />
      <xs:enumeration value="formdefinition" />
      <xs:enumeration value="formcondition" />
      <xs:enumeration value="intextlink" />
      <xs:enumeration value="instance" /><!-- instance of a specific contenttype -->
      <xs:enumeration value="url" />
      <xs:enumeration value="record" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="GroupType">
    <xs:attribute name="namespace" type="xs:anyURI" use="required"/>
    <xs:attributeGroup ref="sc:TidOrTitle" />
    <xs:attribute name="icon" type="sc:ImageSrc" />
    <xs:attribute name="tolliumicon" type="sc:ImageSrc" />
  </xs:complexType>

  <xs:complexType name="ObjectType">
    <xs:attribute name="namespace" type="xs:anyURI">
      <xs:annotation>
        <xs:documentation>The namespace whfstype to define</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="typedef" type="xs:anyURI" />  <!-- Pre-4.28, deprecate -->
    <xs:attributeGroup ref="sc:TidOrTitle" />
    <xs:attribute name="icon" type="xs:string" /> <!-- Pre-4.28, deprecate -->
    <xs:attribute name="tolliumicon" type="sc:ImageSrc" /> <!-- TODO type="sc:ImageSrc" once everyone is 4.30 and we can start deprecating tolliumicon -->
    <xs:attribute name="webhare_builtintypeid" type="xs:integer" />
    <xs:attribute name="isdevelopertype" type="xs:boolean" />
    <xs:attribute name="searchcontentprovider" type="ModuleNamespacedName" />
  </xs:complexType>

  <xs:complexType name="FileType">
    <xs:complexContent>
      <xs:extension base="sp:ObjectType">
        <!-- A list of extensions for this file type, used for new files -->
        <xs:sequence>
          <xs:element ref="members" minOccurs="0" maxOccurs="1" />
          <xs:element name="dynamicexecution" type="DynamicExecution" minOccurs="0" maxOccurs="1"/>
          <xs:group ref="ApplyItem" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="extensions">
          <xs:simpleType>
            <xs:list itemType="xs:string" />
          </xs:simpleType>
        </xs:attribute>
        <xs:attributeGroup ref="IndexTypeAttrs" />
        <xs:attribute name="kind">
          <xs:annotation>
            <xs:documentation>File class, specifies defaults for unset attributes in the type</xs:documentation>
          </xs:annotation>
          <xs:simpleType>
            <xs:restriction base="xs:string">
              <xs:enumeration value="rawfile">
                <xs:annotation>
                  <xs:documentation>Raw published file, eg .DOCX (implies blobiscontent, ispublishable)</xs:documentation>
                </xs:annotation>
              </xs:enumeration>
              <xs:enumeration value="virtualfile">
                <xs:annotation>
                  <xs:documentation>Virtual published file, no downloadable content (implies needstemplate, ispublishable, ispublishedassubdir, isacceptableindex)</xs:documentation>
                </xs:annotation>
              </xs:enumeration>
              <xs:enumeration value="datafile">
                <xs:annotation>
                  <xs:documentation>Data-only unpublished file (implies no blobcontent, not publishable)</xs:documentation>
                </xs:annotation>
              </xs:enumeration>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="blobiscontent" type="xs:boolean" />
        <xs:attribute name="requirescontent" type="xs:boolean">
          <xs:annotation>
            <xs:documentation>This file cannot be empty (cannot be offered in New file dialogs)</xs:documentation>
          </xs:annotation>
        </xs:attribute>
        <xs:attribute name="needstemplate" type="xs:boolean" />
        <xs:attribute name="needsprofile" type="xs:boolean" />
        <xs:attribute name="isacceptableindex" type="xs:boolean" />
        <xs:attribute name="ispublishable" type="xs:boolean" />
        <xs:attribute name="ispublishedassubdir" type="xs:boolean" />
        <xs:attribute name="previewlibrary" type="xs:string">
          <xs:annotation>
            <xs:documentation>
              If this a file of this type has never been published, generate a preview for files of this type using the object previewobjectname in this library.
            </xs:documentation>
          </xs:annotation>
        </xs:attribute>
        <xs:attribute name="previewobjectname" type="xs:string">
          <xs:annotation>
            <xs:documentation>
              If this a file of this type has never been published, generate a preview for files of this type using this object in the library previewlibrary.
            </xs:documentation>
          </xs:annotation>
        </xs:attribute>
        <xs:attributeGroup ref="CaptureSubPaths" />
        <xs:attribute name="pagelistprovider">
          <xs:annotation>
            <xs:documentation>Object which describes the URLs this type provides for consilio and sitemaps</xs:documentation>
          </xs:annotation>
        </xs:attribute>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:attributeGroup name="CaptureSubPaths">
    <xs:attribute name="capturesubpaths" type="xs:boolean">
      <xs:annotation>
        <xs:documentation>
          If set, the file is published in such a way that all requests to URLs below this file are also routed to this file (a sort of 'virtual folder' implementing a whole namespace as one file).
          These files can be static or dynamic in their execution type but cannot be the index of a folder.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:attributeGroup>

  <xs:complexType name="FolderType">
    <xs:complexContent>
      <xs:extension base="sp:ObjectType">
        <xs:sequence>
          <xs:element ref="members" minOccurs="0" maxOccurs="1" />
          <xs:element name="dynamicexecution" type="DynamicExecution" minOccurs="0" maxOccurs="1"/>
          <xs:group ref="ApplyItem" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="indexfile" type="FolderIndexFile" />
        <xs:attribute name="indextype" type="xs:string" />
        <xs:attribute name="protectindexfile" type="xs:boolean" />
        <xs:attribute name="ishidden" type="xs:boolean" />
        <xs:attributeGroup ref="IndexTypeAttrs" />
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="ApplySiteProfile">
    <xs:annotation>
      <xs:documentation>Apply another siteprofile to sites using this site profile</xs:documentation>
    </xs:annotation>
    <xs:attribute name="fullpath" type="xs:string" />
    <xs:attribute name="site" type="xs:string" />
    <xs:attribute name="path" type="xs:string">
      <xs:annotation>
        <xs:documentation>Path to the site profile</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attributeGroup ref="m:ApplicabletoWebHare" />
  </xs:complexType>

  <xs:complexType name="Apply">
    <xs:sequence minOccurs="1">
      <xs:group minOccurs="1" maxOccurs="unbounded" ref="ApplyConstraint" />
      <xs:group minOccurs="1" maxOccurs="unbounded" ref="ApplyItem" />
    </xs:sequence>
    <xs:attributeGroup ref="m:ApplicabletoWebHare" />
    <xs:attribute name="priority" type="xs:integer">
      <xs:annotation>
        <xs:documentation>
          Relative priority of this apply rule. All apply rules default their priority to 0, lower priority rules get evaluated earlier
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="ApplyContraints">
    <xs:sequence>
      <xs:group minOccurs="1" maxOccurs="unbounded" ref="ApplyConstraint" />
    </xs:sequence>
  </xs:complexType>

  <xs:group name="ApplyConstraint">
    <xs:choice>
      <xs:element name="and" type="ApplyContraints" />
      <xs:element name="or" type="ApplyContraints" />
      <xs:element name="not">
        <xs:complexType>
          <xs:group ref="ApplyConstraint" minOccurs="1" maxOccurs="1" />
        </xs:complexType>
      </xs:element>
      <xs:element name="to" type="ApplyTo" />
      <xs:element name="testdata" type="TestData" />
    </xs:choice>
  </xs:group>

  <xs:group name="ApplyItem">
    <xs:choice>
      <xs:any minOccurs="0" maxOccurs="unbounded" namespace="##other" processContents="lax" />
      <xs:element name="republish" type="Republish" />
      <xs:element name="folderindex" type="FolderIndex" />
      <xs:element name="contentlisting" type="ContentListing" />
      <xs:element ref="extendproperties" />
      <xs:element ref="undoextendproperties" />
      <xs:element ref="baseproperties" />
      <xs:element name="allowfoldertype" type="AllowType" />
      <xs:element name="denyfoldertype" type="DenyType" />
      <xs:element name="allowfiletype" type="AllowType" />
      <xs:element name="denyfiletype" type="DenyType" />
      <xs:element name="allowwidgettype" type="sc:AllowWidgetType" />
      <xs:element name="setobjecteditor" type="SetObjectEditor" />
      <xs:element name="setembeddedobjectrenderer" type="SetEmbeddedObjectRenderer" />
      <xs:element name="setwidget" type="SetWidget" />
      <xs:element name="embeddededitor" type="EmbeddedEditor" />
      <xs:element name="sitelanguage" type="SiteLanguage" />
      <xs:element name="foldersettings" type="FolderSettings" />
      <xs:element name="bodyrenderer" type="BodyRenderer" />
      <xs:element name="webdesign" type="WebDesign" />
      <xs:element name="urlhistory" />
      <xs:element name="urlevents" type="UrlEvents" />
      <xs:element name="mswordconversion" type="MSWordConversion" />
      <xs:element name="scheduletimedtask" type="ScheduleTimedTask" />
      <xs:element name="schedulemanagedtask" type="ScheduleManagedTask" />
      <xs:element name="disablelegacysitesettings" type="DisableLegacySiteSettings" />
      <xs:element name="usepublishtemplate" type="UsePublishTemplate" />
      <xs:element name="intercept" type="sc:Intercept" />
      <xs:element name="uploadtypemapping" type="UploadTypeMapping" />
      <xs:element name="tagsource" type="TagSource" />
      <xs:element name="customplugin" type="CustomPlugin" />
      <xs:element name="rtddoc" type="RTDDoc" />
      <xs:element name="setlibrary" type="SetLibrary" />
      <xs:element name="prebuiltpage" type="PrebuiltPage" />
      <xs:element name="mailtemplate" type="MailTemplate" />
      <xs:element name="debugsettings" type="DebugSettings" />

      <xs:element name="formdefinitions" type="FormDefinitions" />
      <xs:element name="formintegration" type="FormIntegration" />
      <xs:element name="captchaintegration" type="CaptchaIntegration" />
      <xs:element name="forumplugin" type="ForumPlugin" />

      <!-- widget config -->
      <xs:element name="videowidget" type="VideoWidget" />

      <!-- former 'socialite' plugins -->
      <xs:element name="gtm" type="GTMPlugin" />
      <xs:element name="googleanalytics" type="GoogleAnalyticsPlugin" />
      <xs:element name="googleanalytics4" type="GoogleAnalytics4Plugin" />

      <xs:element name="pollsettings" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:attribute name="allowvotingagainafter" type="xs:integer">
            <xs:annotation>
              <xs:documentation>
                The amount of minutes after which voting is allowed again.
                (this check is cookie based, so it can be circumvented by any user which clears his cookies)
              </xs:documentation>
            </xs:annotation>
          </xs:attribute>
        </xs:complexType>
      </xs:element>

      <xs:element name="extendformeditor">
        <xs:annotation>
          <xs:documentation>
            Extend the form editor with extra functionality
          </xs:documentation>
        </xs:annotation>
        <xs:complexType>
          <xs:attribute name="extendobject" type="xs:string">
            <xs:annotation>
              <xs:documentation>
                Deprecated, use settingsextension instead
              </xs:documentation>
            </xs:annotation>
          </xs:attribute>
          <xs:attribute name="settingsextension" type="xs:string">
            <xs:annotation>
              <xs:documentation>
                The editor settings tabs extension as screenpath#objectname
              </xs:documentation>
            </xs:annotation>
          </xs:attribute>
          <xs:attribute name="validationfunc" type="xs:string">
            <xs:annotation>
              <xs:documentation>
                A macro to validate the complete form before saving as librarypath#functionname. The macro received three
                parameters: a work object to report errors to, the form definitions object and a contexts object with the
                currently active contexts.
              </xs:documentation>
            </xs:annotation>
          </xs:attribute>
          <xs:attribute name="manual" type="xs:string">
            <xs:annotation>
              <xs:documentation>
                Tag of the manual
              </xs:documentation>
            </xs:annotation>
          </xs:attribute>
          <xs:attribute name="manuallanguages">
            <xs:annotation>
              <xs:documentation>
                Languages in which the manual is available
              </xs:documentation>
            </xs:annotation>
            <xs:simpleType>
              <xs:list itemType="xs:string" />
            </xs:simpleType>
          </xs:attribute>
          <xs:attribute name="manualaccesstoken" type="xs:string">
            <xs:annotation>
              <xs:documentation>
                Access token (shared secret) to access private manuals
              </xs:documentation>
            </xs:annotation>
          </xs:attribute>
        </xs:complexType>
      </xs:element>

      <xs:element name="allowformquestion" type="AllowDenyFormComponent">
        <xs:annotation>
          <xs:documentation>
            Allow question types using a like mask on namespace#componentname
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="denyformquestion" type="AllowDenyFormComponent">
        <xs:annotation>
          <xs:documentation>
            Disallow question types using a like mask on namespace#componentname
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="allowformhandler" type="AllowDenyFormComponent">
        <xs:annotation>
          <xs:documentation>
            Allow formhandler types using a like mask on namespace#componentname
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="denyformhandler" type="AllowDenyFormComponent">
        <xs:annotation>
          <xs:documentation>
            Disallow formhandler types using a like mask on namespace#componentname
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="allowformrtdtype" type="AllowDenyFormComponent">
        <xs:annotation>
          <xs:documentation>
            Allow rtd field document types using a like mask on rtdtype namespace
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="denyformrtdtype" type="AllowDenyFormComponent">
        <xs:annotation>
          <xs:documentation>
            Disallow rtd field document types using a like mask on rtdtype namespace
          </xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:choice>
  </xs:group>

  <xs:element name="baseproperties">
    <xs:complexType>
      <xs:attribute name="title" type="xs:boolean" />
      <xs:attribute name="description" type="xs:boolean" />
      <xs:attribute name="keywords" type="xs:boolean" />
      <xs:attribute name="striprtdextension" type="xs:boolean">
        <xs:annotation>
          <xs:documentation>Strip .rtd extension from newly created files</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <xs:element name="extendproperties">
    <xs:complexType>
      <xs:attribute name="name" type="xs:string" />
      <xs:attribute name="extension" type="xs:string" />
      <xs:attribute name="contenttype" type="xs:anyURI" />
      <xs:attribute name="requireright" type="xs:string" />
      <xs:attribute name="requirewebdesign" type="xs:boolean">
        <xs:annotation>
          <xs:documentation>
            Only apply these extensions if a webdesign rule applies
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <xs:element name="undoextendproperties">
    <xs:complexType>
      <xs:attribute name="mask" type="xs:string" />
    </xs:complexType>
  </xs:element>

  <xs:complexType name="FolderSettings">
    <xs:annotation>
      <xs:documentation>
        Modify the file/folder listing when the folder is shown in the publisher
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="contentslisthandler" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:attribute name="library" />
          <xs:attribute name="objectname" use="required" />
        </xs:complexType>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="filterscreen">
      <xs:annotation>
        <xs:documentation>
          Path to screen (eg mod::mymodule/screens/publisher.xml#newsfilter) to show above the folder contents to allow filtering of the list, similar to the recycle bon
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="visibleforeignfolders" type="xs:boolean">
      <xs:annotation>
        <xs:documentation>Make external/foreign folders inside this folder visible irrespective of user preferences or rights</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="ordering">
      <xs:simpleType>
        <xs:annotation>
          <xs:documentation>
            Configure ordering for this folder
          </xs:documentation>
        </xs:annotation>
        <xs:restriction base="xs:string">
          <xs:enumeration value="none">
            <xs:annotation>
              <xs:documentation>
                There is no ordering, the website ordering option should be unavailable
              </xs:documentation>
            </xs:annotation>
          </xs:enumeration>
          <xs:enumeration value="fixed">
            <xs:annotation>
              <xs:documentation>
                A website ordering is available, but cannot be modified through the publisher drag/drop and buttons
              </xs:documentation>
            </xs:annotation>
          </xs:enumeration>
          <xs:enumeration value="orderable">
            <xs:annotation>
              <xs:documentation>
                Ordering can be changed through the website
              </xs:documentation>
            </xs:annotation>
          </xs:enumeration>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="AllowType">
    <xs:attribute name="typedef" type="xs:anyURI" /> <!-- Pre-4.28, deprecate -->
    <xs:attribute name="typemask" type="xs:anyURI">
      <xs:annotation>
        <xs:documentation>A wildcard mask of types to allow</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="newonlytemplate" type="xs:boolean">
      <xs:annotation>
        <xs:documentation>Allow only templates to be selected when creating a new object of this type</xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="DenyType">
    <xs:attribute name="typedef" type="xs:anyURI" /> <!-- Pre-4.28, deprecate -->
    <xs:attribute name="typemask" type="xs:anyURI">
      <xs:annotation>
        <xs:documentation>A wildcard mask of types to deny</xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="Republish">
    <xs:attribute name="folder" type="xs:string" />
    <xs:attribute name="sitemask" type="xs:string" />
    <xs:attribute name="mask" type="xs:string" />
    <xs:attribute name="recursive" type="xs:boolean" />
    <xs:attribute name="indexonly" type="xs:boolean" />

    <xs:attribute name="onchange">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="metadata">
            <xs:annotation>
              <xs:documentation>
                Republish only if metadata changed
              </xs:documentation>
            </xs:annotation>
          </xs:enumeration>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>

    <xs:attribute name="scope">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="references">
            <xs:annotation>
              <xs:documentation>
                Interpret the republish instruction from the point of view of any references to this file (internal links, content links and contenttype whfsrefs)
              </xs:documentation>
            </xs:annotation>
          </xs:enumeration>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="FolderIndex">
    <xs:attribute name="indexfile" type="IndexFile" use="required" />
    <xs:attribute name="protectindexfile" type="xs:boolean" />
    <xs:attribute name="fullpath" type="xs:string" />
    <xs:attribute name="site" type="xs:string" />
    <xs:attribute name="newfiletype" type="xs:anyURI" />
    <xs:attribute name="newfilename" type="xs:string" />
  </xs:complexType>

  <xs:simpleType name="IndexFile">
    <xs:restriction base="xs:string">
      <xs:enumeration value="none" />
      <xs:enumeration value="contentlisting" />
      <xs:enumeration value="copy_of_file" />
      <xs:enumeration value="contentlink" />
      <xs:enumeration value="newfile" />
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="FolderIndexFile">
    <!-- copy_of_file and contentlink_to_file cannot be specified within folder types -->
    <!-- If any other values would be supported here, change folder type code in the Publisher would have to be updated too! -->
    <xs:restriction base="sp:IndexFile">
      <xs:enumeration value="none" />
      <xs:enumeration value="contentlisting" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="ContentListing">
    <xs:attribute name="fullpath" type="xs:string" use="required" />
    <xs:attribute name="site" type="xs:string" />
  </xs:complexType>

  <xs:complexType name="SetObjectEditor">
    <xs:attribute name="name" type="xs:string" />
    <xs:attribute name="screen" type="xs:string" />
    <xs:attribute name="separateapp" type="xs:boolean" />
    <xs:attribute name="supportsversioning" type="xs:boolean" />
  </xs:complexType>

  <xs:complexType name="SetEmbeddedObjectRenderer">
