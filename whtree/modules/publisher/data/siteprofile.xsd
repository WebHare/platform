  <xs:complexType name="UrlEvents">
    <xs:attribute name="enabled" type="xs:boolean" />
  </xs:complexType>

  <xs:complexType name="MSWordConversion">
    <xs:sequence>
      <xs:element name="deletetextstyles" minOccurs="0" maxOccurs="1">
