    <xs:attribute name="anonymizeip" type="xs:boolean" />
  </xs:complexType>

  <xs:complexType name="ForumPlugin">
    <xs:sequence>
      <xs:element name="imagedisplaymethod" minOccurs="0" maxOccurs="1">
      </xs:element>
    </xs:sequence>
    <xs:attribute name="type">
      <xs:simpleType>
        <xs:restriction base="xs:string">
