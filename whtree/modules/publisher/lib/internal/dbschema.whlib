    , DATETIME "modificationdate"
    , INTEGER "postingtype"
    , STRING "content"
    , STRING subject
    , BOOLEAN "attachments"
    , STRING "postersource"
    , STRING "postername"
    , STRING "posteremail"
    , STRING "posteruid"
    , BOOLEAN "deleted"
