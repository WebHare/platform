    ; KEY id
    > forums
  , TABLE
    < INTEGER "id"
    , INTEGER "forum"
    , INTEGER "parent" NULL := 0
    , STRING "title"
    , STRING "description"
    , INTEGER "numtopics"
    , STRING "tag"
    , DATETIME "creationdate"
    , INTEGER "ordering"
    , BOOLEAN "newtopics"
