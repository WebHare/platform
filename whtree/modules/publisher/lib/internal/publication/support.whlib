<?wh

LOADLIB "wh::os.whlib";

LOADLIB "mod::system/lib/database.whlib";

BOOLEAN checked, usenew;

PUBLIC BOOLEAN FUNCTION UseNewPublisher()
{
  IF(NOT checked)
    usenew := GetDatabaseType() = "postgresql" OR GetEnvironmentVariable("WEBHARE_DEBUG_NEWPUBLISHER") != "";

  checked := TRUE;
  RETURN usenew;
}
