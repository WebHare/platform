<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="components"
         library="/lib/screens/components/sharedblocks.whlib">

  <messageboxes gid=".dialogs">
    <messagebox name="nosharedblocksources" icon="error" buttons="ok" />
  </messageboxes>

  <fragment name="sharedblocks" gid=".sharedblocks">
    <contents>
      <box name="overridetypebox" tid=".overridetype">
        <select name="overridetype"
                type="radio"
                flags="showblocks"
                onchange="onoverridetypechange"
                rowkeytype="integer"
                title="">
          <option rowkey="0" title="">
            <!-- inherit from parent -->
            <text name="inheritfrom" title="" />
          </option>
          <option rowkey="1" />  <!-- no blocks -->
          <option rowkey="2" flags="showblocks" />  <!-- use blocks -->
        </select>
      </box>
      <tabs name="tabs" type="server" height="1pr">
        <tab name="emptytab" title="" />
        <tab name="blockstab" title="">
          <heading tid=".sharedblocks" />
          <arrayedit name="sharedblocks"
                     width="1pr"
                     height="1pr"
                     minwidth="45x"
                     minheight="5gr"
                     onchange="onchange"
                     onmaprows="onmaprows"
                     onrowedit="onrowedit"
                     orderable="true">
            <column name="title" type="text" />
            <column name="type" type="text" />
          </arrayedit>
        </tab>
      </tabs>
    </contents>
  </fragment>

</screens>
