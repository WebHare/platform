<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:publisher="http://www.webhare.net/xmlns/publisher/components"
         lib="screens/commondialogs.whlib"
         gid="commondialogs">

  <messageboxes gid=".messageboxes">
    <messagebox name="movetotrashconfirm" icon="question" buttons="yes no" dontshowagain="yes" />
    <messagebox name="deleteconfirm" icon="question" buttons="yes no" />
    <messagebox name="deletesitesconfirm" icon="question" buttons="yes no" />
    <messagebox name="recyclesitesconfirm" icon="question" buttons="yes no" />
    <messagebox name="norightsforpublisher" icon="information" buttons="ok" />
    <messagebox name="cannotopenlink" icon="information" buttons="ok" />
    <messagebox name="cannotopencontentlisting" icon="information" buttons="ok" />
    <messagebox name="cannotfindobjecteditor" icon="warning" buttons="ok" />
    <messagebox name="deletefsobjects" icon="warning" buttons="yes no" />
    <messagebox name="fsobjectalreadyinlist" icon="warning" buttons="yes no" />
    <messagebox name="norightstoeditfile" icon="error" buttons="ok" />

    <messagebox name="replace_file_with_other_type" icon="warning" buttons="yes no" default="no" />
    <messagebox name="editordoesnotsupportversionedsites" icon="error" buttons="ok" />
  </messageboxes>


  <screen name="selectsitedialog" gid=".selectsitedialog" width="50x" height="30x" allowresize="true">
    <actions>
      <action name="selectsite" onexecute="submit" tid="tollium:common.actions.ok">
        <enableon source="sites" min="1" />
      </action>
    </actions>
    <body>
      <textedit name="filter" onchange="gotfilterchange" defaultbutton="selectbutton" width="1pr" />
      <list name="sites"
            selectmode="single"
            openaction="selectsite"
            rowkeytype="integer">
        <column name="name" type="text" />
      </list>
    </body>
    <footer layout="right">
      <line>
        <button name="selectbutton" action="selectsite" tid="tollium:common.actions.ok" />
        <button tolliumresult="cancel" tid="tollium:common.actions.cancel" />
      </line>
    </footer>
  </screen>

</screens>
