<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:publisher="http://www.webhare.net/xmlns/publisher/components"
         lib="screens/commondialogs.whlib"
         gid="commondialogs">

  <messageboxes gid=".messageboxes">
    <messagebox name="movetotrashconfirm" icon="question" buttons="yes no" dontshowagain="yes" />
    <messagebox name="deleteconfirm" icon="question" buttons="yes no" />
    <messagebox name="deletesitesconfirm" icon="question" buttons="yes no" />
    <messagebox name="recyclesitesconfirm" icon="question" buttons="yes no" />
    <messagebox name="norightsforpublisher" icon="information" buttons="ok" />
    <messagebox name="cannotopenlink" icon="information" buttons="ok" />
    <messagebox name="cannotopencontentlisting" icon="information" buttons="ok" />
    <messagebox name="cannotfindobjecteditor" icon="warning" buttons="ok" />
    <messagebox name="deletefsobjects" icon="warning" buttons="yes no" />
    <messagebox name="fsobjectalreadyinlist" icon="warning" buttons="yes no" />
    <messagebox name="norightstoeditfile" icon="error" buttons="ok" />

    <messagebox name="replace_file_with_other_type" icon="warning" buttons="yes no" default="no" />
    <messagebox name="editordoesnotsupportversionedsites" icon="error" buttons="ok" />
  </messageboxes>

  <screen name="browsewhfsobject"
          gid=".browsewhfsobject"
          title=""
          allowresize="true"
          height="600px"
          width="800px">
    <actions>
      <action name="openfilelist" onexecute="doopenfilelist" title="" />
      <action name="openinpublisher">
        <enableon source="folders" min="1" onexecute="doopeninpublisher_folders"/>
        <enableon source="fileslist" min="1" onexecute="doopeninpublisher_fileslist" />
      </action>
      <action name="submitaction" tid="tollium:common.actions.ok">
        <enableon source="folders" min="1" onexecute="dosubmitfolder" />
        <enableon source="fileslist" min="1" onexecute="dosubmitfile" />
        <enableon source="filesthumbs" min="1" onexecute="dosubmitfile"/>
      </action>
      <action name="gotoanything" ellipsis="true" onexecute="dogotoanything" shortcut="ctrl+shift+g"  />
    </actions>

    <menus>
      <menu name="folderlistmenu">
        <item action="openinpublisher" />
      </menu>
      <menu name="filelistmenu">
        <item action="openinpublisher" />
      </menu>
    </menus>

    <body name="browsebody" layout="left">
      <grid width="1pr">
        <col />
        <col width="1pr" />
        <row>
          <cell layout="left">
            <text name="descr" title="" />
          </cell>
          <cell layout="right">
            <select name="fileviewtype" type="pulldown" gid=".fileviews" onchange="doselectview" visible="false">
              <option rowkey="list" tid=".list" />
              <option rowkey="thumbnails" tid=".thumbnails" />
            </select>
          </cell>
        </row>
      </grid>

      <split type="horizontal" minwidth="50x" splitter="transparent">
        <part name="folderpart" minwidth="25x" width="2pr">
          <panel name="foldertreebuttonsholder" backgroundcolor="#f0f0f0" borders="top left right" spacers="left">
            <line layout="tabs-space">
              <text title="" valuetid=".folders"/>
              <spacer name="togglespacer" />
              <buttongroup borders="left" layout="horizontal">
                <button action="gotoanything" name="gotobutton" icon="tollium:folders/open" type="icon" title="" disablemode="hidden" />
                <button name="folderpathbutton" icon="tollium:folders/star" type="icon" title="" disablemode="hidden" />
              </buttongroup>
              <spacer name="toggleref" width="0" visible="false" />
            </line>
          </panel>
          <publisher:foldertree name="folders"
                                selectcontextmenu="folderlistmenu"
                                columnheaders="false"
                                selectmode="single"
                                showreadonly="false"
                                borders="left top bottom right"
                                width="1pr"
                                height="1pr"
                                minheight="18x" />
        </part>
        <part name="filepart" minwidth="40x" width="3pr">
          <tabs name="fileparttabs" type="server" height="1pr">
            <tab name="filelisttab" title="" spacers="none">
              <publisher:filelist name="fileslist"
                                  selectmode="single"
                                  selectcontextmenu="filelistmenu"
                                  openaction="openfilelist"
                                  hidefolders="true"
                                  showcolumns="name title modified"
                                  width="1pr"
                                  height="1pr"
                                  minheight="22x"
                                  borders="right bottom"
                                  />
            </tab>
            <tab name="thumbnailtab" title="">
              <panel height="1pr" width="1pr" borders="right top bottom">
              <publisher:thumbnailview name="filesthumbs"
                                         sortby="ordering"
                                         selectmode="single"
                                         openaction="openfilelist"
                                         orderable="false"
                                         width="1pr"
                                         height="1pr"
                                         minheight="22x"
                                         />

              </panel>
            </tab>
          </tabs>
        </part>
      </split>
      <panel name="customcomponents">
        <!-- Custom components can be added here using SetCustomComponents -->
      </panel>
    </body>
    <footer>
      <line layout="right">
        <button action="submitaction" />
        <button tid="~cancel" tolliumresult="cancel" />
      </line>
    </footer>
  </screen>

  <screen name="selectsitedialog" gid=".selectsitedialog" width="50x" height="30x" allowresize="true">
    <actions>
      <action name="selectsite" onexecute="submit" tid="tollium:common.actions.ok">
        <enableon source="sites" min="1" />
      </action>
    </actions>
    <body>
      <textedit name="filter" onchange="gotfilterchange" defaultbutton="selectbutton" width="1pr" />
      <list name="sites"
            selectmode="single"
            openaction="selectsite"
            rowkeytype="integer">
        <column name="name" type="text" />
      </list>
    </body>
    <footer layout="right">
      <line>
        <button name="selectbutton" action="selectsite" tid="tollium:common.actions.ok" />
        <button tolliumresult="cancel" tid="tollium:common.actions.cancel" />
      </line>
    </footer>
  </screen>

</screens>
