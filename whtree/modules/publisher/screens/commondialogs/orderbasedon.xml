<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="commondialogs"
         library="/lib/screens/commondialogs/orderbasedon.whlib">

  <screen name="orderbasedon" width="50x" footerbuttons="ok cancel" gid=".orderbasedon" tid=".screentitle">
    <body spacers="left right bottom">
      <line layout="left">
        <text width="1pr" title="" valuetid=".baseon_explain" wordwrap="true" />
      </line>
      <select name="base_on" type="radio">
        <option rowkey="filename" />
        <option rowkey="filetitle" />
        <option rowkey="modified" />
        <option rowkey="publishdate" />
      </select>
      <select name="ordering" type="radio">
        <option rowkey="up" />
        <option rowkey="down" />
      </select>
    </body>
  </screen>

</screens>
