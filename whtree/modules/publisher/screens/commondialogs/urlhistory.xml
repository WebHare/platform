<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:publisher="http://www.webhare.net/xmlns/publisher/components"
         lib="screens/commondialogs/urlhistory.whlib"
         gid="urlhistory">

  <screen name="urlhistory" tid=".screentitle" allowresize="true" width="100x" height="23x">
    <actions>
      <action name="bulkimport" onexecute="dobulkimport"/>
    </actions>
    <compositions>
      <record name="entries" />
    </compositions>
    <body>
      <!--line layout="left">
        <text width="1pr" wordwrap="true" title="" valuetid=".urlhistory_explain"/>
      </line-->
      <listedit name="history"
                composition="entries"
                ongetchildren="getchildren"
                onrowedit="dorowedit"
                onrowdelete="dorowdelete"
                buttons="add edit delete"
                width="1pr"
                height="1pr">
        <!-- FIXME: ListEdit & ArrayEdit don't support selectmode="multiple" yet; wire that up and have a good hard look at the APIs supporting it.
                onrowsdelete="dorowsdelete"
        -->
        <column name="url" type="text" />
        <column name="date" type="datetime" width="16x" storeutc="true" />
      </listedit>
    </body>
    <footer>
      <grid>
        <cell width="1pr">
          <button action="bulkimport" />
        </cell>
        <cell>
          <defaultformbuttons buttons="close"/>
        </cell>
      </grid>
    </footer>
  </screen>

  <screen name="editurlhistoryentrydlg" tid=".editscreentitle" allowresize="true" savestate="size">
    <body>
      <textedit name="url" required="true" width="1pr" validationchecks="url" minwidth="80x" placeholdertid="tollium:common.examples.https-url"/>
    </body>
    <footer>
      <defaultformbuttons buttons="ok cancel" />
    </footer>
  </screen>

  <screen name="inputbulkhistorydlg" tid=".screentitle" allowresize="true" minwidth="100x" minheight="9x" height="16x" savestate="size">
    <body>
      <line layout="left">
        <text title="" valuetid=".explanation" width="1pr" wordwrap="true"/>
      </line>
      <textarea name="urls" required="true" width="1pr" height="1pr" placeholdertid="tollium:common.examples.https-url"/>
    </body>
    <footer>
      <defaultformbuttons buttons="ok cancel" />
    </footer>
  </screen>

</screens>
