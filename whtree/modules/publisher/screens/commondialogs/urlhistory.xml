<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="urlhistory"
         library="/lib/screens/commondialogs/urlhistory.whlib">

  <screen name="urlhistory" width="100x" height="23x" allowresize="true" tid=".screentitle">
    <actions>
      <action name="bulkimport" onexecute="dobulkimport" />
    </actions>

    <compositions>
      <record name="entries" />
    </compositions>

    <body>
      <!-- line layout="left">
        <text width="1pr" wordwrap="true" title="" valuetid=".urlhistory_explain"/>
      </line -->
      <listedit composition="entries"
                name="history"
                width="1pr"
                height="1pr"
                buttons="add edit delete"
                ongetchildren="getchildren"
                onrowdelete="dorowdelete"
                onrowedit="dorowedit">
        <!-- FIXME: ListEdit & ArrayEdit don't support selectmode="multiple" yet; wire that up and have a good hard look at the APIs supporting it.
                onrowsdelete="dorowsdelete"
        -->
        <column name="url" type="text" />
        <column name="date" type="datetime" width="16x" storeutc="true" />
      </listedit>
    </body>

    <footer>
      <grid>
        <cell width="1pr">
          <button action="bulkimport" />
        </cell>
        <cell>
          <defaultformbuttons buttons="close" />
        </cell>
      </grid>
    </footer>
  </screen>

  <screen name="editurlhistoryentrydlg" allowresize="true" footerbuttons="ok cancel" savestate="size" tid=".editscreentitle">
    <body>
      <textedit name="url"
                width="1pr"
                minwidth="80x"
                placeholdertid="tollium:common.examples.https-url"
                required="true"
                validationchecks="url" />
    </body>
  </screen>

  <screen name="inputbulkhistorydlg"
          height="16x"
          minwidth="100x"
          minheight="9x"
          allowresize="true"
          footerbuttons="ok cancel"
          savestate="size"
          tid=".screentitle">
    <body>
      <line layout="left">
        <text width="1pr" title="" valuetid=".explanation" wordwrap="true" />
      </line>
      <textarea name="urls" width="1pr" height="1pr" placeholdertid="tollium:common.examples.https-url" required="true" />
    </body>
  </screen>

</screens>
