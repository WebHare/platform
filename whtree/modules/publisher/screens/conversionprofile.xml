<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" library="/lib/screens/conversionprofile.whlib">

  <messageboxes gid="profileeditor.dialogues">
    <messagebox name="profilecorrupted" icon="error" buttons="ok" />
    <messagebox name="nostylelinked" icon="warning" buttons="ok" />
    <messagebox name="nocustomstylenamegiven" icon="warning" buttons="ok" />
    <messagebox name="alreadylinkedtothisstyle" icon="warning" buttons="ok" />
    <messagebox name="warningdeletestyle" icon="question" buttons="yes no" />

    <!-- messagebox name="invalidvaluefor" icon="warning" buttons="ok" -->
  </messageboxes>

  <screen name="editor" allowresize="false" footerbuttons="ok cancel" tid="profileeditor.screentitle">
    <actions gid="profileeditor.actions">
      <action name="addstyle" onexecute="doaddstyle" />
      <action name="editstyle">
        <enableon source="styles" min="1" max="1" onexecute="doeditstyle" />
      </action>
      <action name="deletestyle">
        <enableon source="styles" min="1" onexecute="dodeletestyle" />
      </action>
    </actions>

    <menus>
      <menu name="menubar">
        <item title="Application" />
      </menu>
      <menu name="stylecontextmenu">
        <item action="editstyle" title="Edit" />
        <item action="deletestyle" title="Delete" />
      </menu>
    </menus>

    <body>
      <box height="1pr" gid="profileeditor" tid=".styles">
        <grid height="1pr">
          <col width="1pr" />
          <col />
          <row height="1pr">
            <cell>
              <panel height="1pr">
                <list name="styles"
                      height="15x"
                      gid="profileeditor.columns"
                      icons="tollium:status/negative tollium:status/checked"
                      openaction="editstyle"
                      selectcontextmenu="stylecontextmenu"
                      selectmode="multiple">
                  <column name="name" type="text" width="1pr" />
                  <column name="type" type="text" width="1pr" />
                  <column name="toc" type="text" width="5x" align="right" />
                  <column name="tag" type="text" width="5x" />
                  <column name="split" type="icon" width="4x" align="center" />
                </list>
              </panel>
            </cell>
            <cell gid=".actions">
              <button width="1pr" action="addstyle" tid=".addstyle" />
              <button width="1pr" action="editstyle" tid=".editstyle" />
              <button width="1pr" action="deletestyle" tid=".deletestyle" />
            </cell>
          </row>
        </grid>
      </box>
      <box name="docsummary" gid="profileeditor">
        <checkbox name="chknolonelytitle" labeltid=".noempty" onchange="doupdatenoempty" title="" />
        <checkbox name="chkemptydocobjects" labeltid=".nolonely" onchange="doupdateemptydocobjects" title="" />
      </box>
    </body>
  </screen>

  <screen name="styleeditor" allowresize="false" footerbuttons="ok cancel" tid="profileeditor.settings.screentitle">
    <actions>
    </actions>

    <compositions>
      <radiogroup name="linkedstyle" />
    </compositions>

    <body>
      <tabs name="tabs" gid="profileeditor.settings">
        <tab name="general" tid=".general">
          <box layout="left" tid=".style">
            <grid>
              <col />
              <col />
              <row>
                <cell>
                  <radiobutton name="existing"
                               enablecomponents="wordstyleid"
                               group="linkedstyle"
                               labeltid=".usewordstyle"
                               rowkey="existing"
                               title=""
                               value="true" />
                </cell>
                <cell>
                  <select name="wordstyleid" type="pulldown" title="" />
                </cell>
              </row>
              <row>
                <cell>
                  <radiobutton name="custom"
                               enablecomponents="customstylename"
                               group="linkedstyle"
                               labeltid=".usecustom"
                               rowkey="custom"
                               title="" />
                </cell>
                <cell>
                  <textedit name="customstylename" title="" />
                </cell>
              </row>
              <row>
                <cell colspan="2">
                  <radiobutton name="allother" group="linkedstyle" labeltid=".useimplicit" rowkey="allother" title="" />
                </cell>
              </row>
            </grid>
          </box>
          <box layout="left" tid=".other">
            <select name="tag" type="pulldown">
              <option rowkey="" title="" />
              <option rowkey="h1" title="&lt;H1>" />
              <option rowkey="h2" title="&lt;H2>" />
              <option rowkey="h3" title="&lt;H3>" />
              <option rowkey="h4" title="&lt;H4>" />
              <option rowkey="h5" title="&lt;H5>" />
              <option rowkey="h6" title="&lt;H6>" />
              <option rowkey="h7" title="&lt;H7>" />
              <option rowkey="h8" title="&lt;H8>" />
              <option rowkey="h9" title="&lt;H9>" />
            </select>
            <checkbox name="chksplit" labeltid=".splitdoconstyle" title="" />
          </box>
        </tab>
        <tab name="font">
          <box name="fontsettings" layout="left">
            <grid width="1pr">
              <col width="1pr" />
              <col width="1pr" />
              <row>
                <cell>
                  <checkbox name="overridefontfamily"
                            enablecomponents="fontfamily"
                            labeltid=".overridefontfamily"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <combobox name="fontfamily" enabled="false" errorlabeltid=".overridefontfamily" title="" />
                </cell>
              </row>
              <row>
                <cell>
                  <checkbox name="overridefontsize"
                            enablecomponents="fontsize"
                            labeltid=".overridefontsize"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <line>
                    <combobox name="fontsize"
                              width="8x"
                              enabled="false"
                              errorlabeltid=".overridefontsize"
                              maxlength="3"
                              title="">
                      <option title="6" />
                      <option title="7" />
                      <option title="8" />
                      <option title="9" />
                      <option title="10" />
                      <option title="11" />
                      <option title="12" />
                      <option title="14" />
                      <option title="16" />
                      <option title="18" />
                      <option title="20" />
                      <option title="24" />
                    </combobox>
                    <text valuetid=".points" />
                  </line>
                </cell>
              </row>
              <row>
                <cell>
                  <checkbox name="overridefontcolor"
                            enablecomponents="fontcolor"
                            labeltid=".overridefontcolor"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <line>
                    <textedit name="fontcolor" width="10x" enabled="false" errorlabeltid=".overridefontcolor" title="" />
                    <text valuetid=".hexnumber" />
                  </line>
                </cell>
              </row>
              <row>
                <cell>
                  <checkbox name="overridebgcolor"
                            enablecomponents="bgcolor"
                            labeltid=".overridebackgroundcolor"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <line>
                    <textedit name="bgcolor" width="10x" enabled="false" errorlabeltid=".overridebackgroundcolor" title="" />
                    <text valuetid=".hexnumber" />
                  </line>
                </cell>
              </row>
            </grid>
          </box>
          <box layout="left" tid=".fonteffects">
            <grid>
              <col />
              <col />
              <row>
                <cell>
                  <checkbox name="overridebold"
                            enablecomponents="optbold"
                            labeltid=".overridebold"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <select name="optbold" type="pulldown" enabled="false" errorlabeltid=".overridebold" title="">
                    <option rowkey="" invalidselection="true" title="" />
                    <option rowkey="never" tid=".neverbold" />
                    <option rowkey="always" tid=".alwaysbold" />
                  </select>
                </cell>
              </row>
              <row>
                <cell>
                  <checkbox name="overrideitalic"
                            enablecomponents="optitalic"
                            labeltid=".overrideitalic"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <select name="optitalic" type="pulldown" enabled="false" errorlabeltid=".overrideitalic" title="">
                    <option rowkey="" invalidselection="true" title="" />
                    <option rowkey="never" tid=".neveritalic" />
                    <option rowkey="always" tid=".alwaysitalic" />
                  </select>
                </cell>
              </row>
              <row>
                <cell>
                  <checkbox name="overrideunderline"
                            enablecomponents="optunderline"
                            labeltid=".overrideunderline"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <select name="optunderline" type="pulldown" enabled="false" errorlabeltid=".overrideunderline" title="">
                    <option rowkey="" invalidselection="true" title="" />
                    <option rowkey="never" tid=".neverunderline" />
                    <option rowkey="always" tid=".alwaysunderline" />
                  </select>
                </cell>
              </row>
              <row>
                <cell>
                  <checkbox name="overridecaps"
                            enablecomponents="optcaps"
                            labeltid=".overridecaps"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <select name="optcaps" type="pulldown" enabled="false" errorlabeltid=".overridecaps" title="">
                    <option rowkey="" invalidselection="true" title="" />
                    <option rowkey="allcaps" tid=".allcaps" />
                    <option rowkey="small" tid=".smallcaps" />
                    <option rowkey="never" tid=".nocaps" />
                  </select>
                </cell>
              </row>
            </grid>
          </box>
        </tab>
        <tab name="paragraph">
          <box layout="left" tid=".alignment">
            <grid>
              <col />
              <col />
              <row>
                <cell>
                  <checkbox name="overridealignment"
                            enablecomponents="optalign"
                            labeltid=".overridealignment"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <select name="optalign" type="pulldown" enabled="false" errorlabeltid=".overridealignment" title="">
                    <option rowkey="" invalidselection="true" />
                    <option rowkey="left" tid=".left" />
                    <option rowkey="right" tid=".right" />
                    <option rowkey="center" tid=".center" />
                    <option rowkey="justified" tid=".justify" />
                  </select>
                </cell>
              </row>
            </grid>
          </box>
          <box layout="left" tid=".indentation">
            <grid>
              <col />
              <col />
              <row>
                <cell>
                  <checkbox name="overrideleftindent"
                            enablecomponents="leftindentation"
                            labeltid=".overrideleftindentation"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <line>
                    <textedit name="leftindentation"
                              width="5x"
                              maxlength="3"
                              errorlabeltid=".overrideleftindentation"
                              title="" />
                    <text valuetid=".points" />
                  </line>
                </cell>
              </row>
              <row>
                <cell>
                  <checkbox name="overriderightindent"
                            enablecomponents="rightindentation"
                            labeltid=".overriderightindentation"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <line>
                    <textedit name="rightindentation"
                              width="5x"
                              maxlength="3"
                              errorlabeltid=".overriderightindentation"
                              title="" />
                    <text valuetid=".points" />
                  </line>
                </cell>
              </row>
              <row>
                <cell>
                  <checkbox name="overridefirstlineindent"
                            enablecomponents="firstlineindentation"
                            labeltid=".overridefirstlineindentation"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <line>
                    <textedit name="firstlineindentation"
                              width="5x"
                              maxlength="3"
                              errorlabeltid=".overridefirstlineindentation"
                              title="" />
                    <text valuetid=".points" />
                  </line>
                </cell>
              </row>
            </grid>
          </box>
          <box layout="left" tid=".spacing">
            <grid>
              <col />
              <col />
              <row>
                <cell>
                  <checkbox name="overridespaceabove"
                            enablecomponents="vertspaceabove"
                            labeltid=".overridespaceabove"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <line>
                    <textedit name="vertspaceabove" width="5x" errorlabeltid=".overridespaceabove" title="" />
                    <text valuetid=".points" />
                  </line>
                </cell>
              </row>
              <row>
                <cell>
                  <checkbox name="overridespacebelow"
                            enablecomponents="vertspacebelow"
                            labeltid=".overridespacebelow"
                            onchange="updaterequired"
                            title="" />
                </cell>
                <cell>
                  <line>
                    <textedit name="vertspacebelow" width="5x" errorlabeltid=".overridespacebelow" title="" />
                    <text valuetid=".points" />
                  </line>
                </cell>
              </row>
            </grid>
          </box>
        </tab>
        <tab name="advanced" layout="left">
          <panel layout="left">
            <text valuetid=".advancedexplanation" wordwrap="true" />
          </panel>
          <box tid=".exclusion">
            <checkbox name="dontpublish" labeltid=".dontpublish" title="" />
            <checkbox name="opthidenumbering" labeltid=".hidebullets" title="" />
            <checkbox name="optshowhidden" labeltid=".hiddentexts" title="" />
          </box>
          <textedit name="toclevel" width="5x" tid=".toclevel" />
          <checkbox name="chkistableheader" labeltid=".istableheader" title="" />
        </tab>
      </tabs>
    </body>
  </screen>

</screens>
