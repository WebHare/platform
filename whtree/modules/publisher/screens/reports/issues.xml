<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         lib="screens/reports/issues.whlib"
         gid="reports.issues"
         >

  <screen name="main"
          gid=".main" tid=".screentitle"
          icon="tollium:filemgr/mydocuments"
          allowresize="true"
          >
    <actions>
      <action name="viewinpublisher" onexecute="doviewinpublisher">
        <enableon source="errors" checkflags="viewable" min="1" max="1" />
      </action>
    </actions>
    <body>
      <list name="errors"
            selectmode="single"
            openaction="viewinpublisher"
            emptytid=".nosites"
            gid=".columns"
            width="1pr" height="1pr"
            minwidth="80x" minheight="5x"
            sortcolumn="name_order"
            flags="selectable viewable"
            selectableflags="selectable"
            >
        <column name="name" type="text" tree="true" sortkeyname="name_order" width="1pr" /><!-- iconname="icon" -->
        <column name="errordata" type="text" width="1pr" />
        <!--column name="url"  type="text"-->
        <column name="fullpath" type="text" width="2pr" />

        <style name="site" bold="true" />
      </list>
    </body>
  </screen>

</screens>
