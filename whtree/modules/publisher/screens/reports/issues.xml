<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="reports.issues"
         library="/lib/screens/reports/issues.whlib">

  <screen name="main" allowresize="true" gid=".main" icon="tollium:filemgr/mydocuments" tid=".screentitle">
    <actions>
      <action name="viewinpublisher" onexecute="doviewinpublisher">
        <enableon source="errors" min="1" max="1" checkflags="viewable" />
      </action>
    </actions>

    <body>
      <list name="errors"
            width="1pr"
            height="1pr"
            minwidth="80x"
            minheight="5x"
            emptytid=".nosites"
            flags="selectable viewable"
            gid=".columns"
            openaction="viewinpublisher"
            selectableflags="selectable"
            selectmode="single"
            sortcolumn="name_order">
        <column name="name" type="text" width="1pr" sortkeyname="name_order" tree="true" />  <!-- iconname="icon" -->
        <column name="errordata" type="text" width="1pr" />

        <!-- column name="url"  type="text" -->
        <column name="fullpath" type="text" width="2pr" />
        <style name="site" bold="true" />
      </list>
    </body>
  </screen>

</screens>
