<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         xmlns:p="http://www.webhare.net/xmlns/publisher/components"
         gid="components"
         library="intextlink.whlib">

  <fragment name="intextlink" gid=".intextlink">
    <contents>
      <select name="linktype" type="radio" onchange="onlinktypechange" required="true" rowkeytype="integer" title="">
        <option rowkey="0" tid=".linktype-nolink" />
        <option rowkey="1" tid=".linktype-external">
          <textedit name="external"
                    width="1pr"
                    errorlabeltid=".linktype-external"
                    placeholdertid="tollium:common.examples.https-url"
                    required="true"
                    title=""
                    validationchecks="url-plus-relative" />
        </option>
        <option rowkey="2" tid=".linktype-internal">
          <p:browseforobject name="internal"
                             width="2pr"
                             errorlabeltid=".linktype-internal"
                             required="true"
                             showclear="false"
                             title="" />
          <textedit name="append" width="1pr" />
        </option>
      </select>
    </contents>
  </fragment>

</screens>
