<screens xmlns="http://www.webhare.net/xmlns/tollium/screens" gid="tolliumcomponents.embedvideo" library="embedvideo.whlib">

  <fragment name="embedvideocomponent">
    <actions>
      <action name="preview" onexecute="dopreview" title="" />
      <action name="act_search" onexecute="doedit" title="" />
      <action name="clear" onexecute="doclear" title="" />
    </actions>
    <contents>
      <inlineblock name="thumbnail" borders="all" title="">
        <panel backgroundcolor="#ffffffcc" borders="bottom" spacers="left">
          <line layout="tabs-space">
            <text width="1pr" title="" value="" />
            <buttongroup borders="left" layout="horizontal">
              <button name="previewbutton" action="preview" hinttid=".preview_video" icon="tollium:actions/play" title="" />
              <button name="searchbutton" action="act_search" hinttid=".search_video" icon="tollium:actions/edit" title="" />
              <button name="clearbutton" action="clear" hinttid=".clear_video" icon="tollium:actions/delete" title="" />
            </buttongroup>
          </line>
        </panel>
        <panel height="1pr" />
        <panel backgroundcolor="#ffffffcc" borders="top" layout="left" spacers="left right">
          <line>
            <image name="videotype" width="16px" height="16px" title="" visible="false" />
            <text name="videotitle" width="1pr" ellipsis="true" title="" valuetid=".no_video" />
            <text name="duration" title="" value="" />
          </line>
        </panel>
      </inlineblock>
    </contents>
  </fragment>

  <screen name="searchvideo"
          height="52x"
          minwidth="120x"
          minheight="450px"
          allowresize="true"
          flags="movieselected"
          footerbuttons="ok cancel"
          savestate="size">
    <actions>
      <action name="clear" onexecute="doclear" tid="~clear" />
      <action name="search" onexecute="dosearch" title="" />
      <action name="preview" onexecute="dopreview" title="" />
      <action name="actsubmit" onexecute="dosubmit" title="" />
    </actions>

    <body>
      <line layout="left">
        <select name="network" type="pulldown" />
        <textedit name="movietext" width="1pr" defaultbutton="searchbutton" tid=".searchwords" value="" />
        <button name="searchbutton" action="search" tid="~search" />
        <button action="clear" />
      </line>

      <!-- This info text says that you can search by search terms AND ids, but ids doesn't work yet... so if that is
           fixed, re-enable this text -->
      <panel name="infotextpanel" layout="left" visible="true">
        <text selectable="true" title="" valuetid=".infotext" />
      </panel>
      <panel name="errortextpanel" layout="left" visible="false">
        <line>
          <image name="errorimage" width="16px" height="16px" title="" value="tollium:status/warning" />
          <text name="errortext" bold="true" title="" />
        </line>
      </panel>
      <panel name="searchresultscontainer" height="1pr" vscroll="true">
        <table name="searchresults" width="1pr" openaction="actsubmit" selectmode="single" />
      </panel>
    </body>
  </screen>

</screens>
