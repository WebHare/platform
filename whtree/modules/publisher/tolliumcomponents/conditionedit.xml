<screens xmlns="http://www.webhare.net/xmlns/tollium/screens"
         gid="tolliumcomponents.conditionedit"
         library="conditionedit.whlib">

  <fragment name="conditionedit">
    <contents>
      <panel name="condition" vscroll="true">
        <!-- 'condition' components are added dynamically -->
      </panel>
    </contents>
  </fragment>

  <fragment name="condition">
    <actions>
      <action name="addcondition" onexecute="doaddcondition" title="" />
      <action name="deletecondition" onexecute="dodeletecondition" title="" />
    </actions>
    <compositions>
      <dirtylistener name="dirtylistener" ondirty="OnConditionDirty" public="true" />
    </compositions>
    <contents>
      <line>
        <inlineblock name="subconditionline" title="">
          <image width="16px" height="16px" title="" value="tollium:forms/subcondition" />
        </inlineblock>
        <select name="field" type="pulldown" onchange="onfieldselect" title="" />
        <inlineblock name="conditioncontainer" width="1pr" title="">
          <!-- The condition fragment is loaded here -->
        </inlineblock>
        <button name="deleteconditionbutton" action="deletecondition" icon="tollium:buttonbar/minus" title="" />
        <button name="addconditionbutton" action="addcondition" icon="tollium:buttonbar/plus" title="" />
      </line>
      <line>
        <spacer name="subconditionspacer" width="16px" />
        <inlineblock name="subconditions" title="">
          <!-- 'condition' components are added dynamically -->
        </inlineblock>
      </line>
    </contents>
  </fragment>

</screens>
