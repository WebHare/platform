<siteprofile xmlns="http://www.webhare.net/xmlns/publisher/siteprofile">

  <!-- Anchor -->
  <widgettype namespace="http://www.webhare.net/xmlns/publisher/widgets/anchor"
              editextension="widgets.xml#anchorwidget"
              tid="widgets.anchorwidget.title"
              wittycomponent="widgets.witty:anchor">
    <members>
      <member name="name" type="string" />
    </members>
  </widgettype>

  <!-- Slideshow. Simple show with embedded images -->
  <widgettype namespace="http://www.webhare.net/xmlns/publisher/widgets/slideshow"
              editextension="widgets.xml#slideshowwidget"
              renderobjectname="/lib/widgets/slideshowwidget.whlib#SlideshowWidgetBase"
              tid="widgets.slideshowwidget.title"
              wittycomponent="widgets.witty:slideshow">
    <members>
      <member name="slides" type="array">
        <member name="title" type="string" />
        <member name="image" type="file" />
        <member name="link" type="intextlink" />
      </member>
    </members>
  </widgettype>

  <widgettype namespace="http://www.webhare.net/xmlns/publisher/widgets/twocolumns"
              editextension="widgets.xml#twocolumnswidget"
              renderobjectname="/lib/widgets/twocolumnswidget.whlib#TwoColumnsWidgetBase"
              tid="widgets.twocolumnswidget.title"
              wittycomponent="widgets.witty:twocolumns">
    <members>
      <member name="rtdleft" type="richdocument" />
      <member name="rtdright" type="richdocument" />
    </members>
  </widgettype>

  <!-- beacon widget -->
  <widgettype namespace="http://www.webhare.net/xmlns/publisher/widgets/triggerbeacon"
              editextension="beacon/beacon.xml#edittriggerbeaconwidget"
              icon="tollium:objects/beacon"
              renderobjectname="beacon/beacon.whlib#TriggerBeaconWidget"
              tid="widgets.triggerbeacon.widget">
    <members>
      <whfsref name="beacon" />
    </members>
  </widgettype>

  <!-- contentsnippet widget -->
  <widgettype namespace="http://www.webhare.net/xmlns/publisher/widgets/contentsnippet"
              editextension="contentsnippet/contentsnippet.xml#snippeteditor"
              icon="tollium:objects/snippet"
              renderobjectname="contentsnippet/contentsnippet.whlib#SnippetWidget"
              tid="widgets.contentsnippet.snippetwidget">
    <members>
      <richdocument name="snippettext" />
    </members>
  </widgettype>

  <!-- insert contentsnippet widget -->
  <widgettype namespace="http://www.webhare.net/xmlns/publisher/widgets/insertsnippet"
              editextension="contentsnippet/contentsnippet.xml#insertsnippeteditor"
              renderobjectname="contentsnippet/contentsnippet.whlib#InsertSnippetWidget"
              tid="widgets.contentsnippet.insertsnippetwidget">
    <members>
      <whfsref name="insertsnippet" />
    </members>
  </widgettype>

</siteprofile>
