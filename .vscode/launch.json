{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch Client",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/addons/vscode-extension"
      ],
      "outFiles": [
        "${workspaceRoot}/addons/vscode-extension/dist/extension.js"
      ],
      "preLaunchTask": "Compile VSCode Extension"
    }
  ]
}
