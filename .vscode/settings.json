{
  "[json]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  //Handles .tsx extension
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  //YAML settings (see https://github.com/redhat-developer/vscode-yaml#extension-settings)
  "yaml.schemas": {
    //Specify schemas for our YML files
    "./whtree/modules/platform/data/schemas/moduledefinition.schema.yml": "moduledefinition.yml",
    "./whtree/modules/platform/data/schemas/siteprofile.schema.yml": "*.siteprl.yml"
  },
  //Tell us where the embedded types are and encourage you to switch to those so the editor will match the validator
  "typescript.tsdk": "./whtree/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  //Prefer 'type' imports over default imports so esbuild's transpiler can remove them
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "files.associations": {
    "*.dbclient-js": "javascript",
    ".dockerignore": "ignore",
    "__hash_table": "cpp",
    "__split_buffer": "cpp",
    "__tree": "cpp",
    "array": "cpp",
    "bitset": "cpp",
    "deque": "cpp",
    "initializer_list": "cpp",
    "list": "cpp",
    "map": "cpp",
    "queue": "cpp",
    "set": "cpp",
    "stack": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "vector": "cpp",
    "regex": "cpp",
    "span": "cpp",
    "valarray": "cpp",
    "*.inc": "cpp"
  },
}
